;WRITE REAL-TIME JOYSTICK STATUS
;屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯

;------------------------------------------------------------------------------
;WRITE THE CURRENT JOYSTICK STATUS TO THE SCREEN
;Inputs:  DS = Local Data Area
;         ES = TSR Data Area
;         JoyStatusIndex (Joystick Index to test)
;Outputs: Writes the real-time status of a single Joystick to the Screen
;Changes:
;------------------------------------------------------------------------------
DoJoyStatus:
  CMP  JoyStatusIndex,-1  ;Anything to do?
  JE  >S000               ;If not, we're done
  TEST ProgFlags,InMemory ;If so, are we installed in memory yet?
  JNZ >S00                ;If so, show the data
  MOV  DX,JoyStatusErrMsg ;Point at first part of Error Message
  JMP  FinishDataErr      ;Terminate Program
S000:
  RET

S00:                            ;Do the Status thing!
  PUSH AX,BX,CX,DX,DI,SI        ;Save used registers
  OR   ES:TSRFlags,DisableSts   ;Mark as doing the Status
  OR   ProgFlags2,Write2Err     ;Write to ERR instead of Pause
  MOV  CL,JoyStatusIndex        ;Point at
  CALL DIIndex2Offset           ;  Joystick Data Structure (DI)
  LEA  SI,[DI].DIRawData        ;Point SI at the Raw Data
  ADD  DI,OFFSET DIControlsData ;Point DI at Translation Data
  CALL WriteJoyStatusHdr        ;Calculate and Write the Header
  JNZ >S10                      ;If OK, continue
  MOV  DX,NoStatusMsg           ;If not, write
  CALL WriteZErr                ;  "Nothing to Show" message
  MOV  AL,CL                    ;Write the Joystick
  CALL WriteNibbleHex           ;  Index Number
  CALL WriteDot                 ;Write a Period
  JMP >S80                      ;Done
S10:                            ;Loop to here until we stop
  CALL Write2Spaces             ;Move over
  MOV  BL,CTAxis                ;Start with axes
  XOR  BH,BH                    ;Start at Index 0
S20:                            ;Loop to here for each Control of this type
  CALL GetDIDataWord            ;Get Value
  JC  >S50                      ;If none there, we're done with this Control Type
  CMP  BL,CTButton              ;Is it a Button?
  JNE >S25                      ;If not, try next possibility
  MOV  AH,'.'                   ;Assume it's not pressed
  OR   AL,AL                    ;Is it pressed?
  JZ  >S23                      ;If not, continue
  MOV  AH,BH                    ;If so, get the Index
S21:                            ;Loop to here to get last numeral of Index
  CMP  AH,9                     ;Is it greater than 9?
  JBE >S22                      ;If not, it's OK
  SUB  AH,10                    ;If so, subtract 10
  JMP  S21                      ;Keep looking for the last numeral
S22:                            ;AH contains last numeral of Index
  ADD  AH,'0'                   ;Convert to an ASCII numeral
S23:                            ;AH contains charcater to write
  MOV  AL,AH                    ;Write the
  CALL WriteAL                  ;  character
  JMP >S30                      ;Continue
S25:                            ;Not a Bit
  CMP  BL,CTDPad                ;Need to write a Byte?
  JNE >S27                      ;If not, it's a Word
  CALL ByteToString             ;Write it
  JMP >S30                      ;Continue
S27:                            ;Write a word
  CALL WordToString             ;Write it
S30:                            ;Done writing this value
  CALL WriteSpace               ;Move over
  INC  BH                       ;Go to next Index
  JMP  S20                      ;Keep writing
S50:                            ;Done with this type of control
  CALL WriteSpace               ;Move over
  DEC  BL                       ;Go to next control type
  JZ  >S60                      ;If none left, we're done
  XOR  BH,BH                    ;Start at Index 0 again
  JMP  S20                      ;Keep going
S60:                            ;Done writing data
  MOV  DX,CrMsg                 ;Write a
  CALL WriteZErr                ;  Carriage Return
  CALL GetKey                   ;Key waiting?
  JNZ >S80                      ;If so, we're done
  MOV  AX,50                    ;If not, wait
  CALL DelayMSAX                 ;  a little bit
  JMP  S10                      ;Do it again
S80:                            ;Done
  CALL WriteCrLfErr             ;Move
  CALL WriteCrLfErr             ;  down
S90:                            ;Done
  AND  ProgFlags2,(NOT Write2Err) ;Write to Pause Again
  AND  ES:TSRFlags,(NOT DisableSts) ;Mark as done getting the Status
  POP  SI,DI,DX,CX,BX,AX        ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE THE STATUS HEADER MESSAGE TO THE SCREEN
;Inputs:  DS = Local data Area
;         ES = TSR Data Area
;         [SI] = Raw Data
;         [DI] = Controls Table Base Offset
;Outputs: ZF = Set if no Controls exist (no Joystick found)
;            = Clear if Header is OK
;              Writes appropriate Status Header Information to the screen
;Changes:
;------------------------------------------------------------------------------
WriteJoyStatusHdr:
  PUSH AX,BX,CX,DX    ;Save used registers
  PUSH DI,SI,BP       ;Save used registers
  XOR  BP,BP          ;Start Control Count at 0
  CALL WriteCrLfErr   ;Start a new line
  MOV  CH,3           ;Start with first line of Header
S10:                  ;Loop to here until we're done
  CALL Write2Spaces   ;Move over
  MOV  BL,CTAxis      ;Start with Axes
  XOR  BH,BH          ;Start at Index 0
S20:                  ;Loop to here for each Control of this type
  CALL GetDIDataWord  ;Get Value
  JC  >S50            ;If none there, we're done with this Control Type
  INC  BP             ;Increment Control Counter
  CMP  CH,3           ;Doing first line?
  JNE >S22            ;If not, handle second line
  MOV  DX,AxisMsg     ;Assume Axis
  CMP  BL,CTAxis      ;Is it?
  JE  >S40            ;If so, write it
  MOV  DX,ThrottleMsg ;Assume Throttle
  CMP  BL,CTThrottle  ;Is it?
  JE  >S40            ;If so, write it
  MOV  DX,SliderMsg   ;Assume Slider
  CMP  BL,CTSlider    ;Is it?
  JE  >S40            ;If so, write it
  MOV  DX,DPadMsg     ;Assume DPad/HatSwitch
  CMP  BL,CTDPad      ;Is it?
  JE  >S40            ;If so, write it
  MOV  DX,ButtonMsg   ;If not, it's a Button
  JMP >S40            ;Write it
S22:                  ;Doing second line
  CMP  CH,2           ;Doing second line?
  JNE >S30            ;If not, handle third line
  MOV  AL,BH          ;Set AL to Index Number
  CMP  BL,CTSlider    ;Write a Word?
  JB  >S23            ;If not, continue
  CALL Write2Spaces   ;If so, write 2 spaces
S23:                  ;Handled
  CMP  BL,CTDPad      ;Write a Byte?
  JB  >S24            ;If not, continue
  CALL Write2Spaces   ;If so, write 2 spaces
S24:                  ;Done writing spaces
  CALL WriteNumeralAL ;Write the Index
  CALL WriteSpace     ;Move over
  JMP >S45            ;Continue
S101:
  JMP S10             ;To avoid JMP > 128
S30:                  ;Doing third line
  MOV  DX,LineMsg5    ;Assume it's a Word
  CMP  BL,CTSlider    ;Is it?
  JAE >S40            ;If so, write it
  MOV  DX,LineMsg3    ;Assume it's a Byte
  CMP  BL,CTDPad      ;Is it?
  JE  >S40            ;If so, write it
  MOV  DX,LineMsg1    ;If not, it's a Bit
S40:                  ;Have correct Control Header String
  CALL WriteZErr      ;Write it
S45:                  ;Done writing Header Word
  INC  BH             ;Go to next Index
  JMP  S20            ;Keep looking
S50:                  ;Done with this type of control
  CALL WriteSpace     ;Move over
  DEC  BL             ;Go to next control type
  JZ  >S60            ;If none left, we're done
  XOR  BH,BH          ;Start at Index 0 again
  JMP  S20            ;Keep going
S60:                  ;Done writing data
  OR   BP,BP          ;Did we write anything?
  JZ  >S90            ;If not, quit
  CALL WriteCrLfErr   ;Write a new line
  DEC  CH             ;Go to next line of Header
  JNZ  S101           ;Do it again
S90:                  ;Done
  OR   BP,BP          ;Any valid controls?
  POP  BP,SI,DI       ;Restore used registers
  POP  DX,CX,BX,AX    ;Restore used registers
  RET


