;CODE TO HANDLE I/O VIRTUALIZATION
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;ISSUE A VIRTUALIZE I/O REQUEST TO THE MEMORY MANAGER
;Inputs:  CS = DS = TSR Data Area
;         VirtIOHandle (-1 if not Virtualized yet)
;Outputs: ZF = Clear if OK (I/O is Virtualized)
;                VirtIOHandle is stored
;            = Set if error
;                VirtIOHandle = unchanged (-1)
;Changes:
;NOTES: This must be called with CS = DS, and DS must be our TSR Data Area
;         (the segment that will be used when the I/O Virtualization Code
;         is called).  Therefore, this code is in the TSR portion of our
;         program.  Normally, something like this would be in the
;         initialization code instead of the TSR, but there are special
;         circumstances here.
;------------------------------------------------------------------------------
InstallVIO:
  PUSH AX,BX,CX         ;Save used registers
  PUSH EDX,DI,SI        ;Save used registers
  CMP  VirtIOHandle,-1  ;Already virtualized?
  JNE >V90              ;If so, we're done
  MOV  AX,VirtIOFuncAX  ;Function 4A15h (Manipulate Virtual I/O Handler)
  MOV  BX,VirtIOBXInst  ;BX = Function  = Install
  MOV  CX,VirtIOTblSize ;CX = Number if Ports to Trap (# Entries in Table)
  MOV  SI,VirtIOTable   ;DS:[SI] = I/O Dispatch Table
  MOV  DX,[SI]          ;EDX =
  SHL  EDX,16           ;  Port Number
  MOV  DX,[SI]          ;  Range
  MOV  DI,LastTSRByte   ;DI = Number of Bytes needed in Segments
  STC                   ;Preset Error Flag
  INT  2Fh              ;Do it (returns CF)
  JC  >V90              ;If error, quit
  MOV  VirtIOHandle,AX  ;If OK, store the Handle Number
V90:                    ;Done
  CMP  VirtIOHandle,-1  ;Set return flag
  POP  SI,DI,EDX        ;Restore used registers
  POP  CX,BX,AX         ;Restore used registers
  RET

;------------------------------------------------------------------------------
;UNINSTALL THE I/O VIRTUALIZATION
;Inputs:  CS = DS = TSR Data Area
;         VirtIOHandle
;Outputs: CF = Clear if OK (I/O virtualization is uninstalled)
;            = Set if error
;Changes:
;NOTES: This code does not actually need to be called from the TSR, unlike
;         the initialization code directly above.  We are putting it here
;         simply for convenience, and because it's small.  If it was a large,
;         complicated piece of code, we wouldn't put it in the TSR section
;         even for the sake of convenience.
;------------------------------------------------------------------------------
UninstallVIO:
  PUSH AX,BX,SI          ;Save used registers
  MOV  SI,VirtIOHandle   ;SI = Handle
  CMP  SI,-1             ;Did virtualization work?
  JNE >U20               ;If so, continue
  CLC                    ;If not, set Uninstalled return code
  JMP >U90               ;Done
U20:                     ;We are virtualized
  MOV  AX,VirtIOFuncAX   ;Function 4A15h (Manipulate Virtual I/O Handler)
  MOV  BX,VirtIOBXUninst ;BX = Function = Uninstall
                         ;SI = Handle
  STC                    ;Preset Error Flag
  INT  2Fh               ;Do it (returns CF)
  JC  >U90               ;If it didn't work, we're done
  MOV  VirtIOHandle,-1   ;If it did, mark Handle as unused
U90:                     ;Done (CF set as needed)
  POP  SI,BX,AX          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;PERFORM THE PM CALL FOR I/O PORT 201h ACCESS
;Inputs:  CS = PM CS Selector
;         DS = PM DS Selector (Alias for CS)
;         AL/AX/EAX = Input Value (if OUT DX,Ax)
;         CL = Direction
;              Bit 2 (04h) Clear if IN Ax,DX
;                          Set if OUT DX,Ax
;         DX = Port Number Accessed
;Outputs: CF = Clear if I/O has been virtualized
;                AL = Value to return if call was IN Ax,DX
;                     EMM386 does CBW to AL if call was IN AX,DX
;                     EMM386 hangs on IN EAX,DX
;              Set if I/O is not virtualized
;                PM Virtualization hander gets data from actual I/O Port
;Changes:
;NOTE: This procedure is called from 16-bit protected mode, NOT from
;        V86 or real mode.  For the most part, that doesn't really matter,
;        except for one thing -- the segment registers.  The segment
;        registers are actually indexes to entries in a not-easy-to-access
;        table, NOT segment addresses as is usually the case.  The practical
;        implication of that is that we cannot issue any FAR procedure calls
;        (including INT requests?).  We can freely access code and data
;        within our own segment (the TSR), but can't access any memory outside
;        our segment.
;      This must end in a RETF, not a RET!
;------------------------------------------------------------------------------
PMCode201:
  TEST TSRFlags,DisableSts ;Are we Disabled?
  JNZ >W70                 ;If so, quit
  CALL GotAJoystick        ;Are there any Enabled Joysticks?
  JC  >W70                 ;If not, quit
W10:                       ;Need to process things
  TEST CL,PMCallCXOut      ;Is it an OUT DX,AL?
  JNZ >W50                 ;If so, handle it
W20:                       ;Is IN AL,DX
  PUSH BP,ES               ;Save used registers
  MOV  ES,DS               ;ES = TSR Data Area
  CALL CalcElapsedTimeBP   ;Calculate elapsed Time since OUT instruction (BP)
  MOV  AL,BtnMask          ;High Nibble of AL = Button Status
  CALL CalcAxesBits        ;Calculate Axis Data (AL Low Nibble)
  POP  ES,BP               ;Restore used registers
  JMP >W80                 ;Done
W50:                       ;Is OUT DX,AL
  PUSH AX                  ;Save used registers
  CALL GetTimer            ;Get the current Timer value
  MOV  StartTimer,AX       ;Store it
  OR   TSRFlags2,SameTick  ;Mark the Timer Tick Flag
  POP  AX                  ;Restore used registers
  JMP >W80                 ;Done
W70:                       ;Not virtualized
  STC                      ;Set return flag
  JMP >W90                 ;Done
W80:                       ;Virtualized
  CLC                      ;Set return flag
W90:                       ;Done
  RETF

;------------------------------------------------------------------------------
;CALCULATE THE ELAPSED TIME SINCE THE ORIGINAL OUT DX,AL
;Inputs:  DS = ES = TSR Data Selector
;         StartTimer
;         TSRFlags2.SameTick
;Outputs: ZF = Set if error (Elapsed Time unknown)
;                BP = 1-
;            = Clear if OK
;                BP = Elapsed Time
;Changes:
;------------------------------------------------------------------------------
CalcElapsedTimeBP:
  PUSH AX                 ;Save used registers
  MOV  BP,-1              ;Assume Unknown Time
  TEST TSRFlags2,SameTick ;Has the Timer Tick "rolled"?
  JZ  >P90                ;If so, we're done
  MOV  BP,StartTimer      ;BP = Starting Timer
  CALL GetTimer           ;AX = Current Timer
  SUB  BP,AX              ;BP = Elapsed Time
P90:                      ;Done
  CMP  BP,-1              ;Set return flag
  POP  AX                 ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CALCULATE THE APPROPRIATE BIT MASK FOR THE VIRTUALIZED IN AL,DX FUNCTION
;Inputs:  DS = ES = TSR Data Selector
;         BP = Elapsed Time since OUT DX,AL was issued
;         CLD already issued
;Outputs: AL (Low Nibble)  = Appropriate Bit Mask
;         AL (High Nibble) = Unchanged
;Changes:
;------------------------------------------------------------------------------
CalcAxesBits:
  PUSH BX,CX,DX,DI,SI    ;Save used registers
  MOV  BX,AX             ;Save original AX
  AND  BL,0F0h           ;Mask out low nibble of BL
  MOV  SI,OFFSET AXValue ;[SI] = First coordinate to get
  MOV  CX,4              ;CX = Number of coordinates to get
  MOV  DL,1              ;DL = Bit mask to use
X10:                     ;Loop to here for each Axis
  LODSW                  ;Get the next Axis word
  CALL CalcAxisBit       ;Mask in the coordinaet bit as appropriate
  LOOP X10               ;Keep going until we're done
  MOV  AX,BX             ;Put return value in AX
  POP  SI,DI,DX,CX,BX    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CALCULATE AND SET AN APPROPRIATE BIT FOR AN AXIS CONTROL
;Inputs:  DS = ES = TSR Data Selector
;         BP = Elapsed Time since OUT DX,AL was issued (-1 if expired)
;         AX = Coordinate, as appropriate for BIOS (INT 15h) call
;         DL = Bit Mask to use
;         BL = Current Bit mask (in low nibble)
;              Bit we're working with preset to 0 (we set it to 1 if approp)
;Outputs: BL = Bit masked in if appropriate
;         DL = DL SHL 1
;         AX = AX SHL 4
;Changes: AX
;------------------------------------------------------------------------------
CalcAxisBit:
  SHL  AX,4  ;Multiply by 16 (appropriate for direct I/O calls)
  JZ  >B80   ;If invalid coordinate, bit is always 1
  CMP  BP,-1 ;Expired Timer after last OUT?
  JE  >B90   ;If so, bit is 0
  CMP  BP,AX ;Are we still within the timeout parameters?
  JAE >B90   ;If not, the bit is 0
B80:         ;Need to set the bit
  OR   BL,DL ;Mask in the bit
B90:         ;Done
  SHL  DL,1  ;Shift the bit mask over for next time
  RET

;------------------------------------------------------------------------------
;GET CURRENT TIMER COUNTER FROM PORT 40h (THE CLOCK INTERRUPT)
;Inputs:
;Outputs: AX = Current timer counter word
;Changes:
;------------------------------------------------------------------------------
GetTimer:
  PUSHF       ;Save flags
  CLI         ;Disable interrupts
  MOV  AL,06h ;Bits 7:6 =  00 = Timer 0
              ;Bits 5:4 =  00 = Latch Counter
              ;Bits 3:1 = 011 = Mode 3 (Square Wave)
              ;Bit    0 =   0 = Binary Counter (16 bits)
  OUT  43h,AL ;Tell the PIT what we're going to do
  IN   AL,40h ;Get LSB of timer counter
  MOV  AH,AL  ;Save it
  IN   AL,40h ;Get MSB of timer counter
  XCHG AH,AL  ;Put things in the right order
  POPF        ;Restore flags
  RET


