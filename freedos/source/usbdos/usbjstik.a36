;屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯屯

;------------------------------------------------------------------------------
;WRITE THE CURRENT PROGRAM STATUS TO THE SCREEN
;Inputs:  ES = TSR Data Area
;         Status (Flag)
;Outputs: Writes a bunch of stuff to the screen if Status Flag is True
;Changes:
;------------------------------------------------------------------------------
DoStatus:
  TEST StatusFlags,Status ;Need to to anything?
  JZ  >S000               ;If not, quit
  TEST ProgFlags,InMemory ;Are we installed in memory yet?
  JNZ >S00                ;If so, go ahead and do it
  MOV  DX,StatusErrMsg    ;If not, point at the first part of Error Message
  JMP  FinishDataErr      ;Terminate program
S000:
  RET

S00:
  PUSH AX,BX,CX,DX,SI,BP       ;Save used registers

  MOV  DX,StatusMsg1           ;Write Number of Buttons
  CALL WriteZPause
  MOV  AL,4
  TEST ES:TSRFlags,Buttons15
  JZ  >S10
  MOV  AL,15
S10:
  CALL ByteToString

  MOV  DX,StatusMsg2           ;Write ThrustMaster Status
  CALL WriteZPause
  MOV  DX,YesMsg
  TEST ES:TSRFlags,ThrustMaster
  JNZ >S20
  MOV  DX,NoMsgS
S20:
  CALL WriteZPause

  MOV  DX,StatusMsg3           ;Write I/O Virtualization Status
  CALL WriteZPause
  CMP  ES:VirtIOHandle,-1
  JE  >S30
  MOV  AX,ES:VirtIOTable[0]
  CALL WriteWordHex
  CALL WriteHexEnd
  JMP >S35
S30:
  CALL Write2Spaces
  MOV  DX,NoMsgS
  CALL WriteZPause
S35:

  MOV  BX,0300h                ;BL = Index (0), BH = indent size
  CALL DoIndividualStatus      ;Do Individual Status for Index 0

  MOV  DX,StatusMsg4           ;Write BIOS Center Coordinate
  CALL WriteZPause
  MOV  AX,ES:NormalizeMax
  SHR  AX,1
  CALL WordToString
  CALL DoIndividualStatus      ;Do Individual Status for Index 1

  MOV  DX,StatusMsg5           ;Write Movement Percent
  CALL WriteZPause
  MOV  AX,ES:MovePercent
  CALL WordToString
  CALL DoIndividualStatus      ;Do Individual Status for Index 2

  MOV  DX,Status1EndMsg        ;Write last line
  CALL WriteZPause             ;  of Combined Table
  CALL DoIndividualStatus      ;Do Individual Status for Index 3

  MOV  BH,35                   ;Increase Indent
  CALL DoIndividualStatus      ;Do Individual Status for Index 4
  CALL DoIndividualStatus      ;Do Individual Status for Index 5
  CALL DoIndividualStatus      ;Do Individual Status for Index 6
  CALL DoIndividualStatus      ;Do Individual Status for Index 7
  MOV  DX,Status2EndMsg        ;Write the last line of the Individual Table,
  CALL WriteZPause             ;  first line of the Ignore Table
  CALL WriteXlatTable          ;Write the Translation Table Contents
S80:                           ;Done with User Table
  CALL WriteCrLfPause          ;Move down
S90:                           ;Done
  POP  BP,SI,DX,CX,BX,AX       ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE THE STATUS OF AN INDIVIDUAL DEVICE TO THE SCREEN
;Inputs:  BL = Device Index to write
;         BH = Number of spaces to write at beginning of line (Indent)
;         ES = TSR Data Area
;Outputs: To Screen
;Changes: BL is incremented
;------------------------------------------------------------------------------
DoIndividualStatus:
  PUSH AX,CX,DX,DI                 ;Save used registers
  MOV  CL,BH                       ;Do the
  CALL WriteSpaces                 ;  Indent
  MOV  AL,BL                       ;Write the Index Number
  CALL WriteSpace
  CALL WriteNibbleHex
  CALL WriteSpace
  CALL DIIndex2OffsetBL            ;Convert Index to Offset (DI)
  TEST ES:[DI].DIFlags,DIFlagInUse ;Valid Table Entry?
  JZ  >I90                         ;If not, we're done with this one
  CALL WriteSpace                  ;Write Number of Controls
  CALL WriteNumControls
  MOV  AL,ES:[DI].DIHostIndex      ;Write Host Index
  CALL ByteToString
  CALL WriteSpace                  ;Write Device Address
  MOV  AL,ES:[DI].DIDvcAddress
  CALL ByteToString
  CALL WriteSpace                  ;Write Interface Number
  MOV  AL,ES:[DI].DIInterfaceNum
  CALL ByteToString
I90:                               ;Done
  CALL WriteCrLfPause              ;Start a new line
  INC  BL                          ;Increment Index
  POP  DI,DX,CX,AX                 ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE QUANTITIES OF CONTROLS TO THRE SCREEN
;Inputs:   ES  = TSR Data Area
;         [DI] = Device Info Table Entry
;Outputs: Writes all Control Quantities to the Screen
;Changes:
;------------------------------------------------------------------------------
WriteNumControls:
  PUSH AX,BX,DI,SI              ;Save used registers
  LEA  SI,[DI].DIRawData        ;Point SI at the Raw Data
  ADD  DI,OFFSET DIControlsData ;Point DI at Translation Data
  MOV  BL,CTAxis                ;Start with Axes
C10:                            ;Loop to here for each Control Type
  XOR  BH,BH                    ;Start with Index 0
C20:                            ;Loop to here for each Control Index
  CALL GetDIDataWord            ;Try to get the Data
  JC  >C40                      ;If no Control here, we're done
  INC  BH                       ;Increment Control Index
  JMP  C20                      ;Keep going
C40:                            ;Done Counting controls
  MOV  AL,BH                    ;Write the Number
  CALL ByteToString             ;  of Controls
  CALL WriteSpace               ;Move over
  DEC  BL                       ;Go to next Control Type
  JNZ  C10                      ;If valid, keep writing
  POP  SI,DI,BX,AX              ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE THE CONTENTS OF THE TRANSLATION TABLE TO THE SCREEN
;Inputs:  ES = TSR Data Area
;Outputs: Writes Translation Table Contents to the Screen
;Changes:
;------------------------------------------------------------------------------
WriteXlatTable:
  PUSH BX,CX,DX,DI         ;Save used registers
  MOV  BX,AXXlat           ;[BX] = Axis AX Translation
  MOV  CH,1                ;CH = Line Number
  MOV  CL,21               ;CL = Number of Spacing characters
  MOV  DX,XlatMsgList      ;[BP] = Analog Joystick Description
X10:                       ;Loop to here for each line
  CMP  CH,5                ;Should we write anything in Column 1?
  JA  >X15                 ;If not, skip it
  CALL WriteZPause         ;Write the Analog Description
  ADD  DX,4                ;Update the Description pointer
  CALL WriteSpace          ;Move over
  XOR  DI,DI               ;Translation Table Offset = 0
  CALL WriteXlatEntry      ;Write the Translation Table Entry
  JMP >X20                 ;Done with column 1
X15:                       ;Don't write Column 1
  CALL WriteSpaces         ;Skip this column
X20:                       ;Done with Column 1
  CALL WriteCSep           ;Write the Separator Line
  CALL WriteZPause         ;Write the Analog Description
  ADD  DX,4                ;Update the Description pointer
  CALL WriteSpace          ;Move over
  MOV  DI,(A01Xlat-AXXlat) ;DI = Translation Table Offset
  CALL WriteXlatEntry      ;Write the Translation Table Entry
X30:                       ;Done with Column 2
  CALL WriteCSep           ;Write the Separator Line
  CMP  CH,8                ;Is this the last Line?
  JE  >X90                 ;If so, we're done
  CALL WriteZPause         ;Write the Analog Description
  ADD  DX,4                ;Update the Description pointer
  CALL WriteSpace          ;Move over
  MOV  DI,(A09Xlat-AXXlat) ;DI = Translation Table Offset
  CALL WriteXlatEntry      ;Write the Translation Table Entry
  CALL WriteCrLfPause      ;Move down
  INC  CH                  ;Increment the Line Number
  ADD  BX,XlatStrucSize    ;Point at the next Table entry
  JMP  X10                 ;Keep going until we're done
X90:                       ;Done writing Table contents
  MOV  DX,MapEndMsg        ;Write the
  CALL WriteZPause         ;  Table Footer
  CALL TestXlatDups        ;Test for Duplicate Translation Table entries
  JNC >X95                 ;If none, quit
  MOV  DX,DuplicatesMsg    ;If so, warn
  CALL WriteZPause         ;  the user
X95:                       ;Done
  POP  DI,DX,CX,BX         ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE THE CONTENTS OF A DESCRIPTION TABLE ENTRY
;Inputs:  DS = Local Data Area
;         ES = TSR Data Area
;         ES:[BX+DI] = Translation Table Entry to write
;Outputs: To Screen
;Changes:
;------------------------------------------------------------------------------
WriteXlatEntry:
  PUSH AX                          ;Save used registers
  MOV  AX,W ES:[BX+DI].XlatJIndex  ;Write the
  CALL ByteToString                ;  Joystick Index
  CALL WriteCtlType                ;Write the Control Type Description
  MOV  AX,W ES:[BX+DI].XlatCIndex  ;Get Control Indices
  CALL ByteToString                ;Write Index 1
  CALL WriteSpace                  ;Move over
  CMP  AH,-1                       ;Valid Control Index 2?
  JE  >E50                         ;If not, write Spaces
  CMP  ES:[BX+DI].XlatCType,CTDPad ;Are we doing a DPad?
  JE  >E20                         ;If so, handle it
E10:                               ;Writing Button Control Index 2
  MOV  AL,AH                       ;Write Button
  CALL ByteToString                ;  Index 2
  JMP >E90                         ;Done
E20:                               ;Writing DPad Control Index 2 (Axis)
  CALL Write2Spaces                ;Move over
  MOV  AL,'X'                      ;Assume Axis X
  OR   AH,AH                       ;Is it Axis X?
  JZ  >E25                         ;If so, continue
  INC  AL                          ;If not, it's Axis Y
E25:                               ;AL = Axis Description
  CALL WriteAL                     ;Write the Axis Description
  JMP >E90                         ;Done
E50:                               ;Invalid Second Index
  CALL Write3Spaces                ;Move over
E90:                               ;Done
  POP  AX                          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE THE CONTROL TYPE DESCRIPTION
;Inputs:  DS = Local Data Area
;         AH = Control Type (CTbutton, etc)
;Outputs: To Screen
;Changes:
;------------------------------------------------------------------------------
WriteCtlType:
  PUSH AX,DX         ;Save used registers
  CALL WriteSpace    ;Move over
  SUB  AH,CTButton   ;Convert
  MOV  AL,CMsgSize   ;  Control Type
  MUL  AH            ;  to a String Offset
  MOV  DX,CMsgButton ;Point [DX]
  ADD  DX,AX         ;  at the String
  CALL WriteZPause   ;Write it
  CALL WriteSpace    ;Move over
  POP  DX,AX         ;Restore used registers
  RET

;------------------------------------------------------------------------------
;TEST FOR DUPLICATIONS (POSSIBLE CONFLICTS) IN THE TRANSLATION TABLE
;Inputs:  DS = Local Data Area
;         ES = TSR Data Area
;         Translation table (AXXlat, etc.)
;Outputs: CF = Clear if no Duplicates
;            = Set if there is at least one Duplicate
;Changes:
;------------------------------------------------------------------------------
TestXlatDups:
  PUSH AX,BX,CX,DX,DI,SI,DS  ;Save used registers
  MOV  DS,ES                 ;DS = TSR Data ARea
  MOV  CX,(NumXlats-1)       ;CX = Number of Tests to perform
  MOV  SI,AXXlat             ;[SI] = Translation Table
D10:                         ;Loop to here for each Test
  MOV  AX,W [SI].XlatJIndex  ;AL = Joystick Index, AH = Control Type
  MOV  BX,W [SI].XlatCIndex  ;BL = Control Index 1, BH = Control Index 2
  LEA  DI,[SI].XlatStrucSize ;[DI] = Next Translation entry
  MOV  DX,CX                 ;Save outer Loop Counter
;  DEC  CX                    ;Inner Loop Counter = Outer Loop Counter - 1
D20:                         ;Loop to here for each SubTest
  CMP  AX,W [DI].XlatJIndex  ;Are the Joystick Index & Control Type the Same?
  JNE >D40                   ;If not, it can't be a Duplicate
  CMP  AH,CTButton           ;Is it a Button?
  JE  >D30                   ;If so, jump to handle it
  CMP  BX,W [DI].XlatCIndex  ;If not, do the Control Indices match?
  JNE >D40                   ;If not, it's not a Duplicate
  JMP >D70                   ;If so, it is a Duplicate
D30:                         ;It's a Button
  CMP  BL,[DI].XlatCIndex    ;Does the first Index match?
  JE  >D70                   ;If so, it's a Duplicate
  CMP  BL,[DI].XlatCIndex2   ;if not, does the second Index match?
  JE  >D70                   ;If so, it's a Duplicate
  CMP  BH,-1                 ;Is the second Index valid?
  JE  >D40                   ;If not, it can't be a Duplicate
  CMP  BH,[DI].XlatCIndex    ;Does the first Index match?
  JE  >D70                   ;If so, it's a Duplicate
  CMP  [DI].XlatCIndex2,-1   ;Is the second Index valid?
  JE  >D40                   ;If not, it can't be a Duplicate
  CMP  BH,[DI].XlatCIndex2   ;Does the second Index match?
  JE  >D70                   ;If so, it's a Duplicate
D40:                         ;Done with this Inner Loop entry
  ADD  DI,XlatStrucSize      ;Point at the next Table Entry
  LOOP D20                   ;Keep going until we're done
D50:                         ;Done with this Outer Loop entry
  MOV  CX,DX                 ;Restore Outer Loop Counter
  ADD  SI,XlatStrucSize      ;Point at the next Table Entry
  LOOP D10                   ;Keep going until we're done
  JMP >D80                   ;No Duplicates!
D70:                         ;Error (at least one duplicate)
  STC                        ;Set return flag
  JMP >D90                   ;Done
D80:                         ;OK (no duplicates)
  CLC                        ;Set return flag
D90:                         ;Done
  POP  DS,SI,DI,DX,CX,BX,AX  ;Restore used registers
  RET


