;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北
;SUPPORT CODE TO RELEASE/RESET A DEVICE
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;COMPLETELY RELEASE A DEVICE THAT WE CURRENTLY OWN (POSSIBLY INCLUDING A RESET)
;Inputs:   DS = ES = TSR Data Area
;         [DI] = Device Info Entry to Release
;         [SI] = Int 14 Request to use
;Outputs: Releases Device Entry
;           Closes Periodic Handle
;           Unregisters as Interface Owner
;           Resets Device (if appropriate)
;           Resets Device Info Entry
;Changes:
;------------------------------------------------------------------------------
RlsDvcNoResetDI:
  PUSH BX                                        ;Save used registers
  XOR  BL,BL                                     ;Mark as No Reset
  JMP >R00                                       ;Do it
RlsDvcDoResetDI:
  PUSH BX                                        ;Save used registers
  MOV  BL,-1                                     ;Mark as a Reset
;  JMP >R00                                       ;Do it
R00:
  PUSH AX                                        ;Save used registers
  MOV  W [SI].I14RCallBackAddr[0],-1             ;Set CallBackAddr to nothing
  MOV  AX,W [DI].DIHostIndex                     ;Copy Host Index and
  MOV  W [SI].I14RHostIndex,AX                   ;  Device Address
  MOV  AX,[DI].DIIntHandle                       ;Copy
  MOV  [SI].I14RRequestHandle,AX                 ;  Interrupt Handle Number
  MOV  [SI].I14RRequestType,I14RRTCloseHandle    ;Request = Close Handle
  CALL DoInt14CallSaveAllSI                      ;Do it
  MOV  AX,[DI].DIRegHandle                       ;Copy
  MOV  [SI].I14RRequestHandle,AX                 ;  Registry Handle
  MOV  [SI].I14RRequestType,I14RRTUnRegIntfOwner ;Request = UnRegister
  CALL DoInt14CallSaveAllSI                      ;Do it
  OR   BL,BL                                     ;Need to Reset the Device?
  JZ  >R80                                       ;If not, we're done
  MOV  [SI].I14RRequestType,I14RRTResetDevice    ;Request = Reset
  CALL DoInt14CallSaveAllSI                      ;Do it
R80:                                             ;Done with Host
  CALL ResetDvcEntryDI                           ;Delete the Device Info Entry
  POP  AX                                        ;Restore used registers
  POP  BX                                        ;Restore used registers
  RET


;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北
;SUPPORT CODE FOR DEVICE INFO TABLE
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;RESET A DEVICE INFO TABLE ENTRY
;Inputs:  DS = ES = TSR Data Area
;        [BX] or [DI] = Info Table Entry to reset
;         CLD already issued
;Outputs:
;Changes: Resets (clears out) Info Table Entry
;NOTES:   This preserves the Disabled/Enabled status of
;           the Device, so that the user does not need to worry about
;           re-setting it after a temporary Disconnect or Host Reset.
;         Unlike most routines, this one preserves Flags across the Call!
;------------------------------------------------------------------------------
ResetDvcEntryBX:
  PUSH DI              ;Save used registers
  MOV  DI,BX           ;Point DI at the Table Entry
  CALL ResetDvcEntryDI ;Reset the Entry
  POP  DI              ;Restore used registers
  RET

ResetDvcEntryDI:
  PUSH AX,CX,DI ;Save used registers
  PUSHF         ;Save flags
  CLI           ;Disable interrupts
  XOR  AX,AX    ;Need to store zeroes
  MOV  CX,(DeviceInfoStrucSize/2) ;Number of words to store
  REP  STOSW    ;Reset the reset of the table
  POPF          ;Restore flags
  POP  DI,CX,AX ;Restore used registers
  RET


;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北
;CODE TO FIND/STORE ENTRIES IN VARIOUS STRUCTURE-BASED TABLES
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;CONVERT A DEVICE INFO INDEX TO AN OFFSET
;Inputs:  ES = Data Segment where data is located
;         CL = Device Index, or BL = Device Index (if DIIndex2OffsetBL)
;Outputs: DI = Offset to Table Entry (Assuming ES is the segment)
;Changes:
;------------------------------------------------------------------------------
DIIndex2OffsetBL:
  PUSH CX             ;Save used registers
  MOV  CL,BL          ;Put Index in CL
  CALL DIIndex2Offset ;Do it
  POP  CX             ;Restore used registers
  RET

DIIndex2Offset:
  PUSH AX,CX,DX               ;Save used registers
  XOR  CH,CH                  ;Index is actually a byte
  MOV  DI,DeviceInfoTable     ;Offset to beginning of Table
  MOV  AX,DeviceInfoStrucSize ;Size of each entry
  MUL  CX                     ;Multiply Index by the size of each entry
  ADD  DI,AX                  ;Add the offset of the beginning of the table
  POP  DX,CX,AX               ;Restore used registers
  RET

;------------------------------------------------------------------------------
;FIND AN EMPTY INFO TABLE ENTRY
;Inputs:  DS = ES = TSR Data Area
;Outputs: ZF = Clear if OK (found an empty Table entry)
;              [BX] = Table Entry
;            = Set if error (Table is full)
;               BX  = 0
;Changes:
;------------------------------------------------------------------------------
FindEmptyInfoBX:
  PUSH CX                       ;Save used registers
  MOV  BX,DeviceInfoTable       ;Point at first Table Entry
  MOV  CX,MaxDevices            ;Number of Table Entries
E10:                            ;Loop to here to find empty Table Entry
  TEST [BX].DIFlags,DIFlagInUse ;Empty Table entry?
  JZ  >E90                      ;If so, continue
  ADD  BX,DeviceInfoStrucSize   ;Point at next table entry
  LOOP E10                      ;Keep looking
  XOR  BX,BX                    ;Table is full!
E90:                            ;Done
  OR   BX,BX                    ;Set Return Flag
  POP  CX                       ;Restore used registers
  RET


;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北
;SUPPORT CODE FOR BAD DEVICE TABLE
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;ADD A BAD (INCOMPATIBLE) DEVICE HOST & ADDRESS TO THE TABLE
;Inputs:  DS:[SI] = Int 14 Structure containing Bad Device Data (Host/Addr/Intf)
;Outputs: Adds Host & Address to Bad Device Table
;Changes:
;------------------------------------------------------------------------------
AddBadDevice:
  PUSH AX,BX,CX                 ;Save used registers
  PUSHF                         ;Save Flags
  CLI                           ;Disable Interrupts
  MOV  BX,BadDeviceTable        ;Point at Table
  MOV  CX,MaxBadDevices         ;Number of Entries in Table
A20:                            ;Loop here to find empty table entry
  TEST [BX].BDFlags,BDFlagInUse ;This entry already used?
  JNZ >A50                      ;If so, skip it
  OR   [BX].BDFlags,BDFlagInUse ;If not, mark it as used
  MOV  AX,W [SI].I14RHostIndex  ;Store the Host Index
  MOV  W [BX].BDHostIndex,AX    ;  & Device Address
  MOV  AL,[SI].I14RInterfaceNum ;Store the
  MOV  [BX].BDInterfaceNum,AL   ;  Interface Number
  MOV  AX,NewDeviceError        ;Store the
  MOV  [BX].BDNewDeviceError,AX ;  Error Code
  MOV  AL,NewDeviceStage        ;Store the
  MOV  [BX].BDNewDeviceStage,AL ;  New Device Stage
  JMP >A90                      ;Done
A50:                            ;Entry not Empty
  ADD  BX,BadDeviceStrucSize    ;Point at next entry
  LOOP A20                      ;Keep going until we're done
A90:                            ;Done
  POPF                          ;Restore Flags
  POP  CX,BX,AX                 ;Restore used registers
  RET

;------------------------------------------------------------------------------
;DELETE BAD (INCOMPATIBLE) DEVICE HOSTS & ADDRESSES FROM THE TABLE
;Inputs:  CL = Host Index, CH = Address
;Outputs: Deletes Host & Address from Bad Device Table
;Changes:
;NOTES: This is called as the result a a Device Disconnect, so we need to
;         delete all Interfaces of the Device.  There will probably only
;         be one Entry per Address, but we need to check all of them.
;------------------------------------------------------------------------------
DeleteBadDevices:
  PUSH AX,BX,CX,DX,DI            ;Save used registers
  PUSHF                          ;Save Flags
  MOV  AX,CX                     ;AL = Host Index, AH = Device Address
  MOV  DL,-1                     ;Don't care about the Interface Number
  CLI                            ;Disable Interrupts
D10:                             ;Loop here for each Table Entry
  CALL FindBadDeviceEntry        ;Any entries in the Table (returns BX)?
  JC  >D90                       ;If not, we're done
  PUSH AX                        ;If so, save used registers
  XOR  AX,AX                     ;Write zeroes
  MOV  CX,(BadDeviceStrucSize/2) ;Number of words to write
  MOV  DI,BX                     ;Point DI at Table Entry
  REP  STOSW                     ;Write them
  POP  AX                        ;Restore used registers
  JMP  D10                       ;Keep looking for more Entries
D90:                             ;Done
  POPF                           ;Restore Flags
  POP  DI,DX,CX,BX,AX            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;COMPARE A HOST AND ADDRESS TO SEE IF IT'S IN OUR BAD DEVICE TABLE
;Inputs:  CL = Host, CH = Address, DL = Interface, DH = Alt Interface
;Outputs: CF = Set if it's not in the Bad Device Table
;            = Clear if it is in Table
;Changes:
;NOTES: This ignores the Alt Interface Setting (we don't care about it).
;------------------------------------------------------------------------------
TestBadDevice:
  PUSH AX,BX              ;Save used registers
  MOV  AX,CX              ;AL = Host Index, AH = Device Address
                          ;DL = Interface Number
  CALL FindBadDeviceEntry ;Is it in the Table (returns BX)?
  POP  BX,AX              ;Restore used registers
  RET

;------------------------------------------------------------------------------
;FIND A MATCHING HOST/ADDRESS/INTERFACE ENTRY IN THE BAD DEVICE TABLE
;Inputs:  AL = Host Index to find
;         AH = Device Address to find
;         DL = Interface Number to find
;              if -1, we don't care about the Interface Number
;Outputs: CF = Clear if Entry Found
;              BX = Entry Offset
;            = Set if Entry not found
;              BX = Undefined
;Changes:
;------------------------------------------------------------------------------
FindBadDeviceEntry:
  PUSH CX                       ;Save used registers
  PUSHF                         ;Save flags
  MOV  BX,BadDeviceTable        ;Point at Table
  MOV  CX,MaxBadDevices         ;Number of Entries in Table
  CLI                           ;Disable Interrupts
E20:                            ;Loop here to find empty table entry
  TEST [BX].BDFlags,BDFlagInUse ;Valid Entry?
  JZ  >E50                      ;If not, skip it
  CMP  W [BX].BDHostIndex,AX    ;Do the Host Index & Device Address match?
  JNE >E50                      ;If not, skip it
  CMP  DL,-1                    ;Do we care about the Interface Number?
  JE  >E80                      ;If not, we've found it!
  CMP  [BX].BDInterfaceNum,DL   ;Does the Interface Number match?
  JE  >E80                      ;If so, we've found it!
E50:                            ;Go to next entry
  ADD  BX,BadDeviceStrucSize    ;Point at the next entry
  LOOP E20                      ;Keep looking
E70:                            ;Error
  POPF                          ;Restore Flags
  STC                           ;Set Not Found Flag
  JMP >E90                      ;Done
E80:                            ;OK
  POPF                          ;Restore Flags
  CLC                           ;Set Found Flag
E90:                            ;Done
  POP  CX                       ;Restore used registers
  RET


;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北
;CODE TO ISSUE INT 14h CALLS TO THE HOST DRIVER
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;ISSUE AN INT 14 CALL TO THE USB HOST
;Inputs:  DS:[DX] = Int 14 Request (filled with appropriate data)
;      OR DS:[DI]
;      OR DS:[SI]
;Outputs: CF = Set if error (host stalled, etc.)
;            = Clear if OK
;Changes: Sends the appropriate info to the USB Host via Int 14 call
;------------------------------------------------------------------------------
DoInt14CallSaveAllSI:       ;Save all changed registers
                            ;  [SI] = Int14 Structure
  PUSH DX                   ;Save used registers
  MOV  DX,SI                ;Point DX at the Data Offset
  CALL DoInt14CallSaveAllDX ;Do it
  POP  DX                   ;Restore used registers
  RET

DoInt14CallAXSI:     ;Save all changed registers except AX,
                     ;  [SI] = Int14 Structure
  PUSH DX            ;Save used registers
  MOV  DX,SI         ;Point DX at the Data Offset
  CALL DoInt14CallAX ;Do it
  POP  DX            ;Restore used registers
  RET

DoInt14CallCXDI:     ;Save all changed registers except CX,
                     ;  [DI] = Int14 Structure
  PUSH DX            ;Save used registers
  MOV  DX,DI         ;Point DX at the Data Offset
  CALL DoInt14CallCX ;Do it
  POP  DX            ;Restore used registers
  RET

DoInt14CallAXCXSI:     ;Save all changed registers except AX & CX
                       ;  [SI] = Int14 Structure
  MOV  DX,SI           ;Point DX at the Data Offset
  CALL DoInt14CallAXCX ;Do it
  RET

DoInt14CallCXDXSI:     ;Save all changed registers except CX & DX
                       ;  [SI] = Int14 Structure
  MOV  DX,SI           ;Point DX at the Data Offset
  CALL DoInt14CallCXDX ;Do it
  RET

DoInt14CallSaveAllDX: ;Save all changed registers
                      ;  [DX] = Int14 Structure
  PUSH AX,BX,CX,DX    ;Save registers that Int14 changes!
  CALL DoInt14Call    ;Do it
  POP  DX,CX,BX,AX    ;Restore used registers
  RET

DoInt14CallAX:
  PUSH BX,CX,DX    ;Save registers that Int14 changes, except AX!!
  CALL DoInt14Call ;Do it
  POP  DX,CX,BX    ;Restore used registers
  RET

DoInt14CallCX:
  PUSH AX,BX,DX    ;Save registers that Int14 changes, except CX!!
  CALL DoInt14Call ;Do it
  POP  DX,BX,AX    ;Restore used registers
  RET

DoInt14CallAXCX:
  PUSH BX,DX       ;Save registers that Int14 changes, except AX & CX!!
  CALL DoInt14Call ;Do it
  POP  DX,BX       ;Restore used registers
  RET

DoInt14CallCXDX:
  PUSH AX,BX       ;Save registers that Int14 changes, except CX & DX!!
  CALL DoInt14Call ;Do it
  POP  BX,AX       ;Restore used registers
  RET

;Int 14 returns various values in AX, BX, CX, & DX
DoInt14Call:
  STI           ;Enable Interrupts
  MOV  AX,5001h ;Set Function
  MOV  BX,'US'  ;Set
  MOV  CX,'B!'  ;  Registers
  STC           ;Preset Error Flag
  INT  14h      ;Do it
  RET


;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北
;CODE TO HANDLE INT 15h (BIOS Services)
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;HAVE INTERRUPT 15h (BIOS SERVICES) RUN THIS PROGRAM EVERY TIME IT OCCURS
;Inputs:
;Outputs: Emulates a Game Port with a Joystick Attached to it
;         Depending on Exact Call SubType (value in DX), will return
;           various values in AX, BX, CX and/or DX
;Changes:
;------------------------------------------------------------------------------
Int15Hdr:
  DB TYPE IntHdr DUP (0) ;Header for removable interrupt vector code

Int15:
  PUSH BP                          ;Save used registers
  MOV  BP,SP                       ;Point BP at the Stack
  PUSHF                            ;Save flags
  STI                              ;Enable interrupts
  CLD                              ;Go forward with string functions
  CALL MakeStack                   ;Set up our own stack space
  PUSH DS,ES                       ;Save used registers
  MOV  DS,CS                       ;Point DS
  MOV  ES,CS                       ;  and ES at our data area
  CMP  AH,Int15JoystickCall        ;Is it one of the Joystick functions?
  JNE  Int15Old                    ;If not, it's not for us
  TEST TSRFlags,DisableSts         ;Are we Disabled?
  JNZ  Int15Old                    ;If so, quit
  CALL GotAJoystick                ;Are there any Enabled Joysticks?
  JC   Int15Old                    ;If not, quit
  CMP  DX,-1                       ;Is it the Digital Install Check Function?
  JE  >F40                         ;If so, jump to handle it
  CMP  DX,1                        ;Is it Function 0 (Buttons) or 1 (Axes)?
  JE  >F30                         ;If Function 1, jump to handle it
  JA  >F70                         ;If neither Buttons nor Axes, Error
F20:                               ;Get Buttons
  AND  AL,0Fh                      ;Mask out old values in high nibble of AL
  OR   AL,BtnMask                  ;Mask in buttons to hoigh nibble of AL
  JMP >F80                         ;Done
F30:                               ;Get Axes
  CALL CopyXxValues                ;Get the Axes values (AX, BX, CX, DX)
  JMP >F80                         ;Done
F40:                               ;Digital Joystick Install Check
  INC  DX                          ;Set DX = 0 for the Return
  JMP >F80                         ;Done
F70:                               ;Error
  POP  ES,DS                       ;Restore used registers
  CALL ReturnStack                 ;Restore original Stack Space
  OR   B SS:[BP+6],CarryFlag       ;Set Carry Flag for the return
  MOV  AH,I15ErrFuncNoSupt         ;Set Error Code (Function not Supported)
  JMP >F90                         ;Done
F80:                               ;No Error
  POP  ES,DS                       ;Restore used registers
  CALL ReturnStack                 ;Restore original Stack Space
  AND  B SS:[BP+6],(NOT CarryFlag) ;Clear Carry Flag for the return
;  JMP >F90                         ;Done
F90:                               ;Done
  POPF                             ;Restore flags
  POP  BP                          ;Restore used registers
  IRET

Int15Old:
  POP  ES,DS                       ;Restore used registers
  CALL ReturnStack                 ;Restore original Stack Space
  POPF                             ;Restore flags
  POP  BP                          ;Restore used registers
  JMP  D CS:Int15Hdr.OldVector     ;Let the Old Interrupt Handler do it


;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北
;CODE TO HANDLE INT 08h (Timer Tick)
;北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北北

;------------------------------------------------------------------------------
;HAVE INTERRUPT 08 (TIMER) RUN THIS EVERY TIME IT OCCURS
;Inputs:
;Outputs: Searches for Newly attached Device
;Changes:
;------------------------------------------------------------------------------
Int08Hdr:
  DB TYPE IntHdr DUP (0) ;Header for removable interrupt vector code

Int08:
;  PUSHF                          ;Save flags
  PUSHF                          ;Call the
  CALL D CS:Int08Hdr.OldVector   ;  Old Interrupt Handler
  STI                            ;Enable interrupts
  CLD                            ;Go forward with string functions
  CALL MakeStack                 ;Set up our own Stack Space
  PUSH DI,SI,DS,ES               ;Save used registers
  MOV  DS,CS                     ;Point DS and
  MOV  ES,CS                     ;  ES at our data area
  AND  TSRFlags2,(NOT SameTick)  ;Mark as a new Timer Tick
  MOV  BtnMask,0F0h              ;Assume no valid
  CALL ResetxXValues             ;  joysticks installed
  CALL GotAJoystick              ;Are there any valid joysticks?
  JC  >E10                       ;If not, continue
  CALL GetButtons                ;Calculate Buttons status (BtnMask)
  CALL GetAxes                   ;Calculate Axes values (AXValue, etc.)
E10:                             ;Buttons & Coordinates calculated
  MOV  DI,OFFSET Int08Counter    ;Point DI at Int08Counter
  MOV  SI,OFFSET DontLookCounter ;Point BX at DontLookCounter
  CMP  W [SI],0                  ;Need to Decrement DontLookCounter?
  JE  >E20                       ;If not, continue
  DEC  W [SI]                    ;If so, Decrement it
  JNZ >E90                       ;If not 0 yet, quit
  CMP  B [DI],0                  ;Disabled?
  JE  >E90                       ;If so, quit
  MOV  B [DI],1                  ;If not, look for Device right away
E20:                             ;Done with DontLookCounter
  CMP  B [DI],0                  ;Are we supposed to look yet?
  JE  >E90                       ;If not, just quit
  DEC  B [DI]                    ;Decrement the Delay Counter
  JNZ >E90                       ;If not 0 yet, quit
  MOV  B [DI],182                ;If 0, reset for next time (approx 10 seconds)
  PUSH AX,BX,CX,DX,BP            ;Save used registers
  CALL LookForNewDevice          ;Look for a new Device
  POP  BP,DX,CX,BX,AX            ;Restore used registers
E90:                             ;Done
  POP  ES,DS,SI,DI               ;Restore used registers
  CALL ReturnStack               ;Restore Original Stack Space
  IRET
;  POPF                           ;Restore flags
;  JMP  D CS:Int08Hdr.OldVector   ;Jump to old Interrupt

;------------------------------------------------------------------------------
;TEST AND SEE IF THERE ARE ANY ENABLED JOYSTICKS INSTALLED
;Inputs:  DS = ES = TSR Data Area
;Outputs: CF = Clear if there is at least one Enabled Joystick
;            = Set if no enabled Joysticks
;Changes:
;------------------------------------------------------------------------------
GotAJoystick:
  PUSH BX,CX                    ;Save used registers
  MOV  BX,DeviceInfoTable       ;Point at the Table
  MOV  CX,MaxDevices            ;Number of Table Entries
G10:                            ;Loop to here for each table Entry
  TEST [BX].DIFlags,DIFlagInUse ;Is a Joystick installed here?
  JNZ >G80                      ;If so, we've got one
  ADD  BX,DeviceInfoStrucSize   ;Point at the next Table Entry
  LOOP G10                      ;Keep looking
G70:                            ;No Enabled Joysticks
  STC                           ;Set return flag
  JMP >G90                      ;Done
G80:                            ;At least one Enabled Joystick
  CLC                           ;Set return flag
G90:                            ;Done
  POP  CX,BX                    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;GET THE BUTTONS STATUS APPROPRIATE FOR THE INT 15h CALL
;Inputs:  DS = ES = TSR Data Area
;         BtnMask = F0h (No buttons pressed)
;Outputs: BtnMask (High Nibble = Buttons Status, Low Nibble = 0)
;Changes:
;------------------------------------------------------------------------------
GetButtons:
  PUSH AX,CX,DX,DI,SI    ;Save used registers
  MOV  DI,OFFSET BtnMask ;[DI] = BtnMask
;  MOV  B [DI],0F0h       ;Initialize Mask to no buttons pressed
  MOV  DH,TSRFlags       ;DH = TSRFlags
  MOV  SI,A01Xlat        ;[SI] = Button 01 Translation Table entry
  TEST DH,Buttons15      ;Using the 15-button protocol?
  JNZ >B30               ;If so, jump to handle it
B10:                     ;Using 4-button protocol
  MOV  CX,4              ;Need to get 4 buttons
  MOV  DL,(NOT 10h)      ;DL = Mask to use for BtnMask
B15:                     ;Loop to here for each button
  CALL GetControlData    ;Get the button data (uses [SI], rtns AX)
  JZ  >B20               ;If not pressed, continue
  AND  [DI],DL           ;If so, mask it in
B20:                     ;Button masked in, if appropriate
  SHL  DL,1              ;Shift the bit mask over
  ADD  SI,XlatStrucSize  ;Point at the next button
  LOOP B15               ;Keep going until we're done
  JMP >B90               ;Done
B30:                     ;Using 15 button protocol
  MOV  CX,15             ;Need to test 15 buttons
  MOV  DL,10h            ;DL = Button Mask
B35:                     ;Loop to here for each button
  CALL GetControlData    ;Get the button data (uses [SI], rtns AX)
  JZ  >B40               ;If not pressed, continue
  NOT  DL                ;If pressed,
  AND  [DI],DL           ;  set the button mask
  JMP >B90               ;done
B40:                     ;Button masked in, if appropriate
  ADD  DL,10h            ;Update the bit mask
  ADD  SI,XlatStrucSize  ;Point at the next button
  LOOP B35               ;Keep going until we're done
B90:                     ;Done
  POP  SI,DI,DX,CX,AX    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;GET THE AXES STATUS FOR THE INT 15h CALL
;Inputs:  DS = ES = TSR Data Area
;         AXValue ... DXValue = 0
;Outputs: AXValue, BXValue, CXValue, DXValue
;Changes:
;------------------------------------------------------------------------------
GetAxes:
  PUSH AX,CX,DX,DI,SI    ;Save used registers
  MOV  DI,OFFSET AXValue ;[DI] = AXValue
  MOV  DH,TSRFlags       ;DH = TSRFlags
  MOV  SI,AXXlat         ;[SI] = Axis AX Translation Table entry
  MOV  CX,4              ;Assume no ThrustMaster
  TEST DH,ThrustMaster   ;ThrustMaster Protocol?
  JZ  >X10               ;If not, continue
  INC  CX                ;If so, we need 5 axes
X10:                     ;CX = Number of Axes to get
  CALL GetControlData    ;Get the Axis data (uses [SI], rtns AX)
  STOSW                  ;Store the coordinate
  ADD  SI,XlatStrucSize  ;Point at the next Axis
  LOOP X10               ;Keep going until we're done
  TEST DH,ThrustMaster   ;ThrustMaster Protocol?
  JZ  >X90               ;If not, we're done
  CALL CookThrust        ;If so, calculate the ThrustMaster coordinates
X90:                     ;Done
  POP  SI,DI,DX,CX,AX    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;GET THE DATA FOR A PARTICULAR CONTROL
;Inputs:   DS = ES = TSR Data Area
;         [SI] = Translation Table entry to use
;                  (Contains RELATIVE Joystick Index, Control Index & Type)
;Outputs:  CF = Clear if OK
;               AX = Control Data
;               ZF = Set if AX = 0
;                  = Clear if AX <> 0
;             = Set if error (Invalid Translation table entry)
;               AX = 0
;               ZF = Set
;Changes:
;NOTES: If Control is a "Button Pair" (two buttons acting as an Axis),
;         this returns NormalizeMax/2 if neither or both buttons are pressed,
;         MinCoord if the first (Left/Up) button is pressed, NormalizeMax
;         if the second (Right/Down) button is pressed).
;------------------------------------------------------------------------------
GetControlData:
  PUSH BX,DI,SI,BP              ;Save used registers
  MOV  BL,[SI].XlatJIndex       ;BL = Joystick Index to use
  CMP  BL,-1                    ;Valid Index?
  JE  >C70                      ;If not, error
  CALL DIIndex2OffsetBL         ;If OK, [DI] = Device Info Pointer
  TEST [DI].DIFlags,DIFlagInUse ;Is a Joystick installed here?
  JZ  >C70                      ;If not, error
  MOV  BX,W [SI].XlatCType      ;BL = Control Type, BH = Control Index
  CMP  BL,-1                    ;Valid Control Type?
  JE  >C70                      ;If not, error
  CMP  BH,-1                    ;Valid Control Index?
  JE  >C70                      ;If not, error
  MOV  BP,SI                    ;[BP] = Translation Table entry
  LEA  SI,[DI].DIRawData        ;[SI] = Raw Data
  ADD  DI,OFFSET DIControlsData ;[DI] = Translation Data
  CMP  BL,CTDPad                ;Is it a DPad or a Button?
  JA  >C40                      ;If not, handle a regular Axis
C10:                            ;It's a button or a DPad
  CALL GetDIDataWord            ;Get the "Raw" Data (AX)
  CALL HandleSpecialCtl         ;Convert it as appropriate
  JNC >C80                      ;If it worked, we're done
  JMP >C70                      ;If not, error
C40:                            ;It's a "regular" Axis
  CALL GetDINormalized          ;Get the Normalized Data (AX)
  JNC >C80                      ;If it worked, we're done
C70:                            ;Error
  XOR  AX,AX                    ;AX = 0 (also sets ZF)
  STC                           ;Set CF return flag
  JMP >C90                      ;Done
C80:                            ;OK
  OR   AX,AX                    ;Set ZF return flag
  CLC                           ;Set CF return flag
C90:                            ;Done
  POP  BP,SI,DI,BX              ;Restore used registers
  RET

;------------------------------------------------------------------------------
;HANDLE THE SPECIAL CONTROL PROCESSING NEEDED FOR A DPAD OR BUTTON
;Inputs:   DS  = ES = TSR Data Area
;         [BP] = Translation Table entry we're processing
;         [SI] = Raw Data
;         [DI] = Controls Data
;          BL  = Control Type (CTDPad or CTButton)
;          AX  = "Raw" Data (if DPad = 0-7, If Button = first button)
;Outputs: CF = Clear if OK
;              AX = Appropriate Data
;            = Set if Error
;              AX = 0
;Changes:
;------------------------------------------------------------------------------
HandleSpecialCtl:
  PUSH BX,DX           ;Save used registers
  CMP  BL,CTButton     ;Is it a Button?
  JNE >S40             ;If not, handle a DPAd
  MOV  BH,DS:[BP].XlatCIndex2 ;BH = Second Index
  CMP  BH,-1           ;Is this a Button Pair simulating an Axis?
  JE  >S80             ;If not, it's OK
S10:                   ;Is two buttons simulating an Axis
  MOV  DL,AL           ;If so, DL = first button status
  CALL GetDIDataWord   ;Get the second button Data (AX)
  JC  >S70             ;If error, quit
  MOV  DH,AL           ;If OK, DH = Second Button Status
  MOV  AX,NormalizeMax ;Assume maximized
  OR   DL,DL           ;Left/Up button pressed?
  JNZ >S30             ;If so, jump to handle it
S20:                   ;Left/Up button NOT pressed
  OR   DH,DH           ;Right/Down button pressed?
  JNZ >S80             ;If so, it's maximized
  SHR  AX,1            ;If not, it's centered
  JMP >S80             ;Done
S30:                   ;Left/up button pressed
  SHR  AX,1            ;Assume centered (both buttons pressed)
  OR   DH,DH           ;Is the right/down button also pressed?
  JNZ >S80             ;If so, we're done
  MOV  AX,MinCoord     ;If not, it's Left/Up
  JMP >S80             ;Done
S40:                   ;Is a DPad
  CALL AdjustDPadData  ;Adjust the DPad data into a "normal" format
  MOV  DX,CookDPadX    ;Assume X direction
  CMP  DS:[BP].XlatCIndex2,XlatDPadX ;Is it X direction?
  JE  >S50             ;If so, continue
  MOV  DX,CookDPadY    ;If not, it's Y Direction
S50:                   ;[DX] = Code to Call
  CALL DX              ;Do the conversion
  JMP >S80             ;Done
S70:                   ;Error
  XOR  AX,AX           ;AX = 0 (also sets ZF)
  STC                  ;Set CF return flag
  JMP >S90             ;Done
S80:                   ;OK
  OR   AX,AX           ;Set ZF return flag
  CLC                  ;Set CF return flag
S90:                   ;Done
  POP  DX,BX           ;Restore used registers
  RET

;------------------------------------------------------------------------------
;GET THE NORMALIZED COORDINATE FOR A SPECIFIC CONTROL
;Inputs:  DS = ES  = TSR Data Area
;         [DI] = Controls Table Base Offset
;         [SI] = Raw Data
;         BL   = ControlType (Button, etc)
;         BH   = Index Number (0-based)
;Outputs: CF = Clear if OK
;              AX = "Normalized" Value for the Control
;            = Set if error (invalid Type or Index)
;              AX = 0
;Changes:
;------------------------------------------------------------------------------
GetDINormalized:
  PUSH BX,CX,DX        ;Save used registers
  CALL GetDIDataWord   ;Get the Word (AX)
  JC  >Z70             ;If Error, Quit (AX = 0)
  CALL GetDIMinMax     ;Get the Min (CX) and Max (DX)
  SUB  AX,CX           ;Compensate Value for Minimum
  SUB  DX,CX           ;Compensate Maximum for Minimum
  MOV  BX,DX           ;Move Maximum into BX
  MUL  NormalizeMax    ;Normalize the
  DIV  BX              ;  current Value
  SHR  BX,1            ;Do we need to
  CMP  DX,BX           ;  round it up?
  JB  >Z30             ;If not, continue
  INC  AX              ;If so, round it up
Z30:                   ;Value is rounded up
  CMP  AX,MinCoord     ;Is it too small?
  JAE >Z40             ;If not, continue
  MOV  AX,MinCoord     ;If so, make it the minimum
  JMP >Z80             ;Done
Z40:                   ;Test for too big (shouldn't be, but we'll test anyway)
  CMP  AX,NormalizeMax ;Is it more than it should be?
  JBE >Z80             ;If not, it's OK
  MOV  AX,NormalizeMax ;If so, just Maximize it
  JMP >Z80             ;Done
Z70:                   ;Error
  STC                  ;Set Error Flag
  JMP >Z90             ;Done
Z80:                   ;OK
  CLC                  ;Set OK flag
Z90:                   ;Done
  POP  DX,CX,BX        ;Restore used registers
  RET

;------------------------------------------------------------------------------
;GET A SPECIFIC WORD VALUE FROM A CONTROL
;Inputs:   ES  = TSR Data Area
;         [DI] = Controls Table Base Offset
;         [SI] = Raw Data
;          BL  = ControlType (Button, etc)
;          BH  = Index Number (0-based)
;Outputs: CF = Clear if OK
;              AX = Appropriate Data Word
;            = Set if error (invalid Type or Index)
;              AX = 0
;Changes
;NOTES: This will find any Index matching the Control Type given, even if the
;         Controls are not contiguous (if there are other types of Controls
;         separating the Controls we are looking for)
;------------------------------------------------------------------------------
GetDIDataWord:
  PUSH BX,CX,DX,DI,SI,DS      ;Save used registers
  MOV  DS,ES                  ;Point DS at TSR Data
  MOV  DL,MaxControls         ;Table Size Counter
W10:                          ;Loop to here to find the correct entry
  CMP  BL,[DI].ControlType    ;Is it the correct Type?
  JNE >W50                    ;If not, try the next one
  MOV  CH,[DI].ControlQty     ;Get Quantity of Controls Here
  MOV  CL,[DI].ControlOffset  ;Get Offset of First Control
W15:                          ;Loop here to find correct Index
  SUB  BH,1                   ;Decrement the Control Index
  JC  >W30                    ;If it's the Index we're looking for, we're done
  DEC  CH                     ;Decrement our local Counter
  JZ  >W50                    ;If no more here, look for another Control Set
  ADD  CL,[DI].ControlNumBits ;Update the Offset
  JMP  W15                    ;Keep looking in this Control Set
W30:                          ;Pointed at correct Entry
  CMP  CL,8                   ;Is the Offset more than a Byte?
  JB  >W40                    ;If not, we're close!
  INC  SI                     ;If so, go to
  SUB  CL,8                   ;  the next byte
  JMP  W30                    ;Keep skipping, if we need to
W40:                          ;Pointed at Correct Byte Offset
  MOV  BX,[SI+2]              ;Copy High Word into BX
  MOV  AX,[SI]                ;Copy Low Word into AX
  OR   CL,CL                  ;Do we need to Shift at all?
  JZ  >W47                    ;If not, we're done with this part
W43:                          ;Loop to here to shift bits to low part of AX
  SHR  AX,1                   ;Move the low bits over
  SHR  BX,1                   ;Move the high bits over
  JNC >W45                    ;If low bit was not set, continue
  OR   AH,80h                 ;If it was set, set the high bit of AX
W45:                          ;Done shifting this bit
  DEC  CL                     ;Decrement our Loop Counter
  JNZ  W43                    ;If not 0 yet, keep shifting
W47:                          ;Done putting bits into low part of AX
  MOV  CL,16                  ;Calculate
  SUB  CL,[DI].ControlNumBits ;  Shift Factor
  SHL  AX,CL                  ;Get rid of
  SHR  AX,CL                  ;  unwanted bits
  JMP >W80                    ;Done
W50:                          ;Go to the next one
  ADD  DI,ControlStrucSize    ;Point at next entry
  DEC  DL                     ;End of Table?
  JNZ  W10                    ;If not, keep looking
W70:                          ;Error
  XOR  AX,AX                  ;Set
  STC                         ;  Error Codes
  JMP >W90                    ;Done
W80:                          ;OK
  CLC                         ;Clear Carry Flag for the return
W90:                          ;Done
  POP  DS,SI,DI,DX,CX,BX      ;Restore used registers
  RET

;------------------------------------------------------------------------------
;GET THE MIN/MAX VALUES FOR A SPECIFIC CONTROL
;Inputs:   ES  = TSR Data Area
;          BL  = ControlType (Button, etc)
;          BH  = Index Number (0-based)
;         [DI] = Controls Table Base Offset
;         [SI] = Raw Data
;Outputs: CX = Min Value for Coordinate
;         DX = Max Value for Coordinate
;Changes:
;NOTES: This assumes that the Control actually exists (it was tested some
;         other way).
;------------------------------------------------------------------------------
GetDIMinMax:
  PUSH AX,BX,DI,DS         ;Save used registers
  MOV  DS,ES               ;Point DS at TSR Data
  MOV  AL,MaxControls      ;Table Size Counter
X10:                       ;Loop to here for each Table Entry
  CMP  BL,[DI].ControlType ;Is it the correct Type?
  JNE >X50                 ;If not, try the next one
  MOV  AH,[DI].ControlQty  ;Get Quantity of Controls Here
X20:                       ;Loop here to find correct Index
  SUB  BH,1                ;Decrement the Control Index
  JC  >X90                 ;If it's the Inded we're looking for, we're done
  DEC  AH                  ;Decrement our local Counter
  JNZ  X20                 ;If nto zero yet, keep looking
X50:                       ;Go to the next one
  ADD  DI,ControlStrucSize ;Point at next entry
  DEC  AL                  ;End of Table?
  JNZ  X10                 ;If not, keep looking
X90:                       ;Done ([DI] Points at Correct Control)
  MOV  CX,[DI].ControlMin  ;Put Min in CX
  MOV  DX,[DI].ControlMax  ;Put Min in DX
  POP  DS,DI,BX,AX         ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CONVERT "STANTARD" COORDINATES INTO THRUSTMASTER PROTOCOL
;Inputs:  DS = ES = TSR Data Area
;         CXValue, DXValue, GXValue
;         MovePercent, NormalizeMax
;Outputs: CXValue, DXValue
;Changes:
;------------------------------------------------------------------------------
CookThrust:
  PUSH AX,BX,CX,DX       ;Save used registers
  PUSH DI,SI             ;Save used registers
  MOV  AX,NormalizeMax   ;Get the
  SHR  AX,1              ;  Center
  MOV  DI,AX             ;  Value
  MOV  SI,MovePercent    ;Multiply
  MUL  SI                ;  by
  MOV  SI,100            ;  Movement
  DIV  SI                ;  Percent
  MOV  SI,DI             ;SI =
  ADD  SI,AX             ;  Maximum value
  SUB  DI,AX             ;DI = Minimum value
  MOV  CX,CXValue        ;CX = X Direction
  MOV  DX,DXValue        ;DX = Y Direction
T10:                     ;Have values calculated
  XOR  BL,BL             ;Default = Centered (Valid, not Left/Right/Up/Down)
  OR   CX,CX             ;Valid X?
  JNZ >T11               ;If so, continue
  OR   BL,XInvalid       ;If not, mark it as invalid
T11:                     ;X validity handled
  OR   DX,DX             ;Valid Y?
  JNZ >T12               ;If so, continue
  OR   BL,YInvalid       ;If not, mark it as invalid
T12:                     ;Y validity handled
  OR   CX,CX             ;Invalid?
  JZ  >T14               ;If so, it can't be Left or Right
  CMP  CX,DI             ;X Left?
  JA  >T13               ;If not, continue
  OR   BL,XLeft          ;If so, mark it as Left
T13:                     ;X Left handled
  CMP  CX,SI             ;X Right?
  JB  >T14               ;If not, continue
  OR   BL,XRight         ;If so, mark it as Right
T14:                     ;X handled
  OR   DX,DX             ;Invalid?
  JZ  >T20               ;If so, it can't be Up or Down
  CMP  DX,DI             ;Y Up?
  JA  >T15               ;If not, continue
  OR   BL,YUp            ;If so, mark it as Up
T15:                     ;Y Up handled
  CMP  DX,SI             ;Y Down?
  JB  >T20               ;If not, continue
  OR   BL,YDown          ;If so, mark it as Down
T20:                     ;All bit-masks set
  XOR  AX,AX             ;Assume invalid
  CMP  BL,(XInvalid+YInvalid) ;Both coordinates invalid?
  JE  >T90               ;If so, we're done
T22:                     ;At least 1 coordinate is valid
  MOV  AX,NormalizeMax   ;Assume centered
  OR   BL,BL             ;Everything centered?
  JZ  >T90               ;If so, we're done
  CMP  BL,XInvalid       ;X Invalid & Y Centered?
  JE  >T90               ;If so, we're done
  CMP  BL,YInvalid       ;Y Invalid & X Centered?
  JE  >T90               ;If so, we're done
T30:                     ;Not Invalid or Centered
  TEST BL,(YUp+YDown)    ;Y Uncentered?
  JNZ >T40               ;If so, handle it
T32:                     ;Y Zero or Centered
  TEST BL,XLeft          ;Is it Left?
  JZ  >T36               ;If not, it's Right
T34:                     ;Left
  SHR  AX,1              ;Set
  MOV  BX,AX             ;  Left
  SHR  AX,1              ;  Return
  ADD  AX,BX             ;  Value
  JMP >T90               ;Done
T36:                     ;Right
  SHR  AX,1              ;Set
  SHR  AX,1              ;  Return Value
  JMP >T90               ;Done
T40:                     ;Y Uncentered
  TEST BL,(XLeft+XRight) ;X Uncentered?
  JNZ >T90               ;If so, we're done
T42:                     ;Y Uncentered, X Zero or Centered
  TEST BL,YUp            ;Is it Up?
  JZ  >T46               ;If not, it's Down
T44:                     ;Up
  MOV  AX,MinCoord       ;Set Up Value
  JMP >T90               ;Done
T46:                     ;Down
  SHR  AX,1              ;Set Down Value
T90:                     ;Done (AX = THrustMaster coordinate to store)
  MOV  DXValue,AX        ;Store the ThrustMaster value
  MOV  AX,GXValue        ;Store the
  MOV  CXValue,AX        ;  Gas Pedal value
  POP  SI,DI             ;Restore used registers
  POP  DX,CX,BX,AX       ;Restore used registers
  RET

;------------------------------------------------------------------------------
;ADJUST DPAD DATA INTO A "NORMAL" FORMAT
;Inputs:  DS = ES = TSR Data Area
;          AX  = Raw DPad Coordinate from Joystick
;          BL  = ControlType (DPad)
;          BH  = Index Number (0-based)
;         [DI] = Controls Table Base Offset
;         [SI] = Raw Data
;Outputs: AX = Value converted to a "normalized" format
;                0 = Center, 1 = Up, 2 = Up & Right, ..., 8 = Up & Left
;Changes:
;NOTE: This will adjust for either a 4-way or 8-way Hat Switch
;------------------------------------------------------------------------------
AdjustDPadData:
  PUSH CX,DX       ;Save used registers
  OR   AH,AH       ;Is it more than 255?
  JNZ >D70         ;If so, mark it as Centered
  CALL GetDIMinMax ;Get the Minimum (CX) and Maximum (DX), uses BX
  CMP  AL,DL       ;Is the current value more than the Maximum?
  JA  >D70         ;If so, mark it as Centered
  CMP  CL,1        ;Is the Minimum 0 or 1?
  JA  >D70         ;If neither, Error
  JE  >D40         ;If 1, jump to handle it
D10:               ;Minimum is 0
  CMP  DL,3        ;Is it 4-way?
  JNE >D30         ;If not, jump to handle it
D20:               ;Minimum 0, 4-way
  SHL  AX,1        ;Multiply by 2
  INC  AX          ;Add 1
  JMP >D90         ;Done
D30:               ;Minimum 0, not 4-way
  CMP  DL,7        ;Is it 8-way?
  JNE >D70         ;If not, Error
D35:               ;Minimum 0, 8-way
  INC  AX          ;Add 1
  JMP >D90         ;Done
D40:               ;Minimum is 1
  OR   AX,AX       ;Is it 0 (Centered)?
  JZ  >D90         ;If so, it's OK like it is
  CMP  DL,4        ;Is it 4-way?
  JNE >D60         ;If not, jump to handle it
D50:               ;Minimum 1, 4-Way
  DEC  AX          ;Subtract 1
  SHL  AX,1        ;Multiply by 2
  INC  AX          ;Add 1
  JMP >D90         ;Done
D60:               ;Minimum 1, not 4-way
  CMP  DL,8        ;Is it 8-way?
  JE  >D90         ;If so, it's OK like it is
D70:               ;Return 0 (Centered)
  XOR  AX,AX       ;Just return 0
D90:               ;Done
  POP  DX,CX       ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CONVERT (COOK) A D-PAD COORDINATE INTO A JOYSTICK COORDINATE
;Inputs:  DS = ES  = TSR Data Area
;         AX = Raw DPad Coordinate (8-Way) from Joystick
;         NormalizeMax
;Outputs: AX = Value converted to "Cooked" Coordinate
;Changes:
;------------------------------------------------------------------------------
CookDPadX:
  PUSH DX              ;Save used registers
  XOR  DL,DL           ;Mark as getting X Axis
  JMP >P00             ;Do it
CookDPadY:
  PUSH DX              ;Save used registers
  MOV  DL,1            ;Mark as getting Y Axis
;  JMP >P00             ;Do it
P00:
  OR   AL,AL           ;Is it Centered?
  JZ  >P40             ;If so, it's Centered
  OR   DL,DL           ;Getting X or Y?
  JNZ >P30             ;If Y, jump to handle it
P10:                   ;Getting X
  CMP  AL,1            ;Is it just Up?
  JE  >P40             ;If so, it's Centered
  CMP  AL,5            ;Is it just Down?
  JE  >P40             ;If so, it's Centered
  CMP  AL,4            ;Is it Right?
  JBE >P50             ;If so, it's Right
  JMP >P60             ;If not, it's Left
P30:                   ;Getting Y
  CMP  AL,3            ;Is it just Right?
  JE  >P40             ;If so, it's Centered
  CMP  AL,7            ;Is it just Left?
  JE  >P40             ;If so, it's Centered
  CMP  AL,2            ;Is it Up?
  JBE >P60             ;If so, it's Up
  CMP  AL,8            ;Is it Up?
  JE  >P60             ;If so, it's Up
  JMP >P50             ;If not, it's Down
P40:                   ;Centered
  MOV  AX,NormalizeMax ;Set
  SHR  AX,1            ;  Centered
  JMP >P90             ;Done
P50:                   ;Right/Down
  MOV  AX,NormalizeMax ;Set Right/Down
  JMP >P90             ;Done
P60:                   ;Left/Up
  MOV  AX,MinCoord     ;Set Left/Up
P90:                   ;Done
  POP  DX              ;Restore used registers
  RET

;------------------------------------------------------------------------------
;RESET THE AXValue -> GXValue VARIABLES
;Inputs:  DS = ES  = TSR Data Area
;Outputs:
;Changes:
;------------------------------------------------------------------------------
ResetXxValues:
  PUSH AX,CX,DI          ;Save used registers
  MOV  DI,OFFSET AXValue ;Point at beginning of Table
  XOR  AX,AX             ;Fill with Zeroes
  MOV  CX,5              ;Number of entries to changes
  REP  STOSW             ;Fill teh Table
  POP  DI,CX,AX          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;COPY AXValue -> DXValue to REGISTERS AX -> DX
;Inputs:  DS = ES  = TSR Data Area
;Outputs:
;Changes:
;------------------------------------------------------------------------------
CopyXxValues:
  PUSH DI        ;Save used registers
  MOV  DI,OFFSET AXValue ;[DI] = First Coordinate Value
  MOV  AX,[DI+0] ;Copy
  MOV  BX,[DI+2] ;  return
  MOV  CX,[DI+4] ;  register
  MOV  DX,[DI+6] ;  values
  POP  DI        ;Restore used registers
  RET


