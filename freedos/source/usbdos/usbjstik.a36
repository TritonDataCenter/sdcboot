  NumXlats EQU 20 ;Number of Translation entries

  AXXlat:  DB (XlatStrucSize) DUP (-1) ;AX Translation Structure
  AYXlat:  DB (XlatStrucSize) DUP (-1) ;AY Translation Structure
  BXXlat:  DB (XlatStrucSize) DUP (-1) ;BX Translation Structure
  BYXlat:  DB (XlatStrucSize) DUP (-1) ;BY Translation Structure
  AZXlat:  DB (XlatStrucSize) DUP (-1) ;Gas Pedal Translation Structure
  A01Xlat: DB (XlatStrucSize) DUP (-1) ;Button 01 Translation Structure
  A02Xlat: DB (XlatStrucSize) DUP (-1) ;Button 02 Translation Structure
  A03Xlat: DB (XlatStrucSize) DUP (-1) ;Button 03 Translation Structure
  A04Xlat: DB (XlatStrucSize) DUP (-1) ;Button 04 Translation Structure
  A05Xlat: DB (XlatStrucSize) DUP (-1) ;Button 05 Translation Structure
  A06Xlat: DB (XlatStrucSize) DUP (-1) ;Button 06 Translation Structure
  A07Xlat: DB (XlatStrucSize) DUP (-1) ;Button 07 Translation Structure
