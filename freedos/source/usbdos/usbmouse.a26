  OR   AH,AH                                  ;Is it more than 255?
  JNZ >D70                                    ;If so, Error
D10:                                          ;Got a number (AL)
  CMP  AL,MaxDevices                          ;Is it valid?
  JBE >D20                                    ;If so, continue
  CMP  CL,2                                   ;Is it Exchange?
  JNE >D70                                    ;If not, Error
  CMP  AL,255                                 ;If so, is it Global?
  JNE >D70                                    ;If not, Error
D20:                                          ;Valid Number
  CMP  ParseTest,Yes                          ;Is this just the Test Run?
  JE  >D90                                    ;If so, don't change anything yet
  CMP  AL,MaxDevices                          ;Is it a single Mouse?
  JBE >D40                                    ;If so, jump to handle it
D30:                                          ;Global
  XOR  ES:TSRFlags,SwapBtns                   ;Toggle Global Button Swap Status
  JMP >D90                                    ;Done
D40:                                          ;Single Mouse
  MOV  BL,AL                                  ;Get the
  CALL DIIndex2OffsetBL                       ;  Info Table pointer (DI)
  CMP  CL,1                                   ;Disable, Enable, or Exchange?
  JE  >D45                                    ;If Enable, handle it
  JA  >D47                                    ;If Exchange, Handle it
D42:                                          ;Disable Mouse
  CALL RlsPressedSysESDI                      ;Release any pending keystrokes
  OR   ES:[DI].DIFlags,DIFlagDisabled         ;Disable it
  AND  ES:[DI].DIFlags,(NOT DIFlagDisconnect) ;Mark Pending keystrokes as done
  JMP >D90                                    ;Done
D45:                                          ;Enable Mouse
  AND  ES:[DI].DIFlags,(NOT DIFlagDisabled)   ;Enable it
  JMP >D90                                    ;Done
D47:                                          ;Swap Mouse Buttons
  XOR  ES:[DI].DIFlags,DIFlagSwapBtns         ;Toggle Button Swap Status
  JMP >D90                                    ;Done
D70:                                          ;Error
  MOV  ParseError,Yes                         ;Mark Error Flag
D90:                                          ;Done
  POP  DI,BX,AX                               ;Restore used registers
  POP  CX                                     ;Restoreused registers
  RET

;------------------------------------------------------------------------------
;Change Resolution of Mice
;Inputs:   DS  = Local Data Area
;          ES  = TSR Data Area
;         [DI] = ProgFlags
;         [SI] = Command Line Pointer
;         [BP] = TSRFlags
;          AH  = ParseTest, ZF Set if ParseTest = No
;------------------------------------------------------------------------------
DoSwitchResolution:
  PUSH AX,BX              ;Save used registers
  CALL SkipColonEquals    ;Skip Colon/Equals (if there)
  CALL GetDecimal         ;If not, see if it's a number
  JC  >R70                ;If not, error
  CMP  AX,8               ;More than it should be?
  JA  >R70                ;If so, error
  MOV  BH,Resolution8     ;Assume 8 Counts/mm
  JE  >R50                ;If 8 Counts/mm, Jump to do it
  DEC  BH                 ;Assume 4 Counts/mm
  CMP  AL,4               ;4 Counts/mm?
  JE  >R50                ;If so, Jump to do it
  DEC  BH                 ;Assume 2 Counts/mm
  CMP  AL,2               ;2 Counts/mm?
  JE  >R50                ;If so, Jump to do it
  DEC  BH                 ;Assume 1 Count/mm
  CMP  AL,1               ;1 Count/mm?
  JNE >R70                ;If not, Error
R50:                      ;Resolution is calculated
  MOV  ResolutionValue,BH ;Store the Change Value
  JMP >R90                ;Done
R70:                      ;Error
  MOV  ParseError,Yes     ;Mark Error Flag
R90:                      ;Done
  POP  BX,AX              ;Restore used registers
  RET

;------------------------------------------------------------------------------
;Change Sampling Rate of Mice
;Inputs:   DS  = Local Data Area
;          ES  = TSR Data Area
;         [DI] = ProgFlags
;         [SI] = Command Line Pointer
;         [BP] = TSRFlags
;          AH  = ParseTest, ZF Set if ParseTest = No
;------------------------------------------------------------------------------
DoSwitchSampling:
  PUSH AX,BX            ;Save used registers
  CALL SkipColonEquals  ;Skip Colon/Equals (if there)
  CALL GetDecimal       ;If not, see if it's a number
  JC  >S70              ;If not, error
  CMP  AX,200           ;More than it should be?
  JA  >S70              ;If so, error
  MOV  BH,SampleCode200 ;Assume 200 Hz
  JE  >S50              ;If 200 Hz, Jump to do it
  DEC  BH               ;Assume 100 Hz
  CMP  AL,100           ;100Hz?
  JE  >S50              ;If so, Jump to do it
  DEC  BH               ;Assume 80 Hz
  CMP  AL,80            ;80 Hz?
  JE  >S50              ;If so, Jump to do it
  DEC  BH               ;Assume 60 Hz
  CMP  AL,60            ;60 Hz?
  JE  >S50              ;If so, Jump to do it
  DEC  BH               ;Assume 40 Hz
  CMP  AL,40            ;40 Hz?
  JE  >S50              ;If so, Jump to do it
  DEC  BH               ;Assume 20 Hz
  CMP  AL,20            ;20 Hz?
  JE  >S50              ;If so, Jump to do it
  DEC  BH               ;Assume 10 Hz
  CMP  AL,10            ;10 Hz?
  JNE >S70              ;If not, Error
S50:                    ;Sampling Rate is calculated
  MOV  SamplingValue,BH ;Store the Change Value
  JMP >S90              ;Done
S70:                    ;Error
  MOV  ParseError,Yes   ;Mark Error Flag
S90:                    ;Done
  POP  BX,AX            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;Change Scaling Factor of Mice
;Inputs:   DS  = Local Data Area
;          ES  = TSR Data Area
;         [DI] = ProgFlags
;         [SI] = Command Line Pointer
;         [BP] = TSRFlags
;          AH  = ParseTest, ZF Set if ParseTest = No
;------------------------------------------------------------------------------
DoSwitchScaling:
  PUSH AX,BX           ;Save used registers
  CALL SkipColonEquals ;Skip Colon/Equals (if there)
  CALL GetDecimal      ;If not, see if it's a number
  JC  >C70             ;If not, error
  CMP  AX,2            ;More than it should be?
  JA  >C70             ;If so, error
  OR   AL,AL           ;Less than it should be?
  JZ  >C70             ;If so, error
  MOV  BH,AL           ;If OK, put it in BH for the call
  CALL IsSpaceOrEOX    ;Get the next character
  JZ  >C40             ;If EOL, we're done
  CMP  AL,':'          ;Is it a Colon?
  JNE >C40             ;If not, don't look for the 1
  CALL IsSpaceOrEOX    ;If so, get the next character
  JZ  >C70             ;If EOL, error
  CMP  AL,'1'          ;Is it a 1?
  JNE >C70             ;If not, error
  JMP >C50             ;If so, it's OK
C40:                   ;Done looking for the ":1"
  DEC  SI              ;Point back at the previous character
C50:                   ;Scaling Factor is calculated
  MOV  ScalingValue,BH ;Store the Change Value
  JMP >C90             ;Done
C70:                   ;Error
  MOV  ParseError,Yes  ;Mark Error Flag
C90:                   ;Done
  POP  BX,AX           ;Restore used registers
  RET


;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;CODE NEEDED TO HANDLE A NOINSTALL OPTION
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;HANDLE A NO-INSTALL REQUEST FROM THE USER, IF APPROPRIATE
;Inputs:  DS = Local Data Area
;         ES = TSR Data Area
;         ProgFlags.InMemory,ProgFlags.NoInstall
;Outputs: CF = Set if not in Memory yet, and User doesn't want to Install
;              Writes PS/2 Status, if Requested by User
;              DX = Message to write on Program Exit
;            = Set if Already in Memory, or User wants to Install
;              DX = Undefined
;Changes:
;NOTES: The intent of the NoInstall Option is to allow the User to issue
;         the Change Scaling/Change Resolution/Change Sample Rate
;         functions to the "real" PS/2 mouse, without needing USBMOUSE
;         installed in memory.
;------------------------------------------------------------------------------
HandleNoInstall:
  PUSH AX,BX,CX            ;Save used registers
  TEST ProgFlags,InMemory  ;Already installed as a TSR?
  JNZ >I80                 ;If so, continue
  TEST ProgFlags,NoInstall ;User wants to Install?
  JZ  >I80                 ;If so, continue
  CALL ChangeRates         ;If not, do the changes the User requested
  TEST StatusFlags,Status  ;Does the User want the Status?
  JZ  >I70                 ;If not, we're done
  MOV  DX,BIOSErrMsg       ;Assume an Error
  MOV  AX,0C200h+I15ALStatusScaling ;Function = Get Status/Set Scaling
  XOR  BH,BH               ;SubFunction = Get Status
  STC                      ;Preset Error Flag
  INT  15h                 ;Do it (Rtns BL = Bit Flags
                           ;            CL = Resolution Code
                           ;            DL = Sample Rate Code)
  JC  >I75                 ;If Error, Quit
  MOV  BH,DL               ;Put Sample Rate Code in BH
I10:                       ;Write Hardware Enabled Status
  MOV  DX,EnabledMsg       ;Write the
  CALL WriteZPause         ;  Header & Description
  MOV  DX,YesMsg           ;Assume Enabled
  TEST BL,StatusEnabled    ;Is it Enabled?
  JNZ >I15                 ;If so, continue
  MOV  DX,NoMsgS           ;If not, Disabled
I15:                       ;DX points at correct Message
  CALL WriteZPause         ;Write Enabled Status
I20:                       ;Write Number of Enabled Wheels
  MOV  DX,WheelsMsg        ;Write the
  CALL WriteZPause         ;  Description
  CALL GetNumWheels        ;Get the number of Enabled Wheels
  CALL ByteToString        ;Write it
I30:                       ;Write Resolution
  MOV  DX,ResolutionMsg    ;Write the
  CALL WriteZPause         ;  Description
  MOV  AL,1                ;Calculate the
  SHL  AL,CL               ;  Resolution
  CALL ByteToString        ;Write it
I40:                       ;Write Scaling Factor
  MOV  DX,ScalingMsg       ;Write the
  CALL WriteZPause         ;  Description
  MOV  DX,Scaling1Msg      ;Assume 1:1 Scaling
  TEST BL,StatusScaling2   ;Is it 1:1?
  JZ  >I45                 ;If so, continue
  MOV  DX,Scaling2Msg      ;If not, 2:1
I45:                       ;DX points at correct Message
  CALL WriteZPause         ;Write it
I50:                       ;Write Sample Rate
  MOV  DX,SamplesMsg       ;Write the
  CALL WriteZPause         ;  Description
  MOV  AL,BH               ;Write the
  CALL ByteToString        ;  Sample Rate
  CALL WriteCrLfPause      ;Move down
  MOV  DX,NoInstallMsg     ;Point at next message to write
  JMP >I75                 ;Done
I70:                       ;User wants No Installation
  MOV  DX,BIOSUpdateMsg    ;Exit Message to write
I75:                       ;DX points at Exit Message
  STC                      ;Set No-Install flag
  JMP >I90                 ;Done
I80:                       ;Need to Install
  CLC                      ;Set continue flag
I90:                       ;Done
  POP  CX,BX,AX            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CALCULATE HOW MANY WHEELS ARE ENABLED IN THE PS/2 MOUSE BIOS
;Inputs:
;Outputs:  AL = Number of Enabled Wheels
;Changes:
;------------------------------------------------------------------------------
GetNumWheels:
  PUSH BX,CX             ;Save used registers
  MOV  CH,AH             ;Save original AH
  MOV  AX,0C200h+I15ALGetDeviceID ;Function = Get Device ID
  INT  15h               ;Do it (returns BH)
  XOR  AL,AL             ;Assume no Wheels Enabled
  CMP  BH,DvcIDWheel1Yes ;How many Wheels are Enabled?
  JB  >W90               ;If none, we're done
  JE  >W20               ;If one, jump to increment wheels by one
  INC  AL                ;Increment number of Enabled Wheels
W20:                     ;One Wheel Enabled
  INC  AL                ;Increment number of Enabled Wheels
W90:                     ;Done
  MOV  AH,CH             ;Restore original AH
  POP  CX,BX             ;Restore Used Registers
  RET

;------------------------------------------------------------------------------
;INITIALIZE AND RESET THE REAL PS2 MOUSE, IF ONE IS INSTALLED
;Inputs:  DS = ES = TSR Data Area
;         CS = Local Data Area
;Outputs: DIPS2Offset contains Data
;Changes:
;NOTES: We will allow the user to use any or all mice at the same time, and
;         "add" them together in a single BIOS Interface.  A call made by
;         the user to change something will change all mice (PS2 & USB).
;       We will pass all appropriate user calls on to the original (BIOS)
;         routine for processing, and then process our code afterwards (we
;         control exactly what gets returned to the caller).
;       Because we Reset the "real" PS2 Mouse driver, the user will need to
;         reset the Int33h Mouse Driver if it was installed before we were.
;         The User Far Call Address will be destroyed by us, and the Driver
;         won't work.
;       Logitech and Microsoft Mouse drivers should still be able to use the
;         PS2 Mouse, but won't be able to use the USB Mice, because they do
;         not exclusively use the BIOS for access to the Mouse.
;------------------------------------------------------------------------------
ResetPS2Mouse:
  PUSH AX,BX,DI                     ;Save used registers
  TEST TSRFlags,EmuHardware         ;Are we emulating Hardware?
  JNZ >P90                          ;If so, don't do anything
  PUSH DX,DS                        ;Save used registers
  MOV  DS,CS                        ;Point DS at the Local Data Area
  MOV  DX,ResetPS2Msg               ;Assume we're installing the program
  TEST ProgFlags,InMemory           ;Are we already installed?
  JZ  >P10                          ;If not, continue
  MOV  DX,ResetPS2Msg2              ;If so, point at correct message
P10:                                ;DX points at Message to Write
  CALL WriteZPause                  ;Write the MEssage
  POP  DS,DX                        ;Restore used registers
  MOV  DI,DIPS2Offset               ;Reset the
  CALL ResetDvcEntryDI              ;  PS2 Mouse Entry
  MOV  AX,0C200h+I15ALReset         ;Function = Reset Mouse
  STC                               ;Preset Error Flag
  CALL DoPS2Int15h                  ;Do it
  JC  >P90                          ;If error, no PS2 Mouse Installed
  OR   CS:ProgFlags,PS2ResetDone    ;Mark the PS2 Reset as done
  MOV  BH,3                         ;Assume not IntelliMouse
  CALL SetIntelliMouseProtocol      ;Try to set the IntelliMouse protocol
  JZ  >P20                          ;If not IntelliMouse, continue
  INC  BH                           ;Is IntelliMouse(2) compatible
P20:                                ;Done setting up IntelliMouse
  CALL InitPS2Structure             ;Initialize the PS2 Data Structure Offsets
  MOV  AX,0C200h+I15ALInitialize    ;Function = Initialize (BH = # Data Bytes)
  CALL DoPS2Int15h                  ;Do it
  CALL SetIntelliMouseProtocol      ;Initialize the IntelliMouse Protocol again
;  MOV  BH,Resolution8               ;Set Resolution
;  MOV  AX,0C200h+I15ALSetResolution ;  at 8 counts/mm
;  CALL DoPS2Int15h                  ;Do it
;  TEST TSRFlags,EmuHardware         ;Are we emulating Hardware?
;  JNZ >P90                          ;If so, don't Enable the PS2 Handler
  MOV  BX,PS2FarCall                ;Point ES:[BX] at our PS2 Call Address
  MOV  AX,0C200h+I15ALSetHandler    ;Function = Set Handler Address
  CALL DoPS2Int15h                  ;Do it
  MOV  BH,1                         ;SubFunction = Enable Handler
  MOV  AX,0C200h+I15ALEnableDisable ;Function = Disable/Enable Handler
  CALL DoPS2Int15h                  ;Do it
P90:                                ;Done
  POP  DI,BX,AX                     ;Restore used registers
  RET

;------------------------------------------------------------------------------
;INITIALIZE THE PS2 STRUCTURE WITH APPROPRIATE OFFSET DATA
;Inputs:  DS = ES = TSR Data Area
;         PS2 Mouse already verified and IntelliMouse Protocol Enabled
;         [DIPS2Offset].NumWheels already filled in
;Outputs: [DIPS2Offset].DIXOffset, .YOffset, .Z1Offset, .Z2Offset
;Changes:
;------------------------------------------------------------------------------
InitPS2Structure:
  PUSH AX,CX,DI                          ;Save used registers
  MOV  DI,DIPS2Offset+(OFFSET DIXOffset) ;ES:[DI] = Where to store PS2 Offsets
  MOV  AX,DIPS2Offset+DIXDataPS2         ;AX = First Offset (PS2 X Data)
  MOV  CX,2                              ;Start with no wheels
  ADD  CL,[DIPS2Offset].DINumWheels      ;Add the actual number of wheels
P10:                                     ;Loop to here for each Offset
  STOSW                                  ;Store the
  INC  AX                                ;  next Offset
  LOOP P10                               ;Keep going until we're done
  POP  DI,CX,AX                          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;TRY TO SET THE INTELLIMOUSE PROTOCOL IN THE PS2 BIOS
;Inputs:  DS = ES = TSR Data Area
;         CS = Local Data Area
;         [DI] = PS2 Device Info Entry
;         PS2 Mouse already verified as installed
;Outputs: [DI].DIFlagInUse, [DI].DINumButtons, [DI].DINumWheels
;         ZF = Set if IntelliMouse(s) not supported
;             = Clear if IntelliMouse or IntelliMouse2 is supported
;Changes:
;------------------------------------------------------------------------------
SetIntelliMouseProtocol:
  PUSH AX,BX                      ;Save used registers
  OR   [DI].DIFlags,DIFlagInUse   ;Mark as In Use
  MOV  [DI].DINumButtons,2        ;Default Buttons = 2
  MOV  [DI].DINumWheels,0         ;Default Wheels = 0
  CALL SetSample200               ;Try to
  CALL SetSample100               ;  Enable
  CALL SetSample080               ;  the Wheel
  CALL SetSample100               ;Restore Default Sample Rate
  MOV  AX,0C200h+I15ALGetDeviceID ;Function = Get Device ID
  CALL DoPS2Int15h                ;Do it
  CMP  BH,DvcIDWheel1Yes          ;Does it have a Wheel?
  JNE >I90                        ;If not, continue
  INC  [DI].DINumWheels           ;If so, mark it as having a Wheel
  INC  [DI].DINumButtons          ;  and three buttons
  CALL SetSample200               ;Try to
  CALL SetSample200               ;  Enable
  CALL SetSample080               ;  the second Wheel
  CALL SetSample100               ;Restore Default Sample Rate
  MOV  AX,0C200h+I15ALGetDeviceID ;Function = Get DeviceID
  CALL DoPS2Int15h                ;Do it
  CMP  BH,DvcIDWheel2Yes          ;Does it have two Wheels?
  JNE >I90                        ;If not, continue
  INC  [DI].DINumWheels           ;If so, mark it as having 2 Wheels
  ADD  [DI].DINumButtons,2        ;  and 5 buttons
I90:                              ;Done
  CMP  [DI].DINumWheels,0         ;Set return flag
  POP  BX,AX                      ;Restore used registers
  RET

;------------------------------------------------------------------------------
;SET THE PS2 MOUSE SAMPLE RATE
;Inputs:  DS = ES = TSR Data Area
;         CS = Local Data Area
;Outputs:
;Changes:
;------------------------------------------------------------------------------
SetSample200:
  PUSH BX                         ;Save used registers
  MOV  BH,SampleCode200           ;Sample Rate = 200 Hz
  JMP >S00                        ;Do it
SetSample100:
  PUSH BX                         ;Save used registers
  MOV  BH,SampleCode100           ;Sample Rate = 100 Hz
  JMP >S00                        ;Do it
SetSample080:
  PUSH BX                         ;Save used registers
  MOV  BH,SampleCode080           ;Sample Rate = 80 Hz
;  JMP >S00                        ;Do it
S00:
  PUSH AX                         ;Save used registers
  MOV  AX,0C200h+I15ALSetSampling ;Function = Set Sampling Rate
  CALL DoPS2Int15h                ;Do it
  POP  AX                         ;Restore used registers
  POP  BX                         ;Restore used registers
  RET

;------------------------------------------------------------------------------
;PERFORM AN INT 15H BIOS FUNCTION ON THE REAL PS2 MOUSE
;Inputs:  DS = ES = TSR Data Area
;         CS = Local Data Area
;         Other Registers (usually AX and BX) as needed for the Call
;         ProgFlags.InMemory
;         If InMemory = True, ES:Int15Hdr.OldVector contains Old Address
;Outputs: Performs INT 15h function on real PS2 BIOS Handler
;         Does NOT perform it on USB Handler
;         Returns flags as issued by the PS2 Handler
;Changes: Resets and Initializes Wheel(s) on the PS2 Mouse
;------------------------------------------------------------------------------
DoPS2Int15h:
  TEST CS:ProgFlags,InMemory   ;Are we already installed as a TSR?
  JZ  >F50                     ;If not, jump to handle it
  PUSHF                        ;If so, call the
  CALL D ES:Int15Hdr.OldVector ;  Original Interrupt Handler
  JMP >F90                     ;Done
F50:                           ;Not a TSR yet
  INT  15h                     ;Just do a regular Interrupt Call
F90:                           ;Done
  RET

;------------------------------------------------------------------------------
;PERFORM THE INT 15h (BIOS MOUSE CONFIGURATION) CHANGES THE USER REQUESTED
;Inputs:  DS = Local Data Area
;         ES = TSR Data Area
;         StatusFlags.Reset
;         SamplingValue
;         ScalingValue
;         ResolutionValue
;         ES:MouseUserFarCall
;Outputs:
;Changes: Modifies Mouse Driver Settings as appropriate
;NOTES: If we are doing a Reset, we do restore the original Mouse Driver
;         Far Call Address (Int 33h), if it existed.  That way the User
;         can Reset the Mouse here without needing to worry about resetting
;         the Int 33h Driver afterwards.
;------------------------------------------------------------------------------
ChangeRates:
  PUSH AX,BX,DX                     ;Save used registers
C10:                                ;Handle Reset
  TEST StatusFlags,Reset            ;Do a Reset?
  JZ  >C40                          ;If not, continue
  TEST ProgFlags,InMemory           ;Are we already Installed in Memory?
  JZ  >C10                          ;If not, see if we're going to install
  TEST ES:TSRFlags,EmuHardware      ;If so, are we emulating the BIOS?
  JZ  >C30                          ;If so, it's OK to Reset
  JMP >C20                          ;If not, we shouldn't reset
C10:                                ;We're not installed yet
  TEST ProgFlags,NoInstall          ;Will we be Installing the program?
  JZ  >C30                          ;If so, continue
C20:                                ;We can't reset - let the user know
  MOV  DX,NoResetMsg                ;Tell User that we
  CALL WriteZPause                  ;  didn't really Reset it
  JMP >C40                          ;Continue
C30:                                ;May be OK to do Reset
  TEST ProgFlags,PS2ResetDone       ;Have we already Reset the Mouse this time?
  JNZ >C40                          ;If so, don't do it again
  PUSH DS                           ;Save used registers
  MOV  DS,ES                        ;Point DS at TSR Data Area
  CALL ResetPS2Mouse                ;Reset the PS2 Mouse
  POP  DS                           ;Restore used registers
  OR   ProgFlags,PS2ResetDone       ;Mark the Reset as complete
C40:                                ;Handle Resolution
  MOV  BH,ResolutionValue           ;Change
  CMP  BH,-1                        ;  Resolution?
  JE  >C50                          ;If not, continue
  MOV  AX,0C200h+I15ALSetResolution ;Function = Set Resolution)
  INT  15h                          ;Do it
C50:                                ;Handle Sampling Rate
  MOV  BH,SamplingValue             ;Change
  CMP  BH,-1                        ;  Sampling Rate?
  JE  >C60                          ;If not, continue
  MOV  AX,0C200h+I15ALSetSampling   ;Function = Set Sampling Rate
  INT  15h                          ;Do it
C60:                                ;Handle Scaling Factor
  MOV  BH,ScalingValue              ;Change
  CMP  BH,-1                        ;  Scaling?
  JE  >C90                          ;If not, continue
  MOV  AX,0C200h+I15ALStatusScaling ;Function = Set Scaling/Get Status
  INT  15h                          ;Do it
C90:                                ;Done
  POP  DX,BX,AX                     ;Restore used registers
  RET


;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;CODE NEEDED TO MANIPULATE THE EXTENDED BIOS DATA AREA (PS2 MOUSE BIOS)
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

  XBDASize     EQU      512         ;Number of XBDA Bytes to get
  OldXBDAData:  DB XBDASize DUP (?) ;Original Data in Extended BIOS Data Area
  XBDAMousePtr  DW        0         ;Pointer to Mouse Handler in XBDA

;NOTE: We can't restore unless Original DeviceID = Current
;        (or Mouse Handler will not know what to do with Data)


;Format of Extended BIOS Data Area (PhoenixBIOS 4.0):
;  (Also applies to IBM & AMI BIOS's)
;Offset  Size    Description     (Table M0005)
; 00h    BYTE    length of XBDA in kilobytes
; 01h 33 BYTEs   reserved
; 22h    DWORD   Pointing Device Driver entry point
; 26h    BYTE    Pointing Device Flags 1 (see #M0002)
; 27h    BYTE    Pointing Device Flags 2 (see #M0003)
; 28h  8 BYTEs   Pointing Device Auxiliary Device Data

;Bitfields for Pointing Device Flags 1:
;Bit(s)  Description     (Table M0002)
; 7      command in progress
; 6      resend byte (FAh) received
; 5      acknowledge byte (FEh) received
; 4      error byte (FCh) received
; 3      unexpected value received
; 2-0    index count for auxiliary device data at 28h

;Bitfields for Pointing Device Flags 2:
;Bit(s)  Description     (Table M0003)
; 7      device driver far call flag
; 6-3    reserved
; 2-0    package size (number of bytes received) - 1





;Copy Several Bytes of XBDA Segment (Old XBDA)
;Install ourselves as Mouse Owner
;Look for our address in XBDA (probably offset 22h)
;  Also look for other mouse data (following our address)?
;If found, pull old address from old XBDA and save it
;If the address wasn't zero to start, make sure we set ALL values to defaults
;  (or check what they are) so we know how we're set up.  Shouldn't need
;  to reset the mouse hardware at all unless nothing was installed before us??
;On uninstall, restore old Pointer Address (if it wasn't 0).  If 0, just reset?

;Inputs:
;         CLD already issued


SaveOldMouse:
  PUSH AX,BX,CX,DI,SI,ES    ;Save used registers
  CALL GetXBDASeg           ;Get the Extended BIOS Data Segment (ES)
  JC  >O90                  ;If none found, quit
  SwapDSES                  ;DS:[SI] =
  XOR  SI,SI                ;  XBDA
  MOV  DI,OldXBDAData       ;ES:[DI] = Our Local Buffer
  MOV  CX,(XBDASize/2)      ;CX = Number of Words to Copy
  REP  MOVSW                ;Copy the XBDA
