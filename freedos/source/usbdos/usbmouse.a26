;------------------------------------------------------------------------------
;WRITE THE CURRENT STATUS TO THE SCREEN
;Inputs:  ES = TSR Data Area
;         Status (Flag)
;Outputs: Writes a bunch of stuff to the screen if Status Flag is True
;Changes:
;------------------------------------------------------------------------------
DoStatus:
  TEST StatusFlags,Status ;Need to to anything?
  JZ  >S000               ;If not, quit
  CALL ChangeRates        ;If so, change Rates, if Appropriate
  TEST ProgFlags,InMemory ;Are we installed in memory yet?
  JNZ >S00                ;If so, go ahead and do it
  MOV  DX,StatusErrMsg    ;If not, point at the first part of Error Message
  JMP  FinishDataErr      ;Terminate program
S000:
  RET

S00:                                  ;Need to do Status
  CALL GotAMouse                      ;Any USB Mice installed?
  JNC >S001                           ;If so, continue
  PUSH DX                             ;If not,
  MOV  DX,NoMouseMsg                  ;  just write
  CALL WriteZPause                    ;  the "No Mouse"
  POP  DX                             ;  message
  RET

S001:                                  ;Do the Status thing!
  PUSH AX,BX,CX,DX                    ;Save used registers
  MOV  BX,0500h                       ;BL = Index (0), BH = Indent Spaces (5)

S10:                                  ;Write INT 33h Enabled Status
  MOV  DX,StatusMsg1
  CALL WriteZPause
  MOV  DX,YesMsg
  TEST ES:TSRFlags,Int15Enabled
  JNZ >S15
  MOV  DX,NoMsgS
S15:
  CALL WriteZPause

S20:                                  ;Write number of Enabled Wheels
  MOV  DX,StatusMsg2
  CALL WriteZPause
  XOR  AL,AL
  CMP  ES:DeviceID,DvcIDWheel1Yes
  JB  >S25
  JE  >S22
  INC  AL
S22:
  INC  AL
S25:
  CALL ByteToString

  MOV  DX,StatusMsg3                  ;Write Resolution
  CALL WriteZPause
  MOV  CL,ES:Resolution
  MOV  AL,1
  SHL  AL,CL
  CALL ByteToString
  CALL DoIndividualStatus             ;Do Individual Status for Index 0

S30:                                  ;Write Scaling Factor
  MOV  DX,StatusMsg4
  CALL WriteZPause
  MOV  DX,Scaling1Msg
  TEST ES:TSRFlags,ScalingFactor2
  JZ  >S35
  MOV  DX,Scaling2Msg
S35:
  CALL WriteZPause
  CALL DoIndividualStatus             ;Do Individual Status for Index 1

S40:                                  ;Write Sample Rate
  MOV  DX,StatusMsg5
  CALL WriteZPause
  MOV  AL,ES:SampleRateCode
  CMP  AL,SampleCode200
  JNE >S42
  MOV  AL,200
  JMP >S45
S42:
  PUSH BX
  MOV  BX,SampleRateTable
  CALL SearchByteToWordTbl
  MOV  AL,BL
  POP  BX
S45:
  CALL ByteToString
  CALL DoIndividualStatus             ;Do Individual Status for Index 2

S50:                                  ;Write Global Swap L/R Button Status
  MOV  DX,StatusMsg6
  CALL WriteZPause
  MOV  DX,YesMsg
  TEST ES:TSRFlags,SwapBtns
  JNZ >S55
  MOV  DX,NoMsgS
S55:
  CALL WriteZPause
  CALL DoIndividualStatus             ;Do Individual Status for Index 3

  MOV  DX,Status1EndMsg               ;Write last line
  CALL WriteZPause                    ;  of Combined Table
  CALL DoIndividualStatus             ;Do Individual Status for Index 4

S60:                                  ;Write Emulation Level
  MOV  DX,EmulationMsg
  CALL WriteZPause
  MOV  DX,BIOSMsg
  TEST ES:TSRFlags,EmuHardware
  JZ  >S65
  MOV  DX,HardwareMsg
S65:
  CALL WriteZPause
  CALL DoIndividualStatus             ;Do Individual Status for Index 5

  MOV  DX,MethodMsg                   ;Write HW Emulation Method
  CALL WriteZPause
  MOV  AL,ES:Method
  CALL ByteToString
  CALL DoIndividualStatus             ;Do Individual Status for Index 6

  MOV  DX,Status1EndMsg               ;Write last line
  CALL WriteZPause                    ;  of Left-hand Table
  CALL DoIndividualStatus             ;Do Individual Status for Index 7
  MOV  BH,37                          ;Increase Indent
  CALL DoPS2Status                    ;Do the PS2 Status
  MOV  DX,Status2EndMsg               ;Write the last line of the
  CALL WriteZPause                    ;  Individual Table
S90:                                  ;Done
  CALL WriteCrLfPause                 ;Write a New Line
  POP  DX,CX,BX,AX                    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE THE STATUS OF AN INDIVIDUAL DEVICE TO THE SCREEN
;Inputs:  BL = Device Index to write
;         BH = Number of spaces to write at beginning of line (Indent)
;         ES = TSR Data Area
;Outputs: To Screen
;Changes: BL is incremented
;------------------------------------------------------------------------------
DoIndividualStatus:
  PUSH AX,CX,DX,DI                    ;Save used registers
  MOV  CL,BH                          ;Do the
  CALL WriteSpaces                    ;  Indent
  MOV  AL,BL                          ;Write the Index Number
  CALL WriteSpace
  CALL WriteNibbleHex
  CALL WriteSpace
  CALL DIIndex2OffsetBL               ;Convert Index to Offset (DI)

  CALL Write2Spaces                   ;Write Enabled Status
  MOV  DX,YesMsg
  TEST ES:[DI].DIFlags,DIFlagDisabled
  JZ  >I15
  MOV  DX,NoMsgS
I15:
  CALL WriteZPause

  CALL Write2Spaces                   ;Write L/R Button Swap Status
  MOV  DX,YesMsg
  TEST ES:[DI].DIFlags,DIFlagSwapBtns
  JNZ >I25
  MOV  DX,NoMsgS
I25:
  CALL WriteZPause

  TEST ES:[DI].DIFlags,DIFlagInUse    ;Valid Table Entry?
  JZ  >I90                            ;If not, we're done with this one

  CALL Write2Spaces                   ;Write Number of Buttons
  MOV  AL,ES:[DI].DINumButtons
  CALL ByteToString

  CALL Write4Spaces                   ;Write Wheel Status
  MOV  AL,ES:[DI].DINumWheels
  CALL ByteToString

  CALL Write2Spaces                   ;Write Host Index
  MOV  AL,ES:[DI].DIHostIndex
  CALL ByteToString

  CALL Write2Spaces                   ;Write Device Address
  MOV  AL,ES:[DI].DIDvcAddress
  CALL ByteToString

  CALL Write2Spaces                   ;Write Interface Number
  MOV  AL,ES:[DI].DIInterfaceNum
  CALL ByteToString

I90:                                  ;Done
  CALL WriteCrLfPause                 ;Start a new line
  INC  BL                             ;Increment Index
  POP  DI,DX,CX,AX                    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;TEST AND SEE IF WE HAVE EVEN A SINGLE MOUSE (EITHER USB OR PS2)
;Inputs:  ES = TSR Data Area
;         DeviceInfoTbl
;Outputs: CF = Clear if at least one Mouse/Wheel on USB Devices
;            = Set if not
;Changes:
;------------------------------------------------------------------------------
GotAMouseNoPS2:
  PUSH CX                          ;Save used registers
  MOV  CX,MaxDevices               ;Number of entries to test (exclude PS2)
  JMP >G00                         ;Do it
GotAMouse:
  PUSH CX                          ;Save used registers
  MOV  CX,(MaxDevices+1)           ;Number of entries to test (include PS2)
;  JMP >G00                         ;Do it
G00:
  PUSH DI                          ;Save used registers
  MOV  DI,DeviceInfoTable          ;Point at Table
G10:                               ;Loop to here for each Table Entry
  TEST ES:[DI].DIFlags,DIFlagInUse ;Valid Device here?
  JNZ >G80                         ;If so, we have a mouse
  ADD  DI,DeviceInfoStrucSize      ;Point at next table entry
  LOOP G10                         ;Keep going
G70:                               ;No Device Installed
  STC                              ;Set No Device Flag
  JMP >G90                         ;Done
G80:                               ;At least one Device
  CLC                              ;Set OK Flag
G90:                               ;Done
  POP  DI                          ;Restore used registers
  POP  CX                          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;WRITE THE STATUS OF THE PS2 MOUSE
;Inputs:  BH = Number of spaces to write at beginning of line (Indent)
;         ES = TSR Data Area
;Outputs: To Screen
;Changes:
;------------------------------------------------------------------------------
DoPS2Status:
  PUSH AX,CX,DX,DI                    ;Save used registers
  MOV  CL,BH                          ;Do the
  CALL WriteSpaces                    ;  Indent
  MOV  DX,PS2Msg                      ;Write the
  CALL WriteZPause                    ;  "Index"
  CALL Write2Spaces

  MOV  DX,YesMsg                      ;Write Enabled Status
  TEST ES:[DIPS2Offset].DIFlags,DIFlagDisabled
  JZ  >P10
  MOV  DX,NoMsgS
P10:
  CALL WriteZPause

  CALL Write2Spaces                   ;Write Button L/R Exchange Status
  MOV  DX,YesMsg
  TEST ES:[DIPS2Offset].DIFlags,DIFlagSwapBtns
  JNZ >P20
  MOV  DX,NoMsgS
P20:
  CALL WriteZPause

  TEST ES:[DIPS2Offset].DIFlags,DIFlagInUse ;PS2 Mouse even installed?
  JNZ >P25                            ;If so, continue
  MOV  DX,NoPS2Msg                    ;If not, write
  CALL WriteZPause                    ;  "not installed" message
  JMP >P90                            ;Done
P25:                                  ;PS2 Mouse is installed
  CALL Write2Spaces                   ;Write Btns & Wheels
  CMP  ES:[DIPS2Offset].DINumWheels,1 ;How many Wheels does the PS2 Mouse have?
  JA  >P30                            ;If 2, jump to handle it
  JB  >P40                            ;If none, jump to handle it
  MOV  DX,Maybe3Msg                   ;1 Wheel
  CALL WriteZPause
  MOV  AL,1
  JMP >P50
P30:                                  ;IntelliMouse2
  MOV  DX,Maybe5Msg
  CALL WriteZPause
  CALL Write4Spaces
  MOV  DX,Maybe2Msg
  CALL WriteZPause
  JMP >P60
P40:                                  ;Not IntelliMouse or IntelliMouse2
  MOV  DX,BtnsUnknownMsg
  CALL WriteZPause
  XOR  AL,AL
P50:                                  ;Write number of wheels
  CALL Write4Spaces
  CALL ByteToString

P60:
  CALL Write2Spaces                   ;Write Host Index
  MOV  DX,NAMsg
  CALL WriteZPause
  CALL Write2Spaces                   ;Write Device Address
  CALL WriteZPause
  CALL Write2Spaces                   ;Write Interface Number
  CALL WriteZPause
P90:                                  ;Done
  CALL WriteCrLfPause                 ;Start a new line
  INC  BL                             ;Increment Index
  POP  DI,DX,CX,AX                    ;Restore used registers
  RET


