;CODE TO HANDLE THE ORIGINAL (REAL) PS2 MOUSE BIOS SOFTWARE
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;HANDLE THE PS2 FAR CALL (FROM THE ORIGINAL PS2 BIOS HANDLER)
;Inputs:
;Outputs:
;Changes: If appropriate, passes Far Call along to the Int 33h Handler
;           after modifying the data locations and "ORing" in the
;           buttons from the USB Mice
;------------------------------------------------------------------------------
PS2FarCall:
  PUSH BP                          ;Save used registers
  MOV  BP,SP                       ;Get Stack Pointer
                                   ;[BP+00] = Original BP
                                   ;[BP+02] = PS2 Far Call Return Addr
                                   ;[BP+06] = Stack Word 4 (Always 0)
                                   ;[BP+08] = Stack Word 3 (Y, Z if Wheel)
                                   ;[BP+10] = Stack Word 2 (X, Y if Wheel)
                                   ;[BP+12] = Stack Word 1 (Btns, & X if Wheel)
  PUSHA                            ;Save all registers
  PUSH DS,ES                       ;Save used registers
  MOV  DS,CS                       ;Point DS and
  MOV  ES,CS                       ;  ES at TSR Data Area
  MOV  BX,DIPS2Offset              ;Point at the PS2 Table Entry
  MOV  DI,12                       ;Point SS:[BP+DI] at buttons on stack
  MOV  AL,SS:[BP+DI]               ;Get the Buttons off the stack
  AND  AL,RawAll3Btns              ;Mask out unwanted bits
  CMP  [BX].DINumWheels,2          ;Are there any more buttons?
  JB  >F10                         ;If not, we're done with the buttons
  MOV  AH,SS:[BP+DI].StackZWheel   ;If so, get the Button Data
  AND  AH,30h                      ;Mask out everything but buttons 4 & 5
  SHR  AH,1                        ;Move it over so we can mask it in
  OR   AL,AH                       ;Mask it in
F10:                               ;AL contains button status
  MOV  [BX].DIBtnOffset,AL         ;Store the Buttons
  CMP  [BX].DINumWheels,0          ;Any Wheels?
  JA  >F20                         ;If so, jump to handle it
  MOV  AL,SS:[BP+DI].StackXNoWheel ;If not, put X Data in AL
  MOV  AH,SS:[BP+DI].StackYNoWheel ;  and Y Data in AH
  JMP >F30                         ;Continue
F20:                               ;Has at least one wheel
  MOV  AL,SS:[BP+DI].StackXWheel   ;Put X Data in AL
  MOV  AH,SS:[BP+DI].StackYWheel   ;  and Y Data in AH
F30:                               ;AL = X Data, AH = Y Data
  NEG  AH                          ;Make Y Data backwards
  MOV  W [BX].DIXDataPS2,AX        ;Store X & Y Data
  MOV  AL,SS:[BP+DI].StackZWheel   ;Get the Wheel Data
  XOR  AH,AH                       ;Start with Z2 Data at 0
  CMP  [BX].DINumWheels,1          ;How many wheels are there?
  JB  >F90                         ;If none, we're ready to send it
  JE  >F80                         ;If 1, it's OK to send it
F40:                               ;PS2 Mouse has 2 Wheels
  AND  AL,0Fh                      ;Mask out the buttons
  TEST AL,08h                      ;Is it Negative?
  JZ  >F45                         ;If not, continue
  OR   AL,0F0h                     ;If so, convert it to a byte
F45:                               ;Nibble converted to byte
  CMP  AL,1                        ;Is it 0, 1, or 2?
  JBE >F80                         ;If 0 or 1, it's OK like it is
  JG  >F60                         ;If 2, jump to handle it
  CMP  AL,-1                       ;Is it -2 or -1?
  JE  >F80                         ;If -1, it's OK like it is
F50:                               ;Z Data is -2
  MOV  AH,-1                       ;Mark Z2 as moved
  JMP >F70                         ;Continue
F60:                               ;Z Data is 2
  MOV  AH,1                        ;Mark Z2 as moved
F70:                               ;Need to make Z1 Data 0
  XOR  AL,AL                       ;Z1 = 0
F80:                               ;AX contains Wheels Data
  MOV  W [BX].DIZ1DataPS2,AX       ;Store the Wheels Data
  NEG  B [BX].DIZ1DataPS2          ;Make the Vertical Wheel
  ;NEG  B [BX].DIZ2Data             ;  Data backwards
F90:                               ;Data has been stored
  CALL DeviceChangeMouse           ;Do it
  POP  ES,DS                       ;Restore used registers
  POPA                             ;Restore all registers
  POP  BP                          ;Restore used registers
  RETF


