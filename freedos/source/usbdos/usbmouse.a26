;------------------------------------------------------------------------------
;SEND A REQUEST TO THE PS2 MOUSE (NOT THE USB MICE)
;Inputs:  DS = ES = TSR Data Area
;         AL = Function to call
;         Other registers (typically BH/BX) as needed for call
;         Int15Hdr.OldVector
;Outputs: Performs function for PS2 Mouse (not USB Mice)
;         Preserves AX, BX, CX, DX, and Flags across the call
;Changes:
;------------------------------------------------------------------------------
DoPS2MouseFunction:
  PUSH AX,BX,CX,DX          ;Save used registers
  PUSHF                     ;Save flags
  TEST B [DIPS2Offset].DIFlags,DIFlagInUse ;Is there a PS2 Mouse installed?
  JZ  >P90                  ;If not, quit
  MOV  AH,Int15PS2PortCall  ;Set correct value for AH
  PUSHF                     ;Do
  CALL D Int15Hdr.OldVector ;  it
P90:                        ;Done
  POPF                      ;Restore flags
  POP  DX,CX,BX,AX          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CALCULATE CURRENT STATUS BYTE
;Inputs:  DS = ES = TSR Data Area
;         Various Registers (mostly in Int14 Request)
;Outputs: BL = Current Status (as needed by Int 15h GetStatus Request)
;Changes:
;------------------------------------------------------------------------------
CalcStatus:
  PUSH AX                      ;Save used registers
  XOR  BL,BL                   ;Default = 0
  TEST TSRFlags,Int15Enabled   ;Enabled?
  JZ  >S10                     ;If not, continue
  OR   BL,StatusEnabled        ;If so, mark it as Enabled
S10:                           ;Test Buttons
  CALL GetAllRawBtns           ;Get combined Buttons Status (AL, 5 buttons)
S20:                           ;Test Left Button
  TEST AL,RawLBtn              ;Left Button pressed?
  JZ  >S30                     ;If not, continue
  OR   BL,StatusLBtn           ;If so, mark it as pressed
S30:                           ;Test Right Button
  TEST AL,RawRBtn              ;Right Button pressed?
  JZ  >S40                     ;If not, continue
  OR   BL,StatusRBtn           ;If so, mark it as pressed
S40:                           ;Test Center Button
  TEST AL,RawCBtn              ;Center Buton pressed?
  JZ  >S50                     ;If not, continue
  OR   BL,StatusCBtn           ;If so, mark it as pressed
S50:                           ;Test Scaling
  TEST TSRFlags,ScalingFactor2 ;Scaling Factor at 2:1?
  JZ  >S60                     ;If not, continue
  OR   BL,StatusScaling2       ;If so, mark as 2:1 Scaling
S60:                           ;Test Stream/Remote Mode
                               ;Mode Always Stream!
S90:                           ;Done
  POP  AX                      ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CALCULATE CURRENT SAMPLE RATE
;Inputs:  DS = ES = TSR Data Area
;         Periodicity contains last Periodicity rate set
;Outputs: DL = Sample Rate (Reports/Second)
;Changes:
;------------------------------------------------------------------------------
CalcSampleRate:
  PUSH AX,BX               ;Save used registers
  MOV  AL,SampleRateCode   ;Get current Sample Rate Code
S10:                       ;Test for 100
  CMP  AL,SampleCode100    ;Is it 100 or 200 (if so, we're really 80)?
  JB  >S40                 ;If not, just use the table
  JA  >S20                 ;If 200, jump to handle it
  MOV  BL,100              ;Tell the user it's 100
  JMP >S80                 ;Done
S20:                       ;It's 200
  MOV  BL,200              ;If so, tell the user it's 200
  JMP >S80                 ;Done
S40:                       ;Convert Code using the Table
  MOV  BX,SampleRateTable  ;Convert the Code
  CALL SearchByteToWordTbl ;  to an Interrupt Rate
S80:                       ;BL contains Sampel Rate
  MOV  DL,BL               ;Put it in DL for the Return
  POP  BX,AX               ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CALCULATE CURRENT IDLE RATE FACTOR TO USE
;Inputs:  DS = ES = TSR Data Area
;         SampleRateCode
;Outputs: AL = Idle Rate to set Device to
;         (Periodicity = 2+4*IdleRate)
;Changes:
;------------------------------------------------------------------------------
CalcIdleRate:
  PUSH BX              ;Save used registers
  MOV  BH,AH           ;Save AH
  CALL CalcPeriodicity ;Get Periodicity (AL)
I20:                   ;Periodicity >= 10
  SUB  AL,2            ;Subtract 2
  SHR  AL,1            ;Divide
  SHR  AL,1            ;  by 4
  MOV  AH,BH           ;Restore AH
  POP  BX              ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CALCULATE CURRENT PERIODICITY FACTOR TO USE
;Inputs:  DS = ES = TSR Data Area
;         SampleRateCode
;Outputs: AX = Periodicity
;Changes:
;------------------------------------------------------------------------------
CalcPeriodicity:
  PUSH BX                  ;Save used registers
  MOV  AL,SampleRateCode   ;Get current Sample Rate Code
  MOV  BX,SampleRateTable  ;Convert the Code
  CALL SearchByteToWordTbl ;  to an Interrupt Rate
  MOV  AL,BH               ;Put Periodicity
  XOR  AH,AH               ;  in AX
  POP  BX                  ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CHANGE THE SAMPLE RATE TO A NEW PERIODICITY
;Inputs:  DS = ES = TSR Data Area
;         BL = New Periodicity to use
;Outputs:
;Changes: Modifies Interrupt Periodicity (for all mice)
;         Modifies Idle Rate of Device (for all mice)
;NOTES: Thos does NOT change anything on the PS2 Mouse, only on the USB Mice.
;------------------------------------------------------------------------------
ChangePeriodicity:
  PUSH AX,BX,CX,DI,SI                          ;Save used registers
  MOV  SI,Int14Request2                        ;Point at Request Structure
  MOV  [SI].I14REndPoint,0                     ;End Point 0
  XOR  BH,BH                                   ;Store Periodicity
  MOV  [SI].I14RPeriodicity,BX                 ;  in Request
  MOV  CX,SetHIDIdleReq                        ;Point at Idle Request Struc
  CALL CopySetupReqToInt14SI                   ;Copy Setup Pkt (CX)
  MOV  CL,2                                    ;Calculate Idle Rate
  SUB  BL,CL                                   ;Calculate Idle Rate to use
  SHR  BL,CL                                   ;  (2ms + 4 * this number)
  MOV  B [SI].I14RSetHIDIdleDuration,BL        ;Store it in the Request
  MOV  W [SI].I14RCallBackAddr[0],-1           ;Do nothing when done
  MOV  CX,MaxDevices                           ;Number of Table Entries
  MOV  DI,DeviceInfoTable                      ;Point at Table
P10:                                           ;Loop to here for each Table Entry
  TEST [DI].DIFlags,DIFlagInUse                ;Valid Table Entry?
  JZ  >P50                                     ;If not, skip it
  MOV  AX,W [DI].DIHostIndex                   ;Copy the Host Index
  MOV  W [SI].I14RHostIndex,AX                 ;  and Device Address
  MOV  AX,[DI].DIIntHandle                     ;Copy the
  MOV  [SI].I14RRequestHandle,AX               ;  Interrupt Handle Number
  MOV  AL,[DI].DIInterfaceNum                  ;Copy the
  MOV  B [SI].I14RSetHIDIdleIntf,AL            ;  Interface Number
  MOV  AL,[DI].DIReportID                      ;Copy the Report ID
  MOV  B [SI].I14RSetHIDIdleRptID,AL           ;  (will be 0 if no ID's used)
  MOV  [SI].I14RRequestType,I14RRTChangeIntPer ;Request = Change Periodicity
  CALL DoInt14CallSaveAllSI                    ;Do it
  MOV  [SI].I14RRequestType,I14RRTDoControl    ;Type = Control
  CALL DoInt14CallSaveAllSI                    ;Do it
P50:                                           ;Done with this Table Entry
  ADD  DI,DeviceInfoStrucSize                  ;Point at next Table Entry
  LOOP P10                                     ;Keep going until we're done
  POP  SI,DI,CX,BX,AX                          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;RESET MOVEMENT AND BUTTON VALUES TO 0
;Inputs:  DS = ES = TSR Data Area
;Outputs: XTotal, YTotal
;Changes:
;------------------------------------------------------------------------------
ResetTotals:
  PUSH AX,CX,DI               ;Save used registers
  XOR  AX,AX                  ;Reset to zeroes
  MOV  CX,(MaxDevices+1)      ;Number of Table entries to do
  MOV  DI,DeviceInfoTable     ;Point at Table
R10:                          ;Loop to here for each table entry
  MOV  W [DI].DIXRemainder,AX ;Reset Remainders
  MOV  W [DI].DIRawData[0],AX ;Reset
  MOV  W [DI].DIRawData[2],AX ;  All
  MOV  W [DI].DIRawData[4],AX ;  Raw
  MOV  W [DI].DIRawData[6],AX ;  Data
  ADD  DI,DeviceInfoStrucSize ;Point at next entry
  LOOP R10                    ;Keep going
  POP  DI,CX,AX               ;Restore used registers
  RET

;------------------------------------------------------------------------------
;SEARCH A BYTE-TO-WORD LOOKUP TABLE FOR A MATCH
;Inputs:  ES:[BX] = Table to search
;         AL      = Byte to search for
;Outputs: CF = Clear if a byte match as found in table
;              BX = Word from Table
;            = Set if no match found in table
;              BX = unchanged
;Changes: Last Entry in Table (end-of-table marker) = DB -1, DW -1
;------------------------------------------------------------------------------
SearchByteToWordTbl:
  PUSH AX,SI,DS  ;Save used registers
  CLD            ;Go forward with string functions
  MOV  DS,ES     ;Point DS at correct data area
  MOV  SI,BX     ;Put pointer in SI
  MOV  AH,AL     ;Put byte to check in AH
B10:             ;Loop to here for each table entry
  LODSB          ;Get the next table entry
  CMP  AL,-1     ;Is it possibly the end of the table?
  JNE >B20       ;If not, continue
  CMP  W [SI],-1 ;Is it actually the end of the table?
  JE  >B70       ;If so, there's no match
B20:             ;Not end of table
  CMP  AL,AH     ;Is it a match?
  JE  >B80       ;If so, handle it!
  INC  SI,2      ;If not, skip over this table entry
  JMP  B10       ;And keep looking
B70:             ;No entry found
  STC            ;Set the not found flag
  JMP >B90       ;Quit
B80:             ;Entry found [SI]
  MOV  BX,[SI]   ;Point BX at the table entry
  CLC            ;Set the found flag
B90:             ;Done
  POP  DS,SI,AX  ;Restore used registers
  RET


;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;CODE TO HANDLE INT 08h (Timer Tick)
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;HAVE INTERRUPT 08 (TIMER) RUN THIS EVERY TIME IT OCCURS
;Inputs:
;Outputs: Searches for Newly attached Device
;Changes:
;NOTES: In theory, we shouldn't even need to do this since we are registering
;         and will be notified automatically if a new Device is attached.
;       We will do this just in case we miss it or are busy for some reason.
;------------------------------------------------------------------------------
Int08Hdr:
  DB TYPE IntHdr DUP (0) ;Header for removable interrupt vector code

Int08:
  PUSHF                          ;Process the
  CALL D CS:Int08Hdr.OldVector   ;  Old Interrupt Handler
  STI                            ;Enable interrupts
  CLD                            ;Go forward with string functions
  CALL MakeStack                 ;Set up our own Stack Space
  PUSH BX,DI,SI,DS,ES            ;Save used registers
  MOV  DS,CS                     ;Point DS and
  MOV  ES,CS                     ;  ES at our data area
  CALL EnableIRQ8                ;Enable IRQ 8 (CMOS Timer)
  CALL EnableInt70               ;Enable INT 70h (CMOS Timer)
  ;CALL DoIntelliTimer            ;Count down the IntelliMouse Timer
  MOV  BX,OFFSET TSRFlags2       ;Point [BX] at TSRFlags2
  TEST B [BX],Int08InUse         ;Still processing the previous IRQ?
  JNZ >E95                       ;If so, quit
  OR   B [BX],Int08InUse         ;If not, mark as processing
E10:                             ;OK to process
  MOV  DI,OFFSET Int08Counter    ;Point DI at Int08Counter
  MOV  SI,OFFSET DontLookCounter ;Point BX at DontLookCounter
  CMP  W [SI],0                  ;Need to Decrement DontLookCounter?
  JE  >E20                       ;If not, continue
  DEC  W [SI]                    ;If so, Decrement it
  JNZ >E90                       ;If not 0 yet, quit
  CMP  B [DI],0                  ;Disabled?
  JE  >E90                       ;If so, quit
  MOV  B [DI],1                  ;If not, look for Device right away
E20:                             ;Done with DontLookCounter
  CMP  B [DI],0                  ;Are we supposed to look yet?
  JE  >E90                       ;If not, just quit
  DEC  B [DI]                    ;Decrement the Delay Counter
  JNZ >E90                       ;If not 0 yet, quit
  MOV  B [DI],182                ;If 0, reset for next time (approx 10 seconds)
  PUSH AX,BX,CX,DX,BP            ;Save used registers
  CALL LookForNewDevice          ;Look for a new Device
  POP  BP,DX,CX,BX,AX            ;Restore used registers
E90:                             ;Done, mark as not processing any more
  AND  B [BX],(NOT Int08InUse)   ;Mark as done processing
E95:                             ;Done
  POP  ES,DS,SI,DI,BX            ;Restore used registers
  CALL ReturnStack               ;Restore Original Stack Space
  IRET

