;TSR DATA
;ÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜ

;==============================================================================
;TSR Related
;==============================================================================

  ;------------------------------------------------------------------------------
  ;INT2F Data (this needs to be the first data at the top of the file)
  ;If the user does a "TYPE USBMOUSE.COM" at the command line, this will
  ;  just show the program name and version, instead of sending all kinds of
  ;  annoying happy faces and BELs to the screen the way most programs do.
  ;This is also the same data that is used to test if the program is
  ;  already installed in memory.
  ;------------------------------------------------------------------------------
  NoType1:     DB               CR  ;To handle TYPE from command line
  ProgName:    DB        'USBMOUSE' ;Program Name
  ProgNameLen EQU       $-ProgName  ;Length of name
  ProgVerTxt:  DB           ' 0.10' ;Program version in ASCII
  Author:      DB '  Bret Johnson' ;Authors name
  AuthorLen   EQU         $-Author  ;Length of Author
  NoType2:     DB              EOF  ;To handle TYPE from command line
  ProgVer      DW             0010h ;Program version as a word
  HandleNum    DB              0C0h ;TSR multiplex handle number

  ;------------------------------------------------------------------------------
  ;Miscellaneous Yes/No TSR Flags
  ;------------------------------------------------------------------------------
  TSRFlags          DB 00h ;Miscellaneous Yes/No Flags
    Int15Enabled   EQU 01h ;Int 15 Far Call function Enabled?
    ScalingFactor2 EQU 02h ;Scaling Factor is 2:1?
    Int14ReqInUse  EQU 04h ;Int 14 Request currently being used
    FarCallInProg  EQU 08h ;Mouse User Far Call already in progress
    SwapBtns       EQU 10h ;Swap L/R Buttons Globally
    NoBeep         EQU 20h ;Don't Beep the Speaker
    EmuHardware    EQU 40h ;Use Hardware Emulation (rather than BIOS)
    EOIIssued      EQU 80h ;End-of-Interrupt (OUT A0h,20h) occured

  TSRFlags2      DB 00h ;Miscellaneous Yes/No Flags #2
    DisableAll  EQU 01h ;Disable All Mice (used while showing RawData)
    Int08InUse  EQU 02h ;Int 08h already in use
    Int70InUse  EQU 04h ;Int 70h already in use
    NoBeep1Time EQU 08h ;No Beep this One Time


;==============================================================================
;Stack Related
;==============================================================================
  StackInUse DB 0 ;Counter to keep track of "setup stack" calls
  OldSS      DW ? ;Original Stack Segment
  OldSP      DW ? ;Original Stack Pointer
  TempBX     DW ? ;Temporary Storage for BX while setting up Stack
  TempFlags  DW ? ;Temporary Storage for Flags while setting up Stack


;==============================================================================
;INT 70h (System Delay) Related
;==============================================================================
  OldA1           DB ? ;Original Port A1h Contents (PIC2 IRQ Mask)
;  ChangeThisByte: DB 0 ;Byte of memory for Event Timer to change


;==============================================================================
;PS2 Port BIOS Function related (Int 15h)
;==============================================================================

  ;----------------------------------------------------------------------------
  ;Code to Call when another Program "Registers" as Int 15h Owner
  ;----------------------------------------------------------------------------
  EVEN 2
  MouseUserFarCall DD ? ;Mouse User Interrupt Handler

  ;----------------------------------------------------------------------------
  ;Device ID we return on calls (keeps track of IntelliMouse enables)
  ;----------------------------------------------------------------------------
  DeviceID DB DvcIDWheelNo

  ;----------------------------------------------------------------------------
  ;This keeps track of the user trying to Enable the Wheel of a PS2 Mouse
  ;To enable the Wheel, the user must Set the Sample rate to 200, 100, 80,
  ;  in that order, with no other Int 15h C2xxh calls in between
  ;To enable the 2nd Wheel, the user must Set the Sample rate to 200, 200, 80,
  ;  in that order, with no other Int 15h C2xxh calls in between
  ;----------------------------------------------------------------------------
  EnableWheelCounter  DB 0 ;Needed to know when user wants to Enable Wheel
  EnableWheelCounter2 DB 0 ;Needed to know when user wants to Enable 2nd Wheel

  ;;----------------------------------------------------------------------------
  ;;Timer to keep track of IntelliMouse enables
  ;;If there is too much time elapsed between the first and last Enable
  ;;  setting (200-100-80 or 200-200-80), we will ignore the enable.
  ;;----------------------------------------------------------------------------
  ;IntelliTimer DB ?

  ;----------------------------------------------------------------------------
  ;Size of Data returned by Int15 calls
  ;----------------------------------------------------------------------------
  Int15DataSize DB 3 ;3 if user does NOT want to see Wheel data,
                     ;4 they DO want to see it

  ;----------------------------------------------------------------------------
  ;Data needed to store Current Mouse Resolution (Counts/mm)
  ;----------------------------------------------------------------------------
  Resolution DB Resolution4 ;Resolution in Counts/mm (Default = 4)

  ;----------------------------------------------------------------------------
  ;Data needed to Store Current Sample Rate (Periodicity)
  ;----------------------------------------------------------------------------
  SampleRateCode DB SampleCode100 ;Default Sample Rate = 100Hz

  ;----------------------------------------------------------------------------
  ;Data needed to Set/Change Sample Rate (Periodicity)
  ;The Int 15h functions are issued with a Code Number (0-6)
  ;This Lookup Table converts the Code to an actual Sample Rate, and to a
  ;  Periodicity Factor (Divisor) needed for the USB 1000Hz Interrupt Rate
  ;----------------------------------------------------------------------------
  SampleRateTable:
    DB   SampleCode010 ;Code from Int 15 Function
      DB            10 ;Corresponding Interrupt Rate (Hz)
      DB           100 ;Periodicity Factor (1000Hz divisor)
    DB   SampleCode020
      DB            20
      DB            50
    DB   SampleCode040
      DB            40
      DB            25
    DB   SampleCode060
      DB            60
      DB            17
    DB   SampleCode080
      DB            80
      DB            13
    DB   SampleCode100
      DB           100
      DB            10
   ; DB   SampleCode200
   ;   DB           200
   ;   DB             5
    DB   SampleCode200   ;We actually use 100 as the maximum,
      DB           100   ;  since 200 doesn't seem to work
      DB            10   ;  very well!!
    DB -1                ;End of Table
      DW -1

  ;----------------------------------------------------------------------------
  ;Data needed to compensate for 2:1 Scaling Factor
  ;Instead of blindly multiplying everything by 2, setting the Scaling
  ;  Factor to 2:1 actually uses special algorithm when the amount of
  ;  movement is small (<=5).  Only when the amount of movement is
  ;  large (>5) does the Mouse actually multiply the Actual movement
  ;  factor by 2.
  ;This Table contains the data needed by the Scaling Factor algorithm
  ;  data for small movements.  The Table contains the Reported Movement
  ;  when the Actual Movement is small.  The line number of the Table
  ;  (0-5) is the Actual movement factor.
  ;If the Scaling Factor is 1:1 (the default), this Table is not used.
  ;----------------------------------------------------------------------------

  ScalingTbl:
;Reported Actual
;-------- ------
    DB 0 ;0
    DB 1 ;1
    DB 1 ;2
    DB 3 ;3
    DB 6 ;4
    DB 9 ;5

  ;----------------------------------------------------------------------------
  ;Int 15h PS2 Port SubFunctions (in AL on Int 15h entry)
  ;----------------------------------------------------------------------------
  Int15FunctionTbl:
    DB I15ALEnableDisable    ;Enable/Disable
     DW PS2EnableDisable
    DB I15ALReset            ;Reset
     DW PS2Reset
    DB I15ALSetSampling      ;Set Sampling Rate
     DW PS2SetSampleRate
    DB I15ALSetResolution    ;Set Resolution
     DW PS2SetResolution
    DB I15ALGetDeviceID      ;Get Device ID
     DW PS2GetDeviceIDBH
    DB I15ALInitialize       ;Initialize
     DW PS2Initialize
    DB I15ALStatusScaling    ;Get Status / Set Scaling
     DW PS2GetStatus
    DB I15ALSetHandler       ;Set Handler Address
     DW PS2SetHandlerAddress
    ;Functions 8 (Write to Port) and 9 (Read from Port)
    ;  not supported by us!
    DB I15ALGetHandler       ;Get Handler Address
     DW PS2GetHandlerAddress
    DB -1                    ;End of Table
     DW -1

;==============================================================================
;Mouse Related
;==============================================================================

  ;----------------------------------------------------------------------------
  ;Method to use to "type" a Mouse Data Byte
  ;0 = Not Configured yet, 1-3 = valid Methods
  ;----------------------------------------------------------------------------
  Method DB 0

  ;----------------------------------------------------------------------------
  ;Data needed to send a Data Byte using Method 3
  ;----------------------------------------------------------------------------
  EVEN 2
  Int01Vect    DD  ? ;Old Interrupt 01 (SST) Vector
  IntXXFlags   DW  ? ;For Interrupt Stack Calls
  IntXXVect    DD  ? ;For Interrupt Stack Calls
  DoNextTime   DB No ;Fake the Byte again next time?
  ByteToSend   DB  ? ;Data Byte to send
  Int01Counter DB  0 ;Counter for recursive calls to Int01
  InstrCounter DW  0 ;Instruction Counter for Int 01h (for OUT A0h,20h)

  ;----------------------------------------------------------------------------
  ;Circular Buffer to store Data Bytes we need to send.
  ;Each time something happens, we will either send 3 or 4 data bytes
  ;  (whether 3 or 4 depends on how the MOuse is configured).
  ;Our process involves filling this buffer with Data Bytes as we process the
  ;  USB Codes, and then "typing" the contents of the buffer after we're
  ;  done.
  ;This is a circular buffer, which is safer than a linear buffer
  ;  (it is "protected" from us trying to fill it with too much data)
  ;----------------------------------------------------------------------------
  Buffer:      DB BufferSize DUP (?)  ;Buffer for Scan Codes
  BufferHead   DW Buffer+1            ;Pointer to Buffer Head
  BufferTail   DW Buffer              ;Pointer to Buffer Tail
  BufferCount  DB 0                   ;Number of codes currently in buffer
  BufferEnd   EQU Buffer+BufferSize-1 ;End of buffer

;  ;----------------------------------------------------------------------------
;  ;INT 09 (Keyboard) Vector
;  ;The Keyboard and the PS2 Mouse share the same hardware, including the
;  ;  same I/O Ports (60h-64h).
;  ;When performing Hardware Emulation, we "fake" keystrokes to port 60h,
;  ;  which for some unknown reason get intercepted by the keyboard handler
;  ;  (IRQ 01/INT 09) instead of the PS2 Mouse Handler (IRQ 12/INT 74h).
;  ;While doing our HW emulation, we temporarily intercept INT 09 ourselves
;  ;  to make sure our codes don't get intercepted by the keyboard handler
;  ;  by mistake.
;  ;----------------------------------------------------------------------------
;  Int09Vect DD ?


;==============================================================================
;USB Related
;==============================================================================

  ;----------------------------------------------------------------------------
  ;Handle Number of New Device (Device 0) Registry
  ;----------------------------------------------------------------------------
  Reg0Handle DW ?

  ;----------------------------------------------------------------------------
  ;Int08 Countdown Timers
  ;----------------------------------------------------------------------------
  Int08Counter    DB 5 ;Countdown Timer to periodically check for new Devices
                       ;Initial Delay is 5 timer ticks (about 1/4 second)
                       ;Delays after initial one will be about 1 second
                       ;Setting to 0 Disables the program
  DontLookCounter DW 0 ;Countdown Timer to not Look for new Devices

  ;----------------------------------------------------------------------------
  ;Calls that the USB Host Driver can send to us after we're "registered"
  ;Our code is called with this function code in AX
  ;----------------------------------------------------------------------------
  OwnerCallFunctionTbl:
   ;Device Connect/Disconnect
    DB OwnerCallNewDvc        ;New Device Connected
     DW DeviceAdded
    DB OwnerCallDvcDisc       ;Existing Device Disconnected
     DW DeviceDisconnected
    DB OwnerCallDvc0Disc      ;Unregistered Device Disconnected
     DW Device0Disconnected
    DB OwnerCallDontLook      ;Don't Look for New Interface Temporarily
     DW StartDontLook
   ;Device Enable/Disable/Reset/Suspend/Resume/PwrOn/PwrOff/PwrReset
    DB OwnerCallDvcEnable     ;Device Enabled
     DW DeviceEnabled
    DB OwnerCallDvcDisable    ;Device Disabled
     DW DeviceDisabled
    DB OwnerCallDvcReset      ;Device Reset
     DW DeviceReset
    DB OwnerCallDvcSuspend    ;Device Suspend
     DW DeviceSuspend
    DB OwnerCallDvcResume     ;Device Resume
     DW DeviceResume
    DB OwnerCallDvcPwrOn      ;Device Power On
     DW DevicePowerOn
    DB OwnerCallDvcPwrOff     ;Device Power Off
     DW DevicePowerOff
    DB OwnerCallDvcPwrReset   ;Device Power Reset
     DW DevicePowerReset
   ;Host Connect/Disconnect
    DB OwnerCallNewHost       ;New Host has been Added
     DW NewHostAdded
    DB OwnerCallHostDisc      ;Existing Host Disconnected
     DW HostDisconnected
    DB OwnerCallHostHWErr     ;Host System/Processor Error
     DW HostHWErr
   ;Host Run/Stop/Reset/Suspend/Resume/Debug/SingleStep
    DB OwnerCallHostRun       ;Host Running
     DW HostRun
    DB OwnerCallHostStop      ;Host Stopped
     DW HostStop
    DB OwnerCallHostReset     ;Host Reset
     DW HostReset
    DB OwnerCallHostSuspend   ;Host Suspended
     DW HostSuspend
    DB OwnerCallHostResume    ;Host Resumed
     DW HostResume
    DB OwnerCallHostDebug     ;Host in Debug Mode
     DW HostDebug
    DB OwnerCallHostSST       ;Host Single-Stepped
     DW HostSST
   ;Timing Changes
    DB OwnerCallTimingChg     ;Host Timing Changed
     DW TimingChange
   ;Upstream Device Changes
    DB OwnerCallDvcDiscUS     ;Device Disconnect Upstream
     DW DeviceDisconnectedUS
    DB OwnerCallDvcEnableUS   ;Device Enable Upstream
     DW DeviceEnabledUS
    DB OwnerCallDvcDisableUS  ;Device Disable Upstream
     DW DeviceDisabledUS
    DB OwnerCallDvcResetUS    ;Device Reset Upstream
     DW DeviceResetUS
    DB OwnerCallDvcSuspendUS  ;Device Suspend Upstream
     DW DeviceSuspendUS
    DB OwnerCallDvcResumeUS   ;Device Resume Upstream
     DW DeviceResumeUS
    DB OwnerCallDvcPwrOnUS    ;Device Power On Upstream
     DW DevicePowerOnUS
    DB OwnerCallDvcPwrOffUS   ;Device Power Off Upstream
     DW DevicePowerOffUS
    DB OwnerCallDvcPwrResetUS ;Device Power Reset Upstream
     DW DevicePowerResetUS
   ;End of Table
    DB -1                     ;End of Table
     DW -1

  ;----------------------------------------------------------------------------
  ;Table to keep track of individual Devices
  ;----------------------------------------------------------------------------
  EVEN 2
  DeviceInfoTable:
    DB ((MaxDevices+1)*DeviceInfoStrucSize) DUP (0) ;Table of Dvc Data
    DIPS2Offset EQU (DeviceInfoTable+(MaxDevices*DeviceInfoStrucSize))
                                                    ;Last entry is PS2 Mouse

  ;----------------------------------------------------------------------------
  ;Table to keep track of "bad" (incompatible) Devices.
  ;This table will keep track of Host Indexes and Address of incompatible
  ;  Devices that we find.
  ;If we don't keep track of them, we will get caught in an endless
  ;  loop of looking at the bad one every time we check (if it happens
  ;  to be the first one), and will never skip over it and be
  ;  able to find a "good" (compatible) Device.
  ;----------------------------------------------------------------------------
  EVEN 2
  BadDeviceTable:
    DB (MaxBadDevices*BadDeviceStrucSize) DUP (0)

  ;----------------------------------------------------------------------------
  ;Offset in InfoTable of Last Device we found (needed to print Descriptors)
  ;----------------------------------------------------------------------------
  LastDeviceFound DW DeviceInfoTable

  ;----------------------------------------------------------------------------
  ;Stage & Error Code where New Device search failed (for troubleshooting)
  ;----------------------------------------------------------------------------
  NewDeviceStage DB ?
  NewDeviceError DW ?

  ;----------------------------------------------------------------------------
  ;Data Structures needed to issue Requests to the USB Host
  ;----------------------------------------------------------------------------
  EVEN 2
  Int14Request:
    DB Int14RequestSize DUP (0)
  Int14Request2:
    DB Int14RequestSize DUP (0)

  ;----------------------------------------------------------------------------
  ;Storage Area for Data returned by USB Descriptors and Reports
  ;----------------------------------------------------------------------------
  DvcDescrData:
    DB DeviceDescriptorSize DUP (?) ;Device Descriptor Data
  DescriptorData:
    DB MaxDescriptorSize    DUP (?) ;Actual Descriptor Data
  ReportData:
    DB MaxReportSize        DUP (?) ;Actual Report Data


;==============================================================================
;USB Mouse/HID Class-Specific Control Requests
;==============================================================================
  EVEN 2

  ;----------------------------------------------------------------------------
  ;Get Report Descriptor
  ;----------------------------------------------------------------------------
  GetReportDescrReq:
    DB SRRTIn+SRRTTypeStandard+SRRTRecipInterface
    DB SRRQGetDescriptor
    DB ? ;Report ID
    DB DescrTypeHIDReport
    DB ? ;Interface Number
    DB 0
    DW ? ;Number of Bytes

  I14RGetReportDescrRptID EQU I14RSetupReqData.SRValue[0] ;Byte
  I14RGetReportDescrIntf  EQU I14RSetupReqData.SRIndex[0] ;Byte
  I14RGetReportDescrSize  EQU I14RSetupReqData.SRLength   ;Word

  ;----------------------------------------------------------------------------
  ;Set Idle Rate
  ;  Silences Report on Interrupt In EndPoint until new event or specified time
  ;  Recommended DEFAULT idle rate is 500ms for keyboards (delay before
  ;    first rpt) and infinity for joysticks and mice
  ;----------------------------------------------------------------------------
  SetHIDIdleReq:
    DB SRRTOut+SRRTTypeClass+SRRTRecipInterface
    DB HIDRQSetIdle
    DB ? ;Report ID (0 = AllReports)
    DB ? ;Duration in 4ms increments (+/- 10% + 2ms)
         ;0 = infinite (only report changes)
         ;If less than polling rate, polling rate is used
    DB ? ;Interface Number
    DB 0
    DW 0

  I14RSetHIDIdleRptID    EQU I14RSetupReqData.SRValue[0] ;Byte
  I14RSetHIDIdleDuration EQU I14RSetupReqData.SRValue[1] ;Byte
  I14RSetHIDIdleIntf     EQU I14RSetupReqData.SRIndex[0] ;Byte

;  ;----------------------------------------------------------------------------
;  ;Set Protocol
;  ;----------------------------------------------------------------------------
;  SetHIDProtocolReq:
;    DB SRRTOut+SRRTTypeClass+SRRTRecipInterface
;    DB HIDRQSetProtocol
;    DB HIDProtocolReport ;Protocol Type = Report (we do not use Boot Protocol)
;    DB 0
;    DB ? ;Interface Number
;    DB 0
;    DW 0
;
;  I14RSetHIDProtocolIntf EQU I14RSetupReqData.SRIndex[0] ;Byte


;==============================================================================
;USB General-Purpose Control Requests
;==============================================================================

  ;----------------------------------------------------------------------------
  ;Get Device Descriptor
  ;----------------------------------------------------------------------------
  GetDvcDescrReq:
    DB SRRTIn+SRRTTypeStandard+SRRTRecipDevice
    DB SRRQGetDescriptor
    DB 0
    DB DescrTypeDevice
    DW 0
    DW DeviceDescriptorSize

  ;----------------------------------------------------------------------------
  ;Get Configuration Descriptor
  ;----------------------------------------------------------------------------
  GetCfgDescrReq:
    DB SRRTIn+SRRTTypeStandard+SRRTRecipDevice
    DB SRRQGetDescriptor
    DB 0 ;Configuration Value to Get (always 0?)
    DB DescrTypeConfig
    DW 0
    DW ConfigDescriptorSize ;Size will change for a Complete Config

  I14RGetCfgDescrValue EQU I14RSetupReqData.SRValue[0] ;Byte
  I14RGetCfgDescrSize  EQU I14RSetupReqData.SRLength   ;Word

  ;----------------------------------------------------------------------------
  ;Set Alternate Interface
  ;----------------------------------------------------------------------------
  SetAltIntfReq:
    DB SRRTOut+SRRTTypeStandard+SRRTRecipInterface
    DB SRRQSetAltInterface
    DB ? ;Alternate Value to set Interface to
    DB 0
    DB ? ;Interface to Set
    DB 0
    DW 0

  I14RSetAltIntfAltIntf EQU I14RSetupReqData.SRValue[0] ;Byte
  I14RSetAltIntfIntf    EQU I14RSetupReqData.SRIndex[0] ;Byte


;ßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßßß
;TSR CODE
;ÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜÜ

;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;CODE TO HANDLE INT 2Fh (TSR Multiplex)
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;HAVE INTERRUPT 2Fh RUN THIS PROGRAM EVERY TIME IT OCCURS
;Inputs:  AH = Function (Handle) number, C0h-FFh
;         AL = Subfunction number
;          (If MuxGetProgName): DI = 0
;Outputs:  (AL = MuxInstallChk):  AL = FFh if installed
;          (AL = MuxGetProgName): ES:[DI] = Pointer to ProgName
;          (AL = MuxGetProgVer):  AX = ProgVer (Program version number, AH=Major)
;          (AL = MuxGetAuthor):   ES:[DI] = Pointer to Author
;Changes:
;------------------------------------------------------------------------------
Int2FHdr:
  DB TYPE IntHdr DUP (0) ;Header for removable interrupt vector code

Int2F:
  STI                               ;Enable Interrupts
  CMP  AH,CS:HandleNum              ;Is this our handle?
  JE   Int2FInstall                 ;If so, jump to handle it
  CMP  W CS:Int2FHdr.OldVector[2],0 ;Is the Old Vector valid?
  JE   Int2FDone                    ;If not, handle it
  JMP  D CS:Int2FHdr.OldVector      ;If so, go to the next one in the chain
Int2FDone:                          ;Invalid vector before us
  IRET

Int2FInstall:
  CMP  AL,MuxInstallChk  ;Is it Install Check?
  JNZ  Int2FProgName     ;If not, try the next possibility
  MOV  AL,-1             ;Mark the flag byte
  IRET

Int2FProgName:
  CMP  AL,MuxGetProgName ;Is it Get Program Name?
  JNE  Int2FProgVer      ;If not, try the next possibility
  OR   DI,DI             ;Does DI=0?
  JNZ >N90               ;If not, it's not for us
  MOV  ES,CS             ;If so, point ES:[DI]
  MOV  DI,ProgName       ;  at ProgName
N90:                     ;Done
  IRET

Int2FProgVer:
  CMP  AL,MuxGetProgVer ;Is it Get Program Version?
  JNE  Int2FAuthor      ;If not, try the next one
  MOV  AX,CS:ProgVer    ;If so, do it
  IRET

Int2FAuthor:
  CMP  AL,MuxGetAuthor ;Is it Get Author?
  JNE >A90             ;If not, we're done
  MOV  ES,CS           ;If so, point ES:[DI]
  MOV  DI,Author       ;  at Author
A90:                   ;Done
  IRET


;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;CODE TO LOOK FOR NEW USB DEVICES
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;CHECK AND SEE IF THERE IS A NEW DEVICE CONNECTED, AND HANDLE IT IF IT IS
;Inputs:  DS = ES = Our Data Area
;         CLD already issued
;Outputs:
;Changes: Looks for new, unowned (unconfigured) Devices
;         If one is found, it is Configured and pointed at us
;NOTES:   When we first install this program into memory, we Registered with
;           the USB Drivers that we wanted to be informed as soon as a new
;           Device was attached.  We also poll the hosts periodically for a
;           new Device, just in case we somehow missed the Host informing us.
;         Whether this is in response to the Host telling us, or whether we
;           polled to find out, this section of code is called.
;         This section of code is actually a series of short pieces of code,
;           which are disjointed in time.  One section schedules a USB Request
;           with the Host Driver, and gives the Host Driver the address
;           of the NEXT section of code to perform when the Request is
;           completed.
;         Requests sent to a USB Host can take anywhere from a few
;           milliseconds to several hundred milliseconds to complete.
;         It is very bad for a TSR to just sit around waiting for something
;           to happen, especially when it can be a long time in coming.
;         This back-and-forth approach between the Host Driver and the Device
;           Driver makes the TSR run pretty efficiently.
;------------------------------------------------------------------------------
LookForNewDevice:
  CALL FindEmptyInfoBX               ;Look for an empty Info Table Entry (BX)
  JZ  >L901                          ;If none, just quit
  TEST TSRFlags,Int14ReqInUse        ;Is the Request Structure already in use?
  JNZ >L901                          ;If so, just quit
  OR   TSRFlags,Int14ReqInUse        ;If not, mark it as in use now
  MOV  SI,Int14Request               ;Point at our Int 14 Structure
  MOV  [SI].I14RRequestType,I14RRTFindUnRegIntf ;Request Type = Find Interface
  MOV  [SI].I14RHostIndex,-1         ;Any/All Hosts
  MOV  [SI].I14RSearchIndex,0        ;Start with Search Index 0
L10:                                 ;Loop to here to find Device
  CALL DoInt14CallCXDXSI             ;Do it (uses DS:SI, CH = Addr, CL = Host,
                                     ;  DL = Interface, DH = Alt Interface)
  JC  >L80                           ;If no device, we're done
  CALL TestBadDevice                 ;If one there, is it in our Bad List?
  JC  >L20                           ;If not, continue
  INC  [SI].I14RSearchIndex          ;If so, Increment the Search Index
  JMP  L10                           ;Keep looking
L20:                                 ;Found a possible Device!
  MOV  [SI].I14RRequestType,I14RRTConfigingIntf ;Request Type = Configing
  MOV  W [SI].I14RHostIndex,CX       ;Store Host Index & Device Address
  CALL DoInt14CallSaveAllSI          ;Do it
  JNC >L30                           ;If OK, continue
  MOV  Int08Counter,2                ;If not, Look again Soon
  JMP >L80                           ;Done for now
L901:                                ;To avoid JMP > 128
  JMP >L90
L30:                                 ;OK to Configure Interface
  MOV  NewDeviceStage,0              ;Stage
  MOV  NewDeviceError,0              ;  Zero
  CALL TestAltIntfMouse              ;Is it possibly a Mouse?
  JC  >L75                           ;If not, mark it as Bad
  MOV  NewDeviceStage,1              ;Update Stage
  OR   [BX].DIFlags,DIFlagInUse      ;Mark Info Table entry as in use
  MOV  W [BX].DIHostIndex,CX         ;Store Host Index & Device Address
  MOV  [BX].DIInterfaceNum,DL        ;Store Interface Number
  MOV  [SI].I14RUserPktID,BX         ;Set User Pkt ID to Info Table Offset
  MOV  [SI].I14RRequestType,I14RRTDoControl ;Request Type = Control
;  MOV  [SI].I14RInterfaceNum,DL      ;Store Interface Number
  MOV  [SI].I14REndPoint,0           ;EndPoint 0
  MOV  CX,SetAltIntfReq              ;Copy
  CALL CopySetupReqToInt14SI         ;  Request Pkt
  MOV  B [SI].I14RSetAltIntfIntf,DL          ;Store Interface in Request
  MOV  B [SI].I14RSetAltIntfAltIntf,DH       ;Store Alt Interface in Request
  MOV  W [SI].I14RCallBackAddr[0],AltIntfSet ;Go here when done
  OR   [SI].I14RFlags,I14RFlagNoRetries ;No retries
  CALL DoInt14CallAXSI               ;Do it
  JNC >L90                           ;If it worked, we're done
L70:                                 ;Error
  MOV  NewDeviceStage,2              ;Update Stage
L75:                                 ;Mark as Bad
  CALL FinishUpBadDevice             ;If not, mark it as bad
  JMP >L90                           ;Done
L80:                                 ;No New Devices
  AND  TSRFlags,(NOT Int14ReqInUse)  ;Mark the request as available
L90:                                 ;Done
  RET                                ;NOT RETF here!

;------------------------------------------------------------------------------
;Inputs: [BX] = Info Table Pointer
;NOTE: Some Devices will not accept a Set Alternate Interface Request,
;        so an error here does not necessarily indicate a bad Device!
;------------------------------------------------------------------------------
AltIntfSet:
  MOV  NewDeviceStage,10     ;Update Stage
  CALL ClearDescriptorData   ;Clear out the data buffer
  MOV  SI,Int14Request       ;Point at Int14 Request Struc
  AND  [SI].I14RFlags,(NOT I14RFlagNoRetries) ;Allow retries again
  MOV  CX,GetDvcDescrReq     ;Copy
  CALL CopySetupReqToInt14SI ;  Request Pkt
  MOV  W [SI].I14RDataAddress[0],DvcDescrData    ;Put data here
  MOV  W [SI].I14RCallBackAddr[0],GotDeviceDescr ;Go here when done
  CALL DoInt14CallAXSI       ;Do it
  JNC >I90                   ;If it worked, we're done
  MOV  NewDeviceStage,11     ;Update Stage
I70:                         ;Error
  CALL FinishUpBadDevice     ;Mark it as Bad
I90:                         ;Done
  RETF

;------------------------------------------------------------------------------
;Inputs: [BX] = Info Table Pointer
;------------------------------------------------------------------------------
GotDeviceDescr:
  MOV  NewDeviceStage,20     ;Update Stage
  JNZ >D70                   ;If Error, handle it
  MOV  SI,Int14Request       ;Point at Int14 Request Structure
  MOV  CX,GetCfgDescrReq     ;Copy
  CALL CopySetupReqToInt14SI ;  Request Pkt
  MOV  W [SI].I14RDataAddress[0],DescriptorData  ;Put data here
  MOV  W [SI].I14RCallBackAddr[0],GotConfigDescr ;Go here when done
  CALL DoInt14CallAXSI       ;Do it
  JNC >D90                   ;If it worked, we're done
  MOV  NewDeviceStage,21     ;Update Stage
D70:                         ;Error
  CALL FinishUpBadDevice     ;Mark it as Bad
D90:                         ;Done
  RETF

;------------------------------------------------------------------------------
;Inputs: [BX] = Info Table Pointer
;------------------------------------------------------------------------------
GotConfigDescr:
  MOV  NewDeviceStage,30        ;Update Stage
  JNZ >P70                      ;If Error, handle it
;  JNZ >O70                      ;If Error, handle it
;  MOV  SI,Int14Request          ;Point at Int14 Request Structure
;  MOV  CX,SetHIDProtocolReq     ;Copy
;  CALL CopySetupReqToInt14SI    ;  Request Pkt
;  MOV  AL,[SI].I14RInterfaceNum               ;Set
;  MOV  B [SI].I14RSetHIDProtocolIntf,AL       ;  Interface Number
;  MOV  W [SI].I14RCallBackAddr[0],ProtocolSet ;Go here when done
;  CALL DoInt14CallAXSI          ;Do it
;  JNC >O90                      ;If it worked, we're done
;  MOV  NewDeviceStage,31        ;Update Stage
;O70:                            ;Error
;  CALL FinishUpBadDevice        ;Mark it as Bad
;O90:                            ;Done
;  RETF
;
;;------------------------------------------------------------------------------
;;Inputs: [BX] = Info Table Pointer
;;------------------------------------------------------------------------------
;ProtocolSet:
;  MOV  NewDeviceStage,40             ;Update Stage
;  JNZ >P70                           ;If Error, handle it
;  MOV  NewDeviceStage,41             ;Update Stage
  MOV  NewDeviceStage,31             ;Update Stage
  MOV  DI,DescriptorData             ;Point at Config Descriptor Data
  MOV  SI,Int14Request               ;Point at Int14 Request Structure
  MOV  AX,[DI].CDTotalLength         ;Get length of entire Descriptor
  CMP  AX,MaxDescriptorSize          ;Will it fit in our buffer?
  JAE >P70                           ;If not, error
  MOV  CX,GetCfgDescrReq             ;Copy
  CALL CopySetupReqToInt14SI         ;  Request Pkt
  MOV  W [SI].I14RGetCfgDescrSize,AX ;Store the number of bytes
  MOV  W [SI].I14RCallBackAddr[0],GotCompleteConfig ;Go here when done
  CALL DoInt14CallAXSI               ;Do it
  JNC >P90                           ;If it worked, we're done
;  MOV  NewDeviceStage,42             ;Update Stage
  MOV  NewDeviceStage,32             ;Update Stage
P70:                                 ;Error
  CALL FinishUpBadDevice             ;Mark it as Bad
P90:                                 ;Done
  RETF

;------------------------------------------------------------------------------
;Inputs: [BX] = Info Table Pointer
;------------------------------------------------------------------------------
GotCompleteConfig:
  MOV  NewDeviceStage,50                ;Update Stage
  JNZ >C70                              ;If Error, handle it
  MOV  DI,DescriptorData                ;Point at Config Descriptor Data
  MOV  SI,Int14Request                  ;Point at Int14 Request Structure
  MOV  CX,SetHIDIdleReq                 ;Copy
  CALL CopySetupReqToInt14SI            ;  Request Pkt
  MOV  AL,[SI].I14RInterfaceNum         ;Set
  MOV  B [SI].I14RSetHIDIdleIntf,AL     ;  Interface Number
  ;MOV  B [SI].I14RSetHIDIdleRptID,0     ;Report ID 0 (All Reports)
  CALL CalcIdleRate                     ;Get Idle Rate (AL)
  MOV  B [SI].I14RSetHIDIdleDuration,AL ;Store it
  MOV  W [SI].I14RCallBackAddr[0],GetReportDescr ;Go here when done
  OR   [SI].I14RFlags,I14RFlagNoRetries ;No retries
  CALL DoInt14CallAXSI                  ;Do it
  JNC >C90                              ;If it worked, we're done
  MOV  NewDeviceStage,51                ;Update Stage
C70:                                    ;Error
  CALL FinishUpBadDevice                ;Mark it as Bad
C90:                                    ;Done
  RETF

;------------------------------------------------------------------------------
;Inputs: [BX] = Info Table Pointer
;NOTE: Some Devices will not accept a Set HID Idle Duration Request,
;        so an error here does not necessarily indicate a bad Device!
;      The program still works OK even if the Mouse's Report Rate doesn't
;        match our Interrupt polling rate, so this isn't a real big deal.
;------------------------------------------------------------------------------
GetReportDescr:
  MOV  NewDeviceStage,200                   ;Update Stage
  MOV  SI,Int14Request                      ;Point at Int14 Request Structure
  AND  [SI].I14RFlags,(NOT I14RFlagNoRetries) ;Allow retries again
  MOV  DI,DescriptorData                    ;Point at Config Data
  MOV  BL,[BX].DIInterfaceNum               ;Interface Number to look for
R10:                                        ;Loop to find Interface Descriptor
  MOV  AL,DescrTypeInterface                ;Look for an Interface
  CALL FindDescrType                        ;  Descriptor (rtns AX, DI)
  JC  >R70                                  ;If none found, Error
  CMP  [DI].IDInterfaceNumber,BL            ;Is it the Correct Interface?
  JE  >R20                                  ;If so, continue
  ADD  DI,AX                                ;If not, point at the next Descr
  JMP  R10                                  ;Keep looking
R20:                                        ;Found the Interface Descriptor
  MOV  NewDeviceStage,201                   ;Update Stage
  MOV  AL,DescrTypeHID                      ;Look for an HID
  CALL FindDescrType                        ;  Descriptor (rtns AX, DI)
  JC  >R70                                  ;If none found, Error
  MOV  NewDeviceStage,202                   ;Update Stage
  MOV  AX,[DI].HIDDDescriptorLength         ;Get Report Size
  CMP  AX,MaxReportSize                     ;Is it too big for our buffer?
  JAE >R70                                  ;If so, error
  MOV  CX,GetReportDescrReq                 ;Copy
  CALL CopySetupReqToInt14SI                ;  Request Pkt
  MOV  W [SI].I14RGetReportDescrSize,AX     ;Store number of bytes
  MOV  B [SI].I14RGetReportDescrIntf,BL     ;Store Interface Number
  ;MOV  B [SI].I14RGetReportDescrRptID,0     ;Report ID 0 (all reports)
  MOV  W [SI].I14RDataAddress[0],ReportData ;Where to put data
  MOV  W [SI].I14RCallBackAddr[0],SetupInts ;Go here when done
  CALL ClearReportData                      ;Clear out Report Data area
  MOV  NewDeviceStage,61                    ;Update Stage
  CALL DoInt14CallAXSI                      ;Do it
  JNC >R90                                  ;If it worked, we're done
R70:                                        ;Error
  CALL FinishUpBadDevice                    ;Mark it as Bad
R90:                                        ;Done
  RETF

;------------------------------------------------------------------------------
;Inputs: [BX] = Info Table Pointer
;------------------------------------------------------------------------------
SetupInts:
  MOV  NewDeviceStage,70            ;Update Stage
  JNZ >I701                         ;If error, mark it as bad
  MOV  NewDeviceStage,210           ;Update Stage
  MOV  SI,Int14Request              ;Point SI at Int14 Request
  CALL DecipherReportDescr          ;Get Device Info from Report
  JC  >I701                         ;If invalid, quit
  MOV  NewDeviceStage,211           ;Update Stage
  CALL DecipherReportDescrSys       ;If OK, look for System Keys
  MOV  DI,DescriptorData            ;Point DI at Config Data
  MOV  CL,[BX].DIInterfaceNum       ;Interface Number to look for
I10:                                ;Loop to find Interface Descr
  MOV  AL,DescrTypeInterface        ;Look for an Interface
  CALL FindDescrType                ;  Descriptor (rtns AX, DI)
  JC  >I701                         ;If none found, Error
  MOV  NewDeviceStage,212           ;Update Stage
  CMP  [DI].IDInterfaceNumber,CL    ;Is it the Correct Interface?
  JE  >I20                          ;If so, continue
  ADD  DI,AX                        ;If not, point at the next Descr
  JMP  I10                          ;Keep looking
I20:                                ;Found the Interface Descriptor
  MOV  AL,DescrTypeEndPoint         ;Look for an EndPoint
  CALL FindDescrType                ;  Descriptor (rtns AX, DI)
  JC  >I701                         ;If none found, Error
  MOV  NewDeviceStage,213           ;Update Stage
  MOV  [SI].I14RRequestType,I14RRTDoInterruptPer ;Periodic Interrupt
  MOV  [SI].I14RFlags,I14RFlagIn    ;Assume Direction = In
  CALL CalcPeriodicity              ;Get Periodicity to use (AX)
  MOV  [SI].I14RPeriodicity,AX      ;Store it
  MOV  NewDeviceStage,214           ;Update Stage
  MOV  AX,[DI].EDMaxPktSize         ;Get Data Size
  CMP  AX,3                         ;Is it too small?
  JB  >I70                          ;If so, error
  CMP  AX,8                         ;Is it too big?
  JBE >I30                          ;If not, continue
I701:                               ;To avoid JMP > 128
  JMP >I70
I30:                                ;Data Size is OK
  MOV  [SI].I14RDataSize,AX         ;If OK, store it
  MOV  NewDeviceStage,215           ;Update Stage
  MOV  AL,[DI].EDEndPointNumber     ;Get EP Address & Direction
  TEST AL,EDDirectionIn             ;Is it In (it better be!)
  JZ  >I70                          ;If not, error
  MOV  NewDeviceStage,216           ;Update Stage
  AND  AL,EDNumberMask              ;Store the
  MOV  [SI].I14REndPoint,AL         ;  EndPoint
  MOV  [BX].DIEndPoint,AL           ;  Number
  LEA  AX,[BX].DIRawData            ;Where to
  MOV  W [SI].I14RDataAddress[0],AX ;  put data
  CMP  [BX].DIReportID,0            ;Is there a Report ID?
  JE  >I40                          ;If not, Data Address is OK
  DEC  W [SI].I14RDataAddress[0]    ;If so, Data will include ID
I40:                                ;Data Address is OK
  MOV  W [SI].I14RCallBackAddr[0],DeviceChangeCode ;Code to call
  MOV  NewDeviceStage,73            ;Update Stage
  CALL DoInt14CallAXCXSI            ;Do it
  JC  >I70                          ;If error, quit
  MOV  [BX].DIIntHandle,CX          ;Save the Interrupt Handle
  MOV  LastDeviceFound,BX           ;Mark this as the Last Device
  MOV  [SI].I14RRequestType,I14RRTRegIntfOwner ;Register as Owner
  MOV  W [SI].I14RCallBackAddr[0],DvcOwnerFarCall ;Owner Address
  CALL DoInt14CallAXCXSI            ;Do it
  MOV  [BX].DIRegHandle,CX          ;Store the Registry Handle
  JNC >I80                          ;If it worked, we're done
  MOV  NewDeviceStage,75            ;Update Stage
  MOV  AX,[BX].DIIntHandle          ;If not,
  MOV  [SI].I14RRequestHandle,AX    ;  we need
  MOV  [SI].I14RRequestType,I14RRTCloseHandle ;  to stop the
  CALL DoInt14CallAXSI              ;  Periodic Interrupt
I70:                                ;Error
  CALL FinishUpBadDevice            ;Mark it as Bad
  JMP >I90                          ;Done
I80:                                ;Device is OK
  MOV  [SI].I14RRequestType,I14RRTConfigIntfDone ;Request = Done Configuring
  CALL DoInt14CallSaveAllSI         ;Do it
  CMP  Int08Counter,0               ;Disabled?
  JE  >I85                          ;If so, quit
  MOV  Int08Counter,2               ;Look for another Device soon
I85:                                ;Done for now
  AND  TSRFlags,(NOT Int14ReqInUse) ;Mark the request as available
I90:                                ;Done
  RETF


;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;SUPPORT FUNCTIONS NEEDED BY LOOKFORNEWDEVICE PROCESS
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;TEST AND SEE IF THE DEVICE COULD POSSIBLY BE A MOUSE
;Inputs:  DS = ES = TSR Data Area
;         [SI] = Int 14 Request to use
;                  Host Index & Device Address filled in
;         DL = Interface Number
;         DH = Alternate Interface Number
;Outputs: CF = Clear if OK (Device is, or could be, a Mouse)
;            = Set if Not (cannot be a Mouse)
;                TSRFlags2.NoBeep1Time Set
;Changes: [SI] filled in with Interface, Alt Interface, & Request Type
;NOTES: The only thing this tests is the Interface SubClass & Protocol
;------------------------------------------------------------------------------
TestAltIntfMouse:
  PUSH BX,CX                    ;Save used registers
  MOV  [SI].I14RRequestType,I14RRTGetAltIntfInfo ;Request = Get Alt Intf Info
  MOV  [SI].I14RInterfaceNum,DL ;Store Interface
  MOV  [SI].I14RAltInterface,DH ;Store Alternate Interface
  CALL DoInt14CallBXCXSI        ;Issue the Request
  CMP  BH,IntfSubClassHIDBoot   ;Interface SubClass = None or Boot?
  JA  >F70                      ;If neither, Error
  JB  >F30                      ;If None, continue
F10:                            ;SubClass = Boot
  CMP  CL,IntfProtocolHIDMouse  ;Is it a Mouse?
  JE  >F80                      ;If so, continue
  JMP >F70                      ;If not, Error
F30:                            ;SubClass = None
  OR   CL,CL                    ;Protocol = None?
  JZ  >F80                      ;If so, continue
F70:                            ;Error
  OR   TSRFlags2,NoBeep1Time    ;Don't want to Beep
  STC                           ;Set return flag
  JMP >F90                      ;Done
F80:                            ;OK
  CLC                           ;Set return flag
F90:                            ;Done
  POP  CX,BX                    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;FINISH UP A BAD DEVICE ENTRY
;Inputs:  BX = Info Table Offset
;         (Info Table Entry contains Device Data)
;         DS = ES = TSR Data Area
;         Int14Request (contains Host/Address/Interface Data)
;Outputs: Resets DeviceInfoTable Entry
;         Marks Int14Request as available (not in use any more)
;         Updates NewDeviceStage & NewDeviceError
;         Puts Device info in BadDevice Table
;         Issues Request to Beep the Speaker
;Changes: DI,SI
;------------------------------------------------------------------------------
FinishUpBadDevice:
  MOV  SI,Int14Request              ;Point at Int14 Request Struc
  MOV  NewDeviceError,AX            ;Store Error Code
  CALL ResetDvcEntryBX              ;Reset the Dvc Info Entry that we Reserved
  MOV  [SI].I14RRequestType,I14RRTGetDvcStatus ;Request = Get Dvc Status
                                               ;(Make sure Device is still
                                               ;  plugged in)
  CALL DoInt14CallSaveAllSI         ;Issue the Request
  JC  >B10                          ;If error (no Device), don't add to Bad Tbl
  CALL AddBadDevice                 ;Add it to Bad Table
B10:                                ;Bad Device added to table, if appropriate
  TEST TSRFlags,NoBeep              ;Are we allowed to Beep the Speaker?
  JNZ >B20                          ;If not, skip down
  TEST TSRFlags2,NoBeep1Time        ;Are we allowed to Beep the Speaker?
  JNZ >B20                          ;If not, skip down
  MOV  [SI].I14RRequestType,I14RRTBeepSpeaker ;Want to beep the Speaker
  MOV  [SI].I14RHostIndex,-1        ;Any Host
  MOV  B [SI].I14RTimeout,3         ;Beep length = 3 DeciSeconds
  MOV  W [SI].I14RBeepFrequency,300 ;Frequency = 300Hz
  CALL DoInt14CallSaveAllSI         ;Do it
  MOV  B [SI].I14RTimeOut,0         ;Reset Timeout Value
B20:                                ;Done Handling Beep
  AND  TSRFlags2,(NOT NoBeep1Time)  ;Mark as OK to Beep next time
  MOV  [SI].I14RRequestType,I14RRTConfigIntfDone ;Request = Done Configuring
  CALL DoInt14CallSaveAllSI         ;Do it
  CMP  Int08Counter,0               ;Disabled?
  JE  >B90                          ;If so, Done
  MOV  Int08Counter,2               ;Look for another Device soon
B90:                                ;Done
  AND  TSRFlags,(NOT Int14ReqInUse) ;Mark the request as available
  RET

;------------------------------------------------------------------------------
;CLEAR OUT THE OLD DATA FROM THE DESCRIPTOR DATA BUFFER
;Inputs:  ES = TSR Data Area
;         CLD already issued
;Outputs:
;Changes: DescriptorData becomes all zeroes
;------------------------------------------------------------------------------
ClearDescriptorData:
  PUSH AX,CX,DI        ;Save used registers
  MOV  DI,DvcDescrData ;Point at buffer
  MOV  CX,((DeviceDescriptorSize+MaxDescriptorSize)/2) ;Number of words to write
  XOR  AX,AX           ;Write zeroes
  REP  STOSW           ;Do it
  POP  DI,CX,AX        ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CLEAR OUT THE OLD DATA FROM THE REPORT DATA BUFFER
;Inputs:  ES = TSR Data Area
;Outputs:
;Changes: ReportData becomes all zeroes
;------------------------------------------------------------------------------
ClearReportData:
  PUSH AX,CX,DI             ;Save used registers
  MOV  DI,ReportData        ;Point at buffer
  MOV  CX,(MaxReportSize/2) ;Number of words to write
  XOR  AX,AX                ;Write zeroes
  REP  STOSW                ;Do it
  POP  DI,CX,AX             ;Restore used registers
  RET

;------------------------------------------------------------------------------
;FIND A PARTICULAR TYPE OF DESCRIPTOR IN THE COMPLETE CONFIGURATION DESCRIPTOR
;Inputs:  DS = ES = TSR Data Area
;         [DI] = Pointer to start/middle of Configuration Descriptor
;          AL  = Descriptor Type to find
;Outputs: CF = Set if OK (Descriptor Found)
;              [DI] points at beginning of Descriptor
;               AX = Descriptor Length
;            = Clear if Error (Descriptor not found)
;              AX, DI unchanged
;Changes:
;------------------------------------------------------------------------------
FindDescrType:
  PUSH BX,SI               ;Save used registers
  MOV  SI,DI               ;Point SI at the starting Pointer
  XOR  BH,BH               ;Initialize high byte of Size to 0
Y10:                       ;Loop here to find Descriptor
  MOV  BL,[SI].DDLength    ;Put the Length in BL
  OR   BL,BL               ;Valid Descriptor?
  JZ  >Y70                 ;If not, Error
  CMP  AL,[SI].DDDescrType ;The Descriptor we're looking for?
  JE  >Y80                 ;If so, we're done
  ADD  SI,BX               ;If not, point at next Descriptor
  CMP  SI,(DescriptorData+MaxDescriptorSize) ;Gone past the end of the buffer?
  JBE  Y10                 ;If not, keep looking
Y70:                       ;Error
  STC                      ;Set Error Flag
  JMP >Y90                 ;Done
Y80:                       ;OK
  MOV  DI,SI               ;Update Pointer
  MOV  AX,BX               ;Put length in AX
  CLC                      ;Set OK Flag
Y90:                       ;Done
  POP  SI,BX               ;Restore used registers
  RET

;------------------------------------------------------------------------------
;COPY A REQUEST (CONTROL) STRUCTURE INTO THE INT14 STRUCTURE
;Inputs:  [CX] = Request Structure to Copy
;         ES = TSR Data Area (contains both Request & Int14 Request)
;         [DI] = Int14 Request Structure to copy it to
;      or [SI] = Int14 Request Structure to copy it to
;Outputs:
;Changes: Int14 Structure contains Request Structure Data
;------------------------------------------------------------------------------
CopySetupReqToInt14SI:
  PUSH DI                    ;Save used registers
  MOV  DI,SI                 ;Put pointer in DI
  CALL CopySetupReqToInt14DI ;Copy it
  POP  DI                    ;Restore used registers
  RET

CopySetupReqToInt14DI:
  PUSH CX,DI,SI,DS                ;Save used registers
  MOV  DS,ES                      ;Point DS at TSR Data Area
  ADD  DI,OFFSET I14RSetupReqData ;Point at correct part of structure
  MOV  SI,CX                      ;Point at structure to copy
  MOV  CX,(SetupRequestSize/2)    ;Number of words to copy
  REP  MOVSW                      ;Copy it
  POP  DS,SI,DI,CX                ;Restore used registers
  RET

;------------------------------------------------------------------------------
;DECIPHER THE REPORT DESCRIPTOR TO DETERMINE THE DEVICE CHARACTERISTICS
;Inputs:  ReportData
;         DS = ES = TSR Data Area
;         [BX] = Info Table Entry
;Outputs: CF = Clear if OK (found some valid Data)
;            = Set if Error (not a Valid Device)
;          NumButtons, HasWheel, DeviceID, ReportID
;Changes:
;NOTES: To keep this code simple, we will assume that the Device and the
;         Report Descriptor don't do or have anything really weird.
;       We will assume Buttons are listed first, followed by X-Axis and
;         Y-Axis, which can either be bytes or words.  Any Axis (Wheel)
;         data following the X- and Y-Axes will be assumed to be the same
;         data length (byte or word) as the first two Axes.
;       X and Y can be followed by Z, which will be Wheel1, unless the Z is
;         actually followed by an actual Wheel, in which case Z will be
;         Wheel2 (the Horizontal Wheel) and the Wheel will be Wheel 1 (the
;         Vertical Wheel).
;       The only "unusual" thing we account for is the possibility of a
;         Report ID.  A regular, stand-alone Mouse would never need a
;         Report ID.
;       A Mouse integrated with a Keyboard (like one I currently have) may
;         need to use Report IDs, though.  The second Report coming from the
;         Mouse on my particular Keyboard, though, should actually be part
;         of the Keyboard Report rather than the Mouse Report.  The Report
;         is for the System Keys (Power Off, etc.) that are actually on the
;         keyboard, and in reality have NOTHING at all to do with the Mouse.

;Assumptions:
;  Data is never more than 8 bytes.  Low-Speed Mice (the vast majority) are
;    limited to 8 bytes by the USB spec, so that is guaranteed.  Some newer
;    (expensive) mice are full-speed, so theoretically can have more
;    than 8 bytes of data.  If a mouse sends more than 8 bytes of data, a
;    custom driver will need to be built.
;  Buttons are at Offset 0.  If number of buttons is not a multiple of 8,
;    there are "unused" bits afterwards to keep it byte aligned.  We will
;    allow only 1 button, although every PC Mouse I've ever seen has
;    at least two buttons.  This will allow us to use an Apple Mouse
;    (which has only 1 button).
;  I've never seen a USB Mouse that doesn't have a Wheel, but suppose
;    it's possible.  It's definitely possible to use a PS/2 Mouse, which
;    doesn't have Wheel, with one of the PS/2-to-USB coverter cables.
;  If there was no Z-Axis, we look for an AC Pan Label
;    (we do not look for a second Wheel Label).  If it is found, it is used
;    as the second (Horizontal) Wheel with a size of one byte.
;  We ignore Resolution Multipliers.  The user can to change the Resolution
;    to adjust for this, if needed.  If it turns out that the Resolution is
;    unable to adjust things enough to make the mouse usable, a custom
;    driver will need to be built.
;------------------------------------------------------------------------------
D701:
  JMP  NEAR DecipherReportDescrErr       ;To avoid JMP > 128

DecipherReportDescr:
  PUSH AX,CX,DX,DI,SI                    ;Save used registers
  MOV  SI,ReportData                     ;Point at Data
  MOV  DI,(ReportData+MaxReportSize)     ;Point at end of data
;   mov  SI,TestDescr
;   mov  DI,(TestDescr+250)
  OR   TSRFlags2,NoBeep1Time                      ;Assume No Beeps
  MOV  AX,RptTagUsagePage+(RptGlbUPGenericDesktop SHL 8) ;Usage Page
  CALL TestReportTagByte                 ;  Generic Desktop?
  JC   D701                              ;If not, error
D10:                                     ;Loop to here to find Usage
  MOV  AL,RptTagUsage                    ;Look for
  CALL LookForReportTag                  ;  a Usage
  JC   D701                              ;If none found, quit
  CMP  AL,RptGDMouse                     ;Is it a Mouse?
  JNE  D10                               ;If not, keep looking
  AND  TSRFlags2,(NOT NoBeep1Time)       ;Allow Beeps Again
  MOV  AL,RptTagReportID                 ;Look for
  CALL LookForReportTag                  ;  a Report ID
  JC  >D20                               ;If none, continue (ReportID = 0)
  MOV  [BX].DIReportID,AL                ;If found, store it
D20:                                     ;Report ID Handled
  MOV  AL,RptTagReportCount              ;Look for
  CALL LookForReportTag                  ;  the Button Count
  JC   D701                              ;If not found, error
  CMP  AL,MinButtons                     ;Is it big enough?
  JB   D701                              ;If not, error
  MOV  [BX].DINumButtons,AL              ;If OK, store it
  MOV  CH,AL                             ;Store it in our Offset Tracker
  DEC  CH                                ;Subtract 1,
  MOV  CL,3                              ;  divide by 8,
  SHR  CH,CL                             ;  and add 1
  INC  CH                                ;  to convert it to the X Axis Offset
  MOV  B [BX].DIXOffset,CH               ;Store the Offset
  MOV  AX,RptTagUsagePage+(RptGlbUPGenericDesktop SHL 8) ;Look for another
  CALL TestReportTagByte                 ;  Generic Desktop (end of Button Page)
  JC   D701                              ;If not found, error
  MOV  DX,SI                             ;Save Report Pointer
  MOV  AL,RptTagReportSize               ;Look for the
  CALL LookForReportTag                  ;  Report Size (applies to at least XY)
  JC   D701                              ;If not found, error
  MOV  SI,DX                             ;If found, restore Report Pointer
  MOV  CL,1                              ;Assume one byte
  CMP  AL,8                              ;Is it one byte?
  JE  >D30                               ;If so, continue
  CMP  AL,16                             ;Is it one word?
  JNE  D701                              ;If not, error
  INC  CL                                ;If so, increment offset size
  OR   [BX].DIFlags,(DIFlagX2Bytes+DIFlagY2Bytes) ;Mark X & Y as Words
D30:                                     ;CL contains X, Y, and Z Size
  MOV  AX,RptTagUsage+(RptGDPointer SHL 8) ;Skip over Pointer Usage
  CALL TestReportTagByte                 ;  (happens on some mice)
  MOV  AX,RptTagUsage+(RptGDXAxis SHL 8) ;Usage
  CALL TestReportTagByte                 ;  X-Axis?
  JC  >D70                               ;If not, Error
  MOV  AX,RptTagUsage+(RptGDYAxis SHL 8) ;Usage
  CALL TestReportTagByte                 ;  Y-Axis?
  JC  >D70                               ;If not, Error
  ADD  CH,CL                             ;Adjust Offset Tracker
  MOV  B [BX].DIYOffset,CH               ;Store it
  ADD  CH,CL                             ;Adjust Offset Tracker
  MOV  AX,RptTagUsage+(RptGDZAxis SHL 8) ;Usage
  CALL TestReportTagByte                 ;  Z-Axis?
  JC  >D35                               ;If not, look for a Wheel
D31:                                     ;There is a Z-Axis
  INC  [BX].DINumWheels                  ;Mark as having one wheel
  PUSH SI                                ;Save pointer
  MOV  AX,RptTagUsage+(RptGDWheel SHL 8) ;Usage Wheel
  CALL TestReportTagByte                 ;  after Usage Z-Axis?
  POP  SI                                ;Restore Pointer
  JNC >D33                               ;If so, handle it
D32:                                     ;No Wheel following Z-Axis
  MOV  B [BX].DIZ1Offset,CH              ;Store the Offset
  CMP  CL,2                              ;Is it a Word or a Byte?
  JB  >D80                               ;If a Byte, we're done
  OR   [BX].DIFlags,DIFlagZ12Bytes       ;If a Word, mark as a Word
  JMP >D80                               ;We're done
D33:                                     ;Wheel following Z-Axis (Z is Wheel2)
  INC  [BX].DINumWheels                  ;Mark as having two wheels
  MOV  B [BX].DIZ2Offset,CH              ;Store Offset for Z-Axis (Wheel2)
  ADD  CH,CL                             ;Adjust Offset Tracker
  MOV  B [BX].DIZ1Offset,CH              ;Store Offset for Wheel (Wheel1)
  ;No need to test for data length here, since we'd have more than 8 bytes!
  JMP >D80                               ;Done
D35:                                     ;No Z-Axis
  MOV  AX,RptTagUsage+(RptGDWheel SHL 8) ;Usage
  CALL TestReportTagByte                 ;  Wheel?
;  JNC >D40                               ;If so, handle it
;  CMP  [BX].DINumWheels,1                ;If not, was there a Z Axis?
;  JE  >D70                               ;If so, Error
;  JMP >D80                               ;If not, done
  JC  >D80                               ;If not, done
D40:                                     ;Have a Wheel
  INC  [BX].DINumWheels                  ;Mark as having one wheel
  MOV  B [BX].DIZ1Offset,CH              ;Store the Offset
;  CMP  [BX].DINumWheels,2                ;Was there a Z Axis (Horizontal Wheel)?
;  JE  >D80                               ;If so, done
;  INC  CH                                ;If not, adjust Offset Tracker
  ADD  CH,CL                             ;Adjust Offset Tracker
  CMP  CL,2                              ;Is it a Byte?
  JB  >D42                               ;If so, continue
  OR   [BX].DIFlags,DIFlagZ12Bytes       ;Mark as a Word
D42:                                     ;Word size handled, if apprpriate
  MOV  AX,RptTagUsagePage+(RptGlbUPConsumerDvc SHL 8) ;Look for the
  CALL TestReportTagByte                 ;  Consumer Device Page
  JC  >D80                               ;If not found, done
  MOV  AX,RptTagUsage+((RptConsACPan AND 0FFh)SHL 8) ;Look for the
  CALL TestReportTagByte                 ;  AC Pan Usage
  JC  >D80                               ;If not found, done
  CMP  B [SI-1],(RptConsACPan SHR 8)     ;Is it really the AC Pan Usage?
  JNE >D80                               ;If not, done
D50:                                     ;Has two Wheels
  INC  [BX].DINumWheels                  ;Mark as having two wheels
  MOV  B [BX].DIZ2Offset,CH              ;Store the Offset
  JMP >D80                               ;Done
DecipherReportDescrErr:
D70:                                     ;Error
  STC                                    ;Set Error Flag
  JMP >D90                               ;Done
D80:                                     ;OK
  CALL AddBaseOffsets                    ;Add Base Offsets for the Axes
  CLC                                    ;Set OK Flag
D90:                                     ;Done
  POP  SI,DI,DX,CX,AX                    ;Restore used registers
  RET

;Look for more than 8 buttons, Z Axis, Wheel, AC Pan, & Resolution Multiplier?
;Some mice are full speed, so can have more than 8 bytes of data!

;------------------------------------------------------------------------------
;ADD THE BASE (DIRawData) OFFSET TO THE AXES OFFSETS
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Info Table Entry
;         [BX].DIXOffset, [BX].DIYOffset, [BX].DIZ1Offset, [BX].DIZ2Offset
;            all contain offset within DIRawData (0 if not used)
;         CLD already issued
;Outputs: [BX].DIXOffset, [BX].DIYOffset, [BX].DIZ1Offset, [BX].DIZ2Offset
;            are all "adjusted" to a real Offset (Pointer) Value
;Changes:
;------------------------------------------------------------------------------
AddBaseOffsets:
  PUSH AX,CX,DI          ;Save used registers
  LEA  DI,[BX].DIXOffset ;Point at the X Offset
  LEA  AX,[BX].DIRawData ;Put Base Offset (what we need to Add) in AX
  MOV  CX,4              ;Need to do 4 Axes
B10:                     ;Loop to here for each Axis
  CMP  W [DI],0          ;Is this a valid offset?
  JE  >B40               ;If not, skip it
  ADD  [DI],AX           ;If so, add the DIRawData base offset
B40:                     ;Done with this one
  ADD  DI,2              ;Point at the next Axis
  LOOP B10               ;Keep going until we're done
  POP  DI,CX,AX          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;DECIPHER THE REPORT DESCRIPTOR TO FIND THE SYSTEM KEYS (IF THEY ARE THERE)
;Inputs:  ReportData
;         DS = ES = TSR Data Area
;         [BX] = Info Table Entry (already contains Interface Number)
;         ReportData already deciphered for Mouse data
;Outputs: DISysReportID
;         Sets Idle Rate for System Keys Report ID to 10ms
;Changes: Int14Request
;NOTES: A Mouse integrated with a Keyboard (like one I currently have) may
;         use Report IDs.  The second Report coming from the Mouse on my
;         Keyboard/Mouse combo is for the System Keys on the Keyboard
;         (Power/Sleep/WakeUp), which really have nothing at all to do
;         with the Mouse.  We will do a simple deciphering of the Mouse
;         Report Decriptor, and if we find a System Control Report ID,
;         we will handle it.  At least for now, we will assume all Reports
;         will be in the same format as the one on my Keyboard.
;------------------------------------------------------------------------------
DecipherReportDescrSys:
  PUSH AX,CX,DI,SI                          ;Save used registers
  CMP  [BX].DIReportID,0                    ;Is there a second Report ID?
  JE  >Y90                                  ;If no, we're done
  MOV  SI,ReportData                        ;Point at Data
  MOV  DI,(ReportData+MaxReportSize)        ;Point at end of data
Y10:                                        ;Look for System Control here
  MOV  AL,RptTagUsage                       ;Look for
  CALL LookForReportTag                     ;  Usage
  JC  >Y90                                  ;If none, Quit
  CMP  AL,RptGDSysCtl                       ;Is it System Control?
  JNE  Y10                                  ;If not, keep looking
  MOV  AL,RptTagReportID                    ;Look for
  CALL LookForReportTag                     ;  a Report ID
  JC  >Y90                                  ;If none, Quit
  MOV  [BX].DISysReportID,AL                ;If found, store it
Y40:                                        ;Set Idle Rate for Keys
  MOV  SI,Int14Request                      ;Point at Request Structure
  MOV  [SI].I14RRequestType,I14RRTDoControl ;Type = Control
  MOV  CX,SetHIDIdleReq                     ;Point at Idle Request Struc
  CALL CopySetupReqToInt14SI                ;Copy Setup Pkt (CX)
  MOV  B [SI].I14RSetHIDIdleRptID,AL        ;Store Report ID
  MOV  B [SI].I14RSetHIDIdleDuration,2      ;Idle Rate = 2 (10ms)
  MOV  AL,[BX].DIInterfaceNum               ;Copy the
  MOV  B [SI].I14RSetHIDIdleIntf,AL         ;  Interface Number
  MOV  W [SI].I14RCallBackAddr[0],-1        ;Do nothing when done
  CALL DoInt14CallSaveAllSI                 ;Do it
Y90:                                        ;Done
  POP  SI,DI,CX,AX                          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;LOOK FOR A SPECIFIC REPORT TAG AND VALUE FOR THE REPORT TAG
;Inputs:  [SI] = Report Pointer
;         [DI] = End of Report Data Area
;         AL   = Report Tag to Look for
;         AH   = Report Tag Value to look for (The Byte after the Tag)
;Outputs: CF = Clear if Tag was found
;             [SI] = Points to next Tag after the one found
;            = Set if Tag was not Found
;              SI = Unchanged
;Changes:
;NOTES: This finds the first matching Report Tag, and tests the value (byte)
;         immediately following that Report Tag.  It does not continue looking
;         in the Report Descriptor after the first Report Tag it finds.
;         In addition, if the Data does not match, it returns SI unchanged.
;------------------------------------------------------------------------------
TestReportTagByte:
  PUSH AX,BX            ;Save used registers
  MOV  BX,SI            ;Save original Pointer
  CALL LookForReportTag ;Look for the Tag
  JC  >B70              ;If not found, error
  CMP  AL,AH            ;Does the Value match?
  JE  >B80              ;If so, it's a match
  MOV  SI,BX            ;Restore original Pointer
B70:                    ;No match
  STC                   ;Set no match flag
  JMP >B90              ;Done
B80:                    ;It matches
  CLC                   ;Set matches flag
B90:                    ;Done
  POP  BX,AX            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;LOOK FOR A SPECIFIC REPORT TAG IN THE REPORT DESCRIPTOR
;Inputs:  [SI] = Report Pointer
;         [DI] = End of Report Data Area
;         AL   = Report Tag to Look for
;Outputs: CF = Clear if Tag was found
;              AL  = Data Byte immediately following the Tag
;             [SI] = Points to next Tag after the one found
;            = Set if Tag was not Found
;              AL = 0
;              SI = Unchanged
;Changes:
;NOTES: This works under the premise that Data is at most one byte
;         after a Report Tag (which all Mouse Data should be!)
;------------------------------------------------------------------------------
LookForReportTag:
  PUSH BX,CX,DX     ;Save used registers
  MOV  DX,SI        ;Save original pointer
  XOR  CH,CH        ;Size Adder is always a Byte
  MOV  BL,AL        ;Save Tag we're looking for
L10:                ;Loop to here to find the Tag
  LODSB             ;Get the next Tag
  OR   AL,AL        ;Legitimate Tag?
  JZ  >L70          ;If not, error
  MOV  CL,AL        ;Get the
  AND  CL,03h       ;  Data Size
  AND  AL,(NOT 03h) ;Mask out the Size so we can test it
  CMP  AL,BL        ;Is it the Tag we're looking for?
  JE  >L80          ;If so, we're done
  ADD  SI,CX        ;If not, point at the next one
  CMP  SI,DI        ;Are we past the end of the buffer?
  JB   L10          ;If not, keep looking
L70:                ;Error
  XOR  AL,AL        ;AL = 0
  MOV  SI,DX        ;Restore original Pointer
  STC               ;Set Error Flag
  JMP >L90          ;Done
L80:                ;Found it
  MOV  AL,[SI]      ;Put the Data Byte in AL
  ADD  SI,CX        ;Update the Pointer
  CLC               ;Set OK Flag
L90:                ;Done
  POP  DX,CX,BX     ;Restore used registers
  RET


;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;CODE TO HANDLE MOUSE MOVEMENTS, MOUSE BUTTON PRESSES, AND SYSTEM KEYS
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;THIS CODE IS PROCESSED EVERY TIME AN INTERRUPT COMES FROM THE DEVICE
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Info Table Offset (contains DeviceData)
;Outputs: Processes "Raw" Mouse data into an appropriate format
;         If appropriate, calls the "User" Code telling it what has changed
;Changes: Lots of things
;NOTES: If the Report that comes back is for System Keys,
;         we cannot send periodically reliable data to USBKEYB, since the
;         polling rate we use is determined by what the user wants the
;         Mouse to do, not by what we want the keyboard to do.
;       In addition, moving the Mouse while pressing one of the Keys
;         causes delays and interruptions in reporting the Keys, which
;         can create all kinds of grief.
;       Therefore, all we will be able to do is notify USBKEYB of presses
;         and releases, with no timing information while it is pressed.
;         Any Typematic Timing will need to be handled by USBKEYB.
;------------------------------------------------------------------------------
DeviceChangeCode:
  OR   CX,CX                  ;Did we get any data?
  JZ  >V90                    ;If not, quit
  MOV  AL,[BX].DIReportIDData ;Is it the Mouse
  CMP  AL,[BX].DIReportID     ;  Report ID?
  JNE >V20                    ;If not, try the next possibility
  CALL DeviceChangeMouse      ;If so, handle it
  JMP >V90                    ;Done
V20:                          ;Not Mouse ID
  CMP  AL,[BX].DISysReportID  ;Is it the System Keys Report ID?
  JNE >V90                    ;If not, quit
  CALL DeviceChangeSys        ;If so, handle it
V90:                          ;Done
  RETF                        ;Quit


;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±
;CODE TO PROCESS SYSTEM KEYS
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;HANDLE THE DEVICE NOTIFICATION FOR THE SYSTEM KEYS REPORT ID
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Info Table Offset (contains DeviceData)
;Outputs: Processes "Raw" System Keys Data, sending call to the
;           USB Keyboard processor (USBKEYB) if appropriate.
;Changes: Lots of things, including possibly all Registers
;NOTES: We cannot send periodically reliable data to USBKEYB, since the
;         polling rate we use is determined by what the user wants the
;         Mouse to do, not by what we want the keyboard to do.
;       In addition, moving the Mouse while pressing one of the System Keys
;         causes delays and interruptions in reporting the Keys, which
;         can create all kinds of grief.
;       Therefore, all we will be able to do is notify USBKEYB of presses
;         and releases, with no timing information while it is pressed.
;         If a key needs Typematic functions, the timing will need to be
;         handled by USBKEYB.  System Keys shouldn't need to be Typematic.
;------------------------------------------------------------------------------
DeviceChangeSys:
  CALL MakeStack         ;Set up our own Stack Space (CS = TSR Data Area!)
  CALL DoDeviceChangeSys ;Handle the Keys
  CALL ReturnStack       ;Restore Original Stack Space
  RET

DoDeviceChangeSys:
  PUSH DX                    ;Save used registers
  MOV  DL,[BX].DISysLastTime ;Get the Data byte last time
  XOR  DH,DH                 ;Assume Uninstalled/Disabled
  TEST TSRFlags2,DisableAll  ;All Devices Disabled?
  JNZ >K30                   ;If so, continue
  TEST [BX].DIFlags,(DIFlagDisabled+DIFlagDisconnect) ;Disabled or Disconnected?
  JNZ >K30                   ;If so, continue
  MOV  DH,[BX].DIBtnOffset   ;If not, get the Real Data Byte
K30:                         ;DH contains Data this time
  MOV  [BX].DISysLastTime,DH ;Save it for next time
  CMP  DL,DH                 ;Anything changed since last time?
  JE  >K90                   ;If not, just quit
  CALL Int16InstallCheck     ;Appropriate INT 16h Function installed?
  JC  >K90                   ;If not, we're done
  CALL ProcessSysKeyReleases ;Process Key Releases
  CALL ProcessSysKeyPresses  ;Process Key Presses
K90:                         ;Done
  POP  DX                    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;REMOVE ALL "HANGING" KEYSTROKES FOR A MOUSE (JUST DISCONNECTED OR DISABLED)
;Inputs:   ES  = TSR Data Area
;         [DI] = Device Info Buffer
;Outputs: DIFlagDisconnect is set
;         Issues Release codes to USBKEYB
;Changes:
;NOTES: This routine sets DIFlagDisconnect at the beginning, but does not
;         UnSet it when it is done.  It is up to the calling routine
;         to do that.  This is because the calling routine will need to
;         Disable/Reset/whatever the Device, which may take several hundred
;         milliseconds to complete.  During that time, there may be movement
;         data continuing to come from the mouse, which would continue to be
;         processed if DIFlagDisconnect is Unset by us.
;------------------------------------------------------------------------------
RlsPressedSysESDI:
  PUSH BX,DS             ;Save used registers
  PUSHF                  ;Save flags
  CLI                    ;Disable interrupts
  MOV  DS,ES             ;Point DS at TSR Data Area
  MOV  BX,DI             ;Point BX at the Device Info Entry
  OR   [BX].DIFlags,DIFlagDisconnect ;Mark as being Disconnected
  CALL DoDeviceChangeSys ;Send Key Releases
  POPF                   ;Restore flags
  POP  DS,BX             ;Restore used registers
  RET

;------------------------------------------------------------------------------
;PROCESS SYSTEM KEY PRESSES & RELEASES
;Inputs:  DS = ES = TSR Data Area
;         DH = System Key bit map (1 = Press) This Time
;         DL = System Key bit map (1 = Press) Last Time
;Outputs: Notifies USB Keyboard Driver (via INT 16h Functions) as needed
;Changes:
;------------------------------------------------------------------------------
ProcessSysKeyPresses:
  PUSH AX,DX                ;Save used registers
  XOR  AL,AL                ;Mark as a Press
  JMP >Y00                  ;Do it
ProcessSysKeyReleases:
  PUSH AX,DX                ;Save used registers
  MOV  AL,-1                ;Mark as a Release
  NOT  DX                   ;Work with Releases
;  JMP >Y00                  ;Do it
Y00:
  PUSH CX                   ;Save used registers
  OR   DH,DL                ;Figure out which buttons
  XOR  DH,DL                ;  have been changed since last time (DH)
  JZ  >Y90                  ;If no changes, quit
  MOV  DL,RptGDSysPowerDown ;Start with the first possible key
  MOV  CX,8                 ;Test 8 bits
Y10:                        ;Loop to here for each bit
  ROR  DH,1                 ;Is bit 0 set?
  JNC >Y50                  ;If not, don't send anything
  OR   AL,AL                ;Are we doing presses?
  JNZ >Y30                  ;If not, handle a Release
Y20:                        ;Need to send a Press
  CALL SendSysKeyPress      ;Send a Press
  JMP >Y50                  ;Continue
Y30:                        ;Need to send a Release
  CALL SendSysKeyRelease    ;Send a Release
Y50:                        ;Key handled
  INC  DL                   ;Increment Key Code
  LOOP Y10                  ;Keep going until we're done
Y90:                        ;Done
  POP  CX                   ;Restore used registers
  POP  DX,AX                ;Restore used registers
  RET

;------------------------------------------------------------------------------
;PERFORM AN INSTALL CHECK ON THE INT 16H USB SYSTEM KEY FUNCTIONS
;Inputs:
;Outputs: CF = Clear if Function worked
;            = Set if not
;Changes:
;------------------------------------------------------------------------------
Int16InstallCheck:
  PUSH AX,DX       ;Save used registers
  MOV  AL,30h      ;AL = Function = System Keys Install Check
  MOV  DX,1B1Bh    ;DX = 1B1Bh (Test value)
  CALL DoInt16Func ;Do it (returns CF)
  POP  DX,AX       ;Restore used registers
  RET

;------------------------------------------------------------------------------
;SEND A SYSTEM KEY PRESS OR RELEASE SIGNAL TO THE USB KEYBOARD DRIVER
;Inputs:  DL = Key Code to send
;Outputs: CF = Clear if Function worked
;            = Set if not
;Changes:
;------------------------------------------------------------------------------
SendSysKeyPress:
  PUSH AX          ;Save used registers
  MOV  AL,31h      ;AL = Function = Send USB System Key Press
  JMP >Y00         ;Do it
SendSysKeyRelease:
  PUSH AX          ;Save used registers
  MOV  AL,32h      ;AL = Function = Send USB System Key Release
;  JMP >Y00         ;Do it
Y00:
  PUSH DX          ;Save used registers
  XOR  DH,DH       ;Make sure DH = 0
  CALL DoInt16Func ;Do it (returns CF)
  POP  DX          ;Restore used registers
  POP  AX          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;PERFORM ONE OF THE INT 16H "SEND USB SYSTEM KEY" FUNCTIONS
;Inputs:  DX = Value to send in DX
;         AL = Subfunction to use
;Outputs: CF = Clear if Function worked
;            = Set if not
;Changes:
;------------------------------------------------------------------------------
DoInt16Func:
  PUSHA            ;Save all registers
  PUSH DS,ES       ;Save used registers
  MOV  AH,1Bh      ;Set AH to correct function
  MOV  BX,'KE'     ;BX = 'KE'
  MOV  CX,'YB'     ;CX = 'YB'
  STC              ;Preset error flag
  INT  16h         ;Do it
  JC  >X70         ;If error, not installed
  OR   AX,AX       ;Error?
  JNZ >X70         ;If so, Error
  CMP  BX,'YB'     ;BX what it should be?
  JNE >X70         ;If not, Error
  CMP  CX,'KE'     ;CX what it should be?
  JE  >X80         ;If so, it's OK
X70:               ;Not installed
  STC              ;Set not installed flag
  JMP >X90         ;Done
X80:               ;Installed
  CLC              ;Set installed flag
X90:               ;Done
  POP  ES,DS       ;Restore used registers
  POPA             ;Restore all registers
  RET

;------------------------------------------------------------------------------
;HANDLE THE DEVICE NOTIFICATION FOR THE MOUSE REPORT ID
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Info Table Offset (contains DeviceData)
;Outputs: Processes "Raw" Mouse data into an appropriate format
;         If appropriate, calls the "User" Code telling it what has changed
;Changes: Lots of things, including possibly all Registers
;Stack should look like this during the call:
;  No Wheel  Wheel
;  --------  -----
;  Buttons   Buttons & X Data
;  X Data    Y Data
;  Y Data    Z Data
;  0         0
;------------------------------------------------------------------------------
DeviceChangeMouse:
  CALL MakeStack                      ;Set up our own Stack Space
  CALL CopyRawData                    ;Copy the Raw Data for Status
  CALL GetPS2HWInfo                   ;Get the PS2 Data if emulating HW
  AND  B [BX].DIBtnOffset,RawAll5Btns ;Mask out all unused buttons
  CMP  DeviceID,DvcIDWheel2Yes        ;Are all 5 buttons enabled?
  JE  >M10                            ;If so, continue
  AND  B [BX].DIBtnOffset,RawAll3Btns ;If not, mask out all but the last 3 btns
M10:                                  ;Unused buttons are masked out
  CALL SwapUSBBtnsBX                  ;Swap L/R Buttons, if needed
  CALL HandleDataWords                ;Handle Data that's words insted of Bytes
  CALL NegateData                     ;Negate Data that's backwards
  CALL ProcessUSBScaling              ;Compensate for Scaling Factor, if needed
  CALL ProcessUSBResolution           ;Compensate for Resolution, if needed
  CALL TestUSBChanges                 ;Has anything actually changed?
  JC  >M90                            ;If not, quit
  TEST TSRFlags,FarCallInProg         ;Call already in Progress?
  JNZ >M90                            ;If so, we're done
  OR   TSRFlags,FarCallInProg         ;If not, mark as In Progress
  CALL CalcHandlerStatusByte          ;Calculate Status Byte (in AL, AH = 0)
M15:                                  ;AL contains Button Data, AH = 0
  CALL DoHWEmulation                  ;Process hardware emulation, if needed
  JNC >M80                            ;If processed, we're done
  MOV  SI,[BX].DIXOffset              ;Point at X Data
  CMP  DeviceID,DvcIDWheel1Yes        ;Has the Wheel been Enabled?
  JB  >M20                            ;If not, don't load the Wheel Data
  MOV  AH,[SI]                        ;If so, put X data in AH
  MOV  SI,[BX].DIYOffset              ;Point at Y Data
M20:                                  ;Wheel data Loaded, if appropriate
  PUSH AX                             ;Put Btns (& X if Wheel) on the stack
  XOR  AH,AH                          ;All high bytes are 0 from now on
  MOV  AL,[SI]                        ;Put X (Y if Wheel)
  PUSH AX                             ;  on the stack
  CMP  DeviceID,DvcIDWheel1Yes        ;Is there a Wheel?
  JAE >M40                            ;If so, jump to handle it
  MOV  SI,[BX].DIYOffset              ;If not, Point at Y
  MOV  AL,[SI]                        ;Get the Y Data
  JMP >M50                            ;Jump to put it on the stack
M40:                                  ;Wheel(s) are enabled
  CALL GetZDataForStack               ;Get Wheel Data
M50:                                  ;AX contains third word for stack
  PUSH AX                             ;Put Y Data (Z if Wheel) on the stack
M60:                                  ;3 bytes of Stack loaded for Far Call
  XOR  AX,AX                          ;Last Word of Stack
  PUSH AX                             ;  is 0
  CALL D MouseUserFarCall             ;Call the User Handler
M65:                                  ;Done with the User Handler, if needed
  POP  AX,AX,AX,AX                    ;Restore the Stack pointer
M80:                                  ;Done processing all Codes
  AND  TSRFlags,(NOT FarCallInProg)   ;Mark as done
M90:                                  ;Done
  CALL ReturnStack                    ;Restore Original Stack Space
  RET

;------------------------------------------------------------------------------
;COPY THE RAW KEY CODE DATA TO THE STATUS AREA, IN CASE WE NEED TO SHOW RAW STS
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Info Table Offset
;         CLD already issued
;         ReportID (if used) is already verified, to make sure we're using
;           valid data
;Outputs: Copies RawData to StatusData
;Changes:
;------------------------------------------------------------------------------
CopyRawData:
  PUSH CX,DI,SI          ;Save used registers
  LEA  SI,[BX].DIRawData ;Point SI at the Raw Data Area
  LEA  DI,[BX].DIStsData ;Point DI at the Status Data Area
  MOV  CX,(8/2)          ;Number of words to copy
  REP  MOVSW             ;Copy the Raw Data to the Status Data
W90:                     ;Done
  POP  SI,DI,CX          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;UPDATE THE INFORMATION ABOUT THE PS2 MOUSE IF DOING HW EMULATION
;Inputs:  DS = ES = TSR Data Area
;         TSRFlags.EmuHardware
;         PS2 Device Info Entry
;         Int15Hdr.OldVector
;Outputs: DeviceID, Resolution, SampleRateCode, PS2 Button Data (Buttons 1-3)
;Changes:
;------------------------------------------------------------------------------
GetPS2HWInfo:
  PUSH AX,BX,CX,DX,DI,SI            ;Save used registers
  MOV  DI,DIPS2Offset               ;Point [DI] at the PS2 Data Area
  MOV  SI,OFFSET TSRFlags           ;Point [SI] at TSRFlags
  TEST B [SI],EmuHardware           ;Are we emulating Hardware?
  JZ  >I90                          ;If not, don't do anything
;  TEST [DI].DIFlags,DIFlagInUse     ;Is there even a PS2 Mouse Installed?
;  JZ  >I90                          ;If not, don't do anything
  MOV  AX,0C200h+I15ALGetDeviceID   ;Function = Get Device ID
  STC                               ;Preset Error Flag
  PUSHF                             ;Do it
  CALL D Int15Hdr.OldVector         ;  (returns AX, BH)
  JC  >I90                          ;If error, quit
  CMP  BH,DvcIDWheelNo              ;Is it valid?
  JE  >I20                          ;If so, store it
  CMP  BH,DvcIDWheel1Yes            ;Is it valid?
  JB  >I30                          ;If not, don't store it
  CMP  BH,DvcIDWheel2Yes            ;Is it valid?
  JA  >I30                          ;If not, don't store it
I20:                                ;DeviceID is valid
  MOV  DeviceID,BH                  ;Store the Device ID
I30:                                ;DeviceID handled
  MOV  AX,0C200h+I15ALStatusScaling ;Function = Get Status/Set Scaling
  XOR  BH,BH                        ;SubFunction = 0 = Get Status
  PUSHF                             ;Do it (assume no error)
  CALL D Int15Hdr.OldVector         ;  (returns AX, BL, CL, DL)
  TEST BL,StatusScaling2            ;Scaling Factor of 2:1?
  JNZ >I40                          ;If so, handle it
I35:                                ;1:1 Scaling
  AND  B [SI],(NOT ScalingFactor2)  ;Mark as 1:1 Scaling
  JMP >I50                          ;continue
I40:                                ;2:1 Scaling
  OR   B [SI],ScalingFactor2        ;Mark as 2:1 Scaling
I50:                                ;Scaling Factor handled
  CALL ConvertBtnsBL                ;Convert the Buttons so we can use them
  MOV  [DI].DIRawData[0],BL         ;Store the Button Status
  MOV  Resolution,CL                ;Store the Resolution
  CALL ConvertSamplingDL            ;Convert the Resolution to a Code
  MOV  SampleRateCode,DL            ;Store it
I90:                                ;Done
  POP  SI,DI,DX,CX,BX,AX            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CONVERT PS2 "GET STATUS" BUTTONS TO STACK-COMPATIBLE FORMAT
;Inputs:  BL = Button Status (from PS2 Get Status Call)
;              (Buttons are in different order than those returned on the stack)
;Outputs: BL = Raw Button Mask (as used in Stack or USB Mice)
;Changes:
;------------------------------------------------------------------------------
ConvertBtnsBL:
  PUSH AX            ;Save used registers
  XOR  AL,AL         ;Start with no buttons pressed
B10:                 ;Process Left Button
  TEST BL,StatusLBtn ;Left Button pressed?
  JZ  >B20           ;If not, continue
  OR   AL,RawLBtn    ;If so, mark Left button as pressed
B20:                 ;Process Right Button
  TEST BL,StatusRBtn ;Right Button pressed?
  JZ  >B30           ;If not, continue
  OR   AL,RawRBtn    ;If so, mark Right button as pressed
B30:                 ;Process Center Button
  TEST BL,StatusCBtn ;Center Button pressed?
  JZ  >B90           ;If not, we're done
  OR   AL,RawCBtn    ;If so, mark Center button as pressed
B90:                 ;Done
  MOV  BL,AL         ;Store the result in BL
  POP  AX            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CONVERT PS2 "GET STATUS" SAMPLE RATE (HZ) TO A SAMPLE RATE CODE
;Inputs:  DS = ES = TSR Data Area
;         SampleRateTable
;         DL = Sample Rate in Hz (from PS2 Get Status Call)
;Outputs: DL = Sample Rate Code corresponding to Sample Rate
;Changes:
;NOTES: For some unknown reason, the "Get Status" request for the PS2 Mouse
;         BIOS returns the actual sample rate (in Hertz), rather than
;         the code (from 0 to 6) that is used in the "Set Sampling" call.
;       In this code, we simply assume that the sample rate value is a
;         valid number, and do not actually test it.
;------------------------------------------------------------------------------
ConvertSamplingDL:
  PUSH SI                     ;Save used registers
  MOV  SI,(SampleRateTable+1) ;Point at the conversion table
P10:                          ;Loop to here for each table entry
  CMP  B [SI-1],SampleCode200 ;Is this the last table entry?
  JE  >P90                    ;If so, we're done
  CMP  [SI],DL                ;Is this the correct table entry?
  JE  >P90                    ;If so, we're done
  ADD  SI,3                   ;If not, point at the next table entry
  JMP  P10                    ;Keep looking
P90:                          ;Done
  MOV  DL,[SI-1]              ;Store the Sampel Rate Code in DL
  POP  SI                     ;Restore used registers
  RET

;------------------------------------------------------------------------------
;PUT THE DATA FOR THIS MOUSE INTO THE HARDWARE EMULATION BUFFER
;Inputs:  DS = ES = TSR Data Area
;         AL = Button Data Byte to send (combined button statuses)
;        [BX] = Device Info Entry of Mouse we're processing
;         All registers saved to stack (we don't need to save anything)
;         TSRFlags.EmuHardware
;         DeviceID
;Outputs: CF = Clear if we processed things (TSRFlags.EmuHardware = False)
;              Buffer contains appropriate data
;            = Set if we did not process things (TSRFlags.EmuHardware = True)
;Changes: Puts some data in Buffer
;         CHanges several registers
;------------------------------------------------------------------------------


;How do we know if we're supposed to send anything if we don't use the BIOS?
;We're sending things with no Driver installed.


DoHWEmulation:
  TEST TSRFlags,EmuHardware    ;Should we do anything
  JZ  >H70                     ;If not, don't
  CLI                          ;If so, disable interrupts
  CALL PutBufferAL             ;Put the Button Data into the Buffer
  MOV  SI,[BX].DIXOffset       ;Put the
  LODSB                        ;  X Data
  CALL PutBufferAL             ;  into the Buffer
  MOV  SI,[BX].DIYOffset       ;Put the
  LODSB                        ;  Y Data
  CALL PutBufferAL             ;  into the Buffer
  CMP  DeviceID,DvcIDWheel1Yes ;Should we process the wheel(s)?
  JB  >H80                     ;If not, we're done
  CALL GetZDataForStack        ;If so, get the Wheel Data (AL)
  CALL PutBufferAL             ;Put the Wheel Data into the Buffer
  JMP >H80                     ;Done
H70:                           ;Did not process things
  STC                          ;Set return flag
  JMP >H90                     ;Done
H80:                           ;Did process things
  CALL EnableInt70             ;Enable INT 70h (CMOS Timer)
  CLC                          ;Set return flag
H90:                           ;Done
  STI                          ;Enable interrupts
  RET

;------------------------------------------------------------------------------
;GET THE APPROPRIATE Z DATA VALUE TO PUT ON THE STACK FOR DEVICECHANGEMOUSE
;Inputs:   DS = ES = TSR Data Area
;         [BX] = Info Table Entry we're using
;          AH  = 0
;          DeviceID = DvcIDWheel1Yes or DvcIDWheel2Yes
;Outputs:  AX  = Value to put on stack (AL = appropriate Z Data, AH = 0)
;Changes:  SI
;------------------------------------------------------------------------------
GetZDataForStack:
  PUSH CX                 ;Save used registers
  XOR  AL,AL              ;Assume no wheels
  XOR  CL,CL              ;Assume no Second Wheel
  CMP  [BX].DINumWheels,1 ;How many Wheels does our Mouse have?
  JB  >M90                ;If none, we're done
  MOV  SI,[BX].DIZ1Offset ;If at least one Wheel, put the
  MOV  AL,[SI]            ;  Vertical Wheel Data in AL
  JE  >M05                ;If only one Wheel, continue
  MOV  SI,[BX].DIZ2Offset ;If two Wheels, put the
  MOV  CL,[SI]            ;  Horizontal Wheel Data in CL
M05:                      ;AL = Z1 data, CL = Z2 Data
  CMP  DeviceID,DvcIDWheel1Yes ;How many Wheels are Enabled?
  JA  >M20                ;If 2, jump to handle it
M10:                      ;Only One Wheel is Enabled (AL = Wheel Data)
  CMP  AL,7               ;Is it between 0 and 7?
  JBE >M90                ;If so, done
  JG  >M15                ;If positive and more than 7, jump to handle it
  CMP  AL,-7              ;Is it between 0 and -7?
  JGE >M90                ;If so, done
M12:                      ;Z Data is too negative
  MOV  AL,-7              ;Make it -7
  JMP >M90                ;Done
M15:                      ;Z Data is too positive
  MOV  AL,7               ;Make it 7
  JMP >M90                ;Done
M20:                      ;Two Wheels are Enabled
  TEST AL,AL              ;Is Z1 Data Positive, Negative, or 0?
  JZ  >M40                ;If 0, look for Z2 Data
  JS  >M25                ;If negative, jump to handle it
M22:                      ;Z1 Data is positive
  MOV  AL,1               ;Make it 1
  JMP >M60                ;Jump to add in the Buttons
M25:                      ;Z1 Data is negative
  MOV  AL,-1              ;Make it -1
  JMP >M60                ;Jump to add in the Buttons
M40:                      ;Z1 data = 0
  MOV  AL,CL              ;Put second Wheel data in AL
  TEST AL,AL              ;Is Z1 Data Positive, Negative, or 0?
  JZ  >M60                ;If 0, it's Ok like it is
  JS  >M45                ;If negative, jump to handle it
M42:                      ;Z1 Data is positive
  MOV  AL,2               ;Make it 2
  JMP >M60                ;Jump to handle it
M45:                      ;Z1 Data is negative
  MOV  AL,-2              ;Make it -2
M60:                      ;AL contains Z Data, need to add in Buttons 4 & 5
  AND  AL,0Fh             ;Mask out the high nibble
  MOV  CL,AL              ;Save it for a second
  CALL GetAllBtns45       ;Get Buttons 4 & 5 Status
  OR   AL,CL              ;Mask it in with the Z Data
M90:                      ;Done
  POP  CX                 ;Restore used registers
  RET

;------------------------------------------------------------------------------
;SWAP THE L/R BUTTONS IN A STATUS BYTE, IF APPROPRIATE
;Inputs:  AL/[BX] = Mouse Button Status to work with
;         TSRFlags
;Outputs: Swaps L/R buttons in Status Byte, if needed
;Changes:
;------------------------------------------------------------------------------
SwapAllBtnsAL:
  TEST TSRFlags,SwapBtns           ;Need to swap the buttons?
  JZ  >A90                         ;If not, we're done
  CALL SwapBtnsGo                  ;If so, swap 'em
A90:                               ;Done
  RET

SwapUSBBtnsBX:
  PUSH AX                          ;Save used registers
  TEST [BX].DIFlags,DIFlagSwapBtns ;Need to swap the buttons?
  JZ  >U90                         ;If not, we're done
  MOV  AL,[BX].DIBtnOffset         ;Get the Raw Button Data
  CALL SwapBtnsGo                  ;Swap L/R Buttons
  MOV  [BX].DIBtnOffset,AL         ;Store the new Button Status
U90:                               ;Done
  POP  AX                          ;Restore used registers
  RET

SwapBtnsGo:
  PUSH BX                          ;Save used registers
  MOV  BL,AL                       ;Put current status
  MOV  BH,AL                       ;  in BL and BH
  AND  BL,NOT (RawLBtn+RawRBtn)    ;Mask out existing Button Status
  TEST BH,RawLBtn                  ;Left Button pressed?
  JZ  >G20                         ;If not, skip it
  OR   BL,RawRBtn                  ;If so, make it a right button
G20:                               ;Left Button handled
  TEST BH,RawRBtn                  ;Left Button pressed?
  JZ  >G30                         ;If not, skip it
  OR   BL,RawLBtn                  ;If so, make it a right button
G30:                               ;Right Button Handled
  MOV  AL,BL                       ;Put it in AL for the return
  POP  BX                          ;Restore used registers
  RET

;------------------------------------------------------------------------------
;NEGATE THE RAW DATA THAT IS BACKWARDS
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Device Info Entry to change
;Outputs: [BX].DIYOffset
;         [BX].DIZ1Offset
;Changes:
;NOTES: We currently only change the Y and Z1 Data.  The X Data does not need
;         to be negated.  I have never personally seen a mouse with Z2 data,
;         so don't know if it needs to be negated or not, and it may depend
;         on the mouse itself.
;       Also, if a mouse actually calls the Wheel a Z-Axis rather than a Wheel
;         (and it doesn't have a Wheel), it may not need to be negated.
;------------------------------------------------------------------------------
NegateData:
  PUSH DI                 ;Save used registers
  MOV  DI,[BX].DIYOffset  ;Point [DI] at the Y Data
  NEG  B [DI]             ;Negate it
  CMP  [BX].DINumWheels,0 ;Does the mouse have a Wheel?
  JE  >N90                ;If not, we're done
  MOV  DI,[BX].DIZ1Offset ;Point [DI] at the Vertical Wheel Data
  NEG  B [DI]             ;Negate it
N90:                      ;Done
  POP  DI                 ;Restore used registers
  RET

;------------------------------------------------------------------------------
;CONVERT RAW DATA AXES THAT ARE WORDS INTO BYTES
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Device Info Entry to change
;                [BX].DIFlags
;Outputs: [BX].DIXOffset
;         [BX].DIYOffset
;         [BX].DIZ1Offset
;         [BX].DIZ2Offset
;Changes:
;------------------------------------------------------------------------------
HandleDataWords:
  PUSH AX,CX,DI,SI       ;Save used registers
  MOV  CX,4              ;Need to do 4 Axes
  MOV  AL,DIFlagX2Bytes  ;Start with
  LEA  SI,[BX].DIXOffset ;  the X Data
D10:                     ;Loop to here for each Axis
  MOV  DI,[SI]           ;Get the Axis Offset
  CALL HandleDataWord    ;Process it
  SHL  AL,1              ;Move over to the
  ADD  SI,2              ;  next Axis
  LOOP D10               ;Keep going until we're done
  POP  SI,DI,CX,AX       ;Restore used registers
  RET

HandleDataWord:
  PUSH AX              ;Save used registers
  OR   DI,DI           ;Valid Data?
  JZ  >W90             ;If not, we're done
  TEST [BX].DIFlags,AL ;If so, is the Data a word?
  JZ  >W90             ;If not, we're done
  MOV  AX,[DI]         ;If so, get the Raw Data
  OR   AX,AX           ;Is it negative?
  JS  >W30             ;If so, handle it
W20:                   ;Data is positive
  CMP  AX,127          ;Is it too positive?
  JLE >W90             ;If not, we're done
  MOV  AL,127          ;If so, maximize it
  JMP >W80             ;Jump to store it
W30:                   ;Data is negative
  CMP  AX,-127         ;Is it too negative?
  JGE >W90             ;If not, we're done
  MOV  AL,-127         ;If so, maximize it
W80:                   ;Store modified data
  MOV  [DI],AL         ;Store it
W90:                   ;Done
  POP  AX              ;Restore used registers
  RET

;------------------------------------------------------------------------------
;COMPENSATE THE RAW DATA FOR THE 2:1 SCALING FACTOR
;Inputs:  DS = ES = TSR Data Area
;         [BX] = Device Info Entry to change
;          TSRFlags.ScalingFactor2
;Outputs: [BX].DIXOffset (X Scaling)
;         [BX].DIYOffset (Y Scaling)
;         compensated for 2:1 Scaling Factor, if necessary
;Changes:
;------------------------------------------------------------------------------
ProcessUSBScaling:
  PUSH DI                ;Save used registers
  MOV  DI,[BX].DIXOffset ;Get the X Data Offset
  CALL DoScaling2        ;Compenstate for Scaling Factor, if needed
  MOV  DI,[BX].DIYOffset ;Get the Y Data Offset
  CALL DoScaling2        ;Compensate for Scaling Factor, if needed
  POP  DI                ;Restore used registers
  RET

DoScaling2:
  PUSH AX,BX         ;Save used registers
  TEST TSRFlags,ScalingFactor2 ;Do we need to do anything?
  JZ  >S90           ;If not, quit
  XOR  AH,AH         ;Assume positive data
  MOV  AL,[DI]       ;Get Raw data
  TEST AL,AL         ;Is it positive?
  JNS >S10           ;If so, continue
  DEC  AH            ;Mark as negative
  NEG  AL            ;Make positive
S10:                 ;Data is positive
  CMP  AL,5          ;Is it small enough to even be in the Table?
  JA  >S50           ;If not, handle it
  MOV  BX,ScalingTbl ;Point at Scaling Table
  XLATB              ;Convert Raw Data to Scaled Data
  JMP >S60           ;Done
S50:                 ;Too big to be in the table
  SHL  AL,1          ;Just multiply by 2
S60:                 ;Convert back to negative, if necessary
  OR   AH,AH         ;Was it positive?
  JZ  >S80           ;If so, we're done
  NEG  AL            ;If not, make it negative again
S80:                 ;Done storing
  MOV  [DI],AL       ;Store the compensated Resolution
S90:                 ;Done
  POP  BX,AX         ;Restore used registers
  RET

;------------------------------------------------------------------------------
;COMPENSATE RAW DATA FOR RESOLUTION FACTOR
;Inputs:  [BX] = InfoTable Entry
;         (Contains XRemainder, YRemainder, DeviceData)
;         Resolution
;Outputs: Compensates DeviceData (X & Y Data) for Resolution
;         XRemainder, YRemainder
;Changes:
;------------------------------------------------------------------------------
ProcessUSBResolution:
  PUSH DI,SI                ;Save used registers
  MOV  SI,[BX].DIXOffset    ;Point [SI] at the X Data
  LEA  DI,[BX].DIXRemainder ;Point [DI] at X Remainder
  CALL DoResolution1        ;Convert it
  MOV  SI,[BX].DIYOffset    ;Point [SI] at the Y Data
  INC  DI                   ;Point [DI] at Y Remainder
  CALL DoResolution1        ;Convert it
  POP  SI,DI                ;Restore used registers
  RET

DoResolution1:
  PUSH AX,BX,CX,DX    ;Save used registers
  MOV  AL,[DI]        ;Get remainder from last time
  CBW                 ;Convert it to a word
  MOV  BX,AX          ;Put it in BX
  MOV  AL,[SI]        ;Get Raw Data
  CBW                 ;Convert it to a word
  ADD  AX,BX          ;Add Remainder from last time
  XOR  CH,CH          ;Assume positive
  TEST AX,AX          ;Is it positive?
  JNS >R10            ;If so, continue
  DEC  CH             ;If not, mark as negative
  NEG  AX             ;Make it positive
R10:                  ;AX = New Data + Remainder (positive), CH = +/- Flag
  MOV  BX,AX          ;Store total movement in BX
  MOV  CL,Resolution8 ;Convert Resolution
  SUB  CL,Resolution  ;  to a Shift Counter
  SHR  AX,CL          ;Compensate for Resolution Factor
  MOV  DX,AX          ;Store it in DX
  SHL  AX,CL          ;Calculate the
  SUB  BX,AX          ;  remainder for next time
  OR   CH,CH          ;Was it positive?
  JZ  >R20            ;If so, we're done
  NEG  BX             ;If not, make it
  NEG  DX             ;  negative
R20:                  ;DL = Compensated Data, BL = Remainder
  MOV  [SI],DL        ;Store Compensated Factor
  MOV  [DI],BL        ;Store remainder for next time
  POP  DX,CX,BX,AX    ;Restore used registers
  RET

;------------------------------------------------------------------------------
;TEST THE RAW USB MOUSE DATA TO SEE IF ANYTHING HAS ACTUALLY CHANGED
;Inputs:  [BX] = Device Info Table Entry
;         (Already Compensated/Swapped as needed)
;         MouseUserFarCall
;         TSRFlags.Int15Enabled
;         TSRFlags.EmuHardware
;Outputs: CF = Clear if something has changed
;            = Set if nothing has actually changed since last time
;         [BX].DIBtnDataLastTime
;Changes:
;------------------------------------------------------------------------------
TestUSBChanges:
  PUSH AX,SI                       ;Save used registers
  MOV  AL,[BX].DIBtnOffset         ;Get Button Data
  AND  AL,RawAll5Btns              ;Mask out buttons 6-8
  CMP  DeviceID,DvcIDWheel2Yes     ;Do we care about buttons 4 & 5?
  JE  >C10                         ;If so, continue
  AND  AL,RawAll3Btns              ;If not, mask out buttons 4 & 5
C10:                               ;Unwanted buttons are masked out
  CMP  AL,[BX].DIBtnDataLastTime   ;Have the buttons changed since last time?
  MOV  [BX].DIBtnDataLastTime,AL   ;Save it for next time
  JNE >C30                         ;If buttons have changed, continue
  MOV  SI,[BX].DIXOffset           ;Has the X
  CMP  B [SI],0                    ;  Data changed?
  JNE >C30                         ;If so, continue
  MOV  SI,[BX].DIYOffset           ;Has the Y
  CMP  B [SI],0                    ;  Data changed?
  JNE >C30                         ;If so, continue
  CMP  DeviceID,DvcIDWheel1Yes     ;If so, are the wheel(s) enabled?
  JB  >C70                         ;If not, there are no changes
  CMP  [BX].DINumWheels,1          ;If so, do we have a Wheel?
  JB  >C70                         ;If not, there are no changes
  MOV  SI,[BX].DIZ1Offset          ;Has the Vertical Wheel
  CMP  B [SI],0                    ;  Data changed?
  JNE >C30                         ;If so, continue
  CMP  DeviceID,DvcIDWheel2Yes     ;If not, is the second wheel enabled?
  JNE >C70                         ;If not, there are no changes
  CMP  [BX].DINumWheels,2          ;If so, do we have a second Wheel?
  JB  >C70                         ;If not, there are no changes
  MOV  SI,[BX].DIZ2Offset          ;Has the Horizontal Wheel
  CMP  B [SI],0                    ;  Data changed?
  JE  >C70                         ;If not, there are no changes
C30:                               ;Something has changed since last time
  TEST TSRFlags,EmuHardware        ;Are we emulating hardware?
  JNZ >C40                         ;If so, we don't care about BIOS status
  TEST TSRFlags,Int15Enabled       ;INT 15h Functions even enabled?
  JZ  >C70                         ;If not, we're done
  CMP  W MouseUserFarCall[2],0     ;Is there some User Code to perform?
  JE  >C70                         ;If not, we're done
C40:                               ;High-level functions are enabled
  TEST TSRFlags2,DisableAll        ;All Devices Disabled?
  JNZ >C70                         ;If so, pretend nothing has changed
  TEST [BX].DIFlags,DIFlagDisabled ;This particular Device Disabled?
  JZ  >C80                         ;If not, it's OK to do things
C70:                               ;Nothing has changed since last time
  STC                              ;Set no-change flag
  JMP >C90                         ;Done
C80:                               ;Something has changed
  CLC                              ;Set change flag
C90:                               ;Done
  POP  SI,AX                       ;Restore used regsiters
  RET

;------------------------------------------------------------------------------
;CALCULATE THE CORRECT STATUS WORD TO PUT ON THE STACK FOR THE USER FAR CALL
;Inputs:  [BX] = Info Table Entry
;         (contains DeviceData)
;Outputs: AX = Status Word to put on stack for User Far Call
;Changes:
;------------------------------------------------------------------------------
CalcHandlerStatusByte:
  PUSH CX,DI             ;Save used registers
  MOV  CX,0008h          ;Start with Default Value
  CALL GetAllBtns123     ;Get Buttons 1-3 Status
  OR   CL,AL             ;Add it to the Status Byte
  MOV  DI,[BX].DIXOffset ;Point at the X Data
  TEST B [DI],80h        ;Is the Data Negative?
  JZ  >H30               ;If not, handle the Y data
  OR   CL,HandlerXNeg    ;Mark it as Negative
H30:                     ;Test Y Direction
  MOV  DI,[BX].DIYOffset ;Point at the Y Data
  TEST B [DI],80h        ;Is the Data Negative?
  JZ  >H50               ;If not, we're done
  OR   CL,HandlerYNeg    ;Mark it as Negative
H50:                     ;Done
  MOV  AX,CX             ;Put Status Byte in AX
  POP  DI,CX             ;Restore used registers
  RET

;------------------------------------------------------------------------------
;GET COMBINED STATUS OF BUTTONS ON ALL MICE
;Inputs:  ES = TSR Data Area
;Outputs: AL = Raw Buttons Status (all mice combined)
;              Includes all 5 buttons, if appropriate
;Changes:
;------------------------------------------------------------------------------
GetAllBtns45:
  CALL GetAllRawBtns ;Get all 5 buttons
  AND  AL,18h        ;Mask out buttons 1-3
  SHL  AL,1          ;Move it over so we can use it as a mask
  RET

GetAllBtns123:
  CALL GetAllRawBtns  ;Get all 5 buttons
  AND  AL,RawAll3Btns ;Mask out buttons 4&5
  RET

GetAllRawBtns:
  PUSH CX,DI,DS                    ;Save used registers
  MOV  DS,ES                       ;Point DS at TSR Data Area
  XOR  AL,AL                       ;Start with no buttons pressed
  MOV  CX,(MaxDevices+1)           ;Number of table entries to test
  MOV  DI,DeviceInfoTable          ;Point at Table
A20:                               ;Loop to here for each Table Entry
  TEST [DI].DIFlags,DIFlagInUse    ;Valid Device here?
  JZ  >A30                         ;If not, try next entry
  TEST TSRFlags2,DisableAll        ;All Devices Disabled?
  JNZ >A30                         ;If so, skip to the next entry
  TEST [DI].DIFlags,DIFlagDisabled ;This Device Disabled?
  JNZ >A30                         ;If so, try next entry
  OR   AL,[DI].DIBtnOffset         ;If not, mask it in to our running total
A30:                               ;Go to next entry
  ADD  DI,DeviceInfoStrucSize      ;Point at next Table entry
  LOOP A20                         ;Keep looking
  AND  AL,RawAll5Btns              ;Mask out unwanted buttons
  CMP  ES:DeviceID,DvcIDWheel2Yes  ;Do we care about all 5 buttons?
  JE  >A90                         ;If so, we're done
  AND  AL,RawAll3Btns              ;If not, mask out buttons 4 & 5
A90:                               ;Done
  CALL SwapAllBtnsAL               ;Swap L/R Buttons, if needed
  POP  DS,DI,CX                    ;Restore used registers
  RET


