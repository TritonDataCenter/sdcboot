;CODE TO HANDLE INT 15h
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;------------------------------------------------------------------------------
;HAVE INTERRUPT 15h (BIOS SERVICES) RUN THIS PROGRAM EVERY TIME IT OCCURS
;Inputs:
;Outputs: Emulates a PS2 Port with a Mouse Attached to it
;         Depending on Exact Call SubType (value in AL), will return
;           various values in AX, BX, CX and/or DX
;Changes:
;------------------------------------------------------------------------------
Int15Hdr:
  DB TYPE IntHdr DUP (0) ;Header for removable interrupt vector code

Int15:
  PUSHF                            ;Save flags
  STI                              ;Enable interrupts
  CLD                              ;Go forward with string functions
  TEST CS:TSRFlags,EmuHardware     ;Are we emulating hardware?
  JNZ  Int15Old                    ;If so, let the old handler process it
  CMP  AH,Int15PS2PortCall         ;Is it one of the PS2 functions?
  JNE  Int15Old                    ;If not, it's not for us
  CMP  AL,I15ALSetHandler          ;Valid Function Number?
  JBE >F05                         ;If so, handle it
  CMP  AL,I15ALGetHandler          ;Valid Function Number?
  JE  >F05                         ;If so, handle it
  MOV  AH,Int15ErrInvalidFunction  ;If not,
  JMP >F75                         ;  it's an error
F05:                               ;It's for us!
  CALL MakeStack                   ;Set up our own Stack Space
  PUSH BP,DS,ES                    ;Save used registers
  MOV  BP,ES                       ;Save users ES on the call (may need it)
  MOV  DS,CS                       ;Point DS at our data area
  MOV  ES,CS                       ;Point ES at our data area
  CALL DoInt15Function             ;Do our thing
  JNC >F80                         ;If no error, jump to handle it
F70:                               ;Error
  POP  ES,DS,BP                    ;Restore used registers
  CALL ReturnStack                 ;Restore original Stack Space
F75:                               ;Error, no saved registers
  POPF                             ;Restore flags
  PUSH BP                          ;Save used registers
  MOV  BP,SP                       ;Point BP at the stack
  OR   B SS:[BP+6],CarryFlag       ;Set Carry Flag for the return
  JMP >F90                         ;Done
F80:                               ;No Error
  POP  ES,DS,BP                    ;Restore used registers
  CALL ReturnStack                 ;Restore original Stack Space
  POPF                             ;Restore flags
  PUSH BP                          ;Save used registers
  MOV  BP,SP                       ;Point BP at the stack
  AND  B SS:[BP+6],(NOT CarryFlag) ;Clear Carry Flag for the return
F90:                               ;Done
  POP  BP                          ;Restore used registers
  IRET

Int15Old:
  POPF                             ;Restore flags
  JMP  D CS:Int15Hdr.OldVector     ;Let the Old Interrupt Handler do it

;------------------------------------------------------------------------------
;DO APPROPRIATE INT 15 (PS2/MOUSE) SUBFUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AL = SubFunction to Perform
;         BP = Caller's ES
;         BX = Unchanged from Caller
;Outputs: CF = Clear if OK
;           Returns various values in AX, BX, CX and/or DX, depending on call
;         CF = Set if Error
;           AH = Error Code, all other registers unchanged
;Changes:
;------------------------------------------------------------------------------
DoInt15Function:
  PUSH DI                         ;Save used registers
  MOV  DI,BX                      ;Save original BX
  MOV  AH,Int15ErrInvalidFunction ;Assume invalid function
  MOV  BX,Int15FunctionTbl        ;Point at function table
  CALL SearchByteToWordTbl        ;Look for our function
  XCHG  BX,DI                     ;Put Function Code in DI,
                                  ;  restore original BX
  JC  >I70                        ;If error, we're done
  CMP  AL,I15ALSetSampling        ;Is it Set Sample Rate?
  JE  >I10                        ;If so, continue
  MOV  W EnableWheelCounter,0     ;If not, Reset Enable Wheel Counters
I10:                              ;Do Function
  XOR  AH,AH                      ;Assume no errors from now on
  CALL DI                         ;Call the function
  JNC >I80                        ;If no error, we're done
  OR   AH,AH                      ;Did it return a valid error code?
  JNZ >I70                        ;If so, we're done
  MOV  AH,Int15ErrNeedToResend    ;If not, default = Resend
I70:                              ;Error
  STC                             ;Set Error Flag
  JMP >I90                        ;Done
I80:                              ;OK
  CLC                             ;Set OK flag
I90:                              ;Done
  POP  DI                         ;Restore used registers
  RET

;------------------------------------------------------------------------------
;DO THE PS2 ENABLE/DISABLE HANDLER FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AL = Original INT 15h Function Code (Enable/Disable)
;         AH = 0
;         BH = Function to Perform (0 = Disable, 1 = Enable)
;Outputs: CF = Set if error
;              AH = Error Code
;            = Clear if OK
;              AH = Unchanged
;              Int15Enabled changed as appropriate
;Changes:
;------------------------------------------------------------------------------
PS2EnableDisable:
  CMP  BH,1                        ;Is it Enable or Disable?
  JA  >E70                         ;If neither, Error
  JE  >E20                         ;If Enable, jump to handle it
E10:                               ;Disable
  AND  TSRFlags,(NOT Int15Enabled) ;Mark as Disabled
  JMP >E80                         ;Done
E20:                               ;Enable
  CMP  W MouseUserFarCall[2],0     ;Is there a registered Handler address?
  JNE >E30                         ;If so, it's OK to Enable
  MOV  AH,Int15ErrNoDeviceHandler  ;If not, Error = No Handler
  JMP >E75                         ;Done
E30:                               ;OK to Enable
  OR   TSRFlags,Int15Enabled       ;Mark as Enabled
  CALL ResetTotals                 ;Reset Movement Counters
  JMP >E80                         ;Done
E70:                               ;Error
  MOV  AH,Int15ErrInvalidInput     ;Error = Invalid value in BH
E75:                               ;Error, AH = Error Code
  STC                              ;Set Error Flag
  JMP >E90                         ;Done
E80:                               ;No Error
  CLC                              ;Set OK flag
E90:                               ;Done
  RET

;------------------------------------------------------------------------------
;DO THE PS2 RESET FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AH = 0
;Outputs: CF = Set if error
;              AH = Error Code
;            = Clear if OK
;              AH = Unchanged (0)
;              BH = Device ID (0)
;              BL = Device Type (Mouse)
;              Mouse has been Reset
;Changes:
;------------------------------------------------------------------------------
PS2Reset:
;  MOV  BH,3                    ;Default Data Size = 3 Bytes
  MOV  BH,Int15DataSize        ;Data Size = Unchanged
  CALL PS2Initialize           ;Do a Soft Initialization
  ;MOV  DeviceID,DvcIDWheelNo   ;Disable Wheel(s)
  MOV  W MouseUserFarCall[2],0 ;Reset Far Call Address
  ;CALL RePointPS2Handler       ;RePoint PS2 handler at us
  MOV  BX,DvcTypeMouse         ;Rtn BH = Device ID = 0 (No Wheels)
                               ;Rtn BL = Device Type = Mouse
  CLC                          ;Set Return Flag
  RET

;------------------------------------------------------------------------------
;DO THE PS2 INITIALIZE FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AH = 0
;         BH = Data Package Size to use (1-8 bytes)
;              We will only allow a size of 3 or 4 for the Mouse
;Outputs: CF = Set if error
;              AH = Error Code
;            = Clear if OK
;              AH = Unchanged (0)
;              Mouse Software has been Initialized
;Changes:
;------------------------------------------------------------------------------
PS2Initialize:
  PUSH BX                            ;Save used registers
  CMP  BH,4                          ;Is data valid?
  JA  >I70                           ;If not, error
  CMP  BH,3                          ;Is data valid?
  JB  >I70                           ;If not, error
  MOV  Int15DataSize,BH              ;Store it
  MOV  DeviceID,DvcIDWheelNo         ;Disable Wheel(s)
  MOV  SampleRateCode,SampleCode100  ;Store the Default Sample Rate Code
  MOV  BL,DefaultPeriodicity         ;Set the
  CALL ChangePeriodicity             ;  Default Periodicity
  AND  TSRFlags,(NOT ScalingFactor2) ;Default Scaling Factor is 1:1
  MOV  Resolution,Resolution4        ;Default Resolution is 4 counts/mm
  AND  TSRFlags,(NOT Int15Enabled)   ;Default = Disabled
  JMP >I80                           ;Done
I70:                                 ;Error
  MOV  AH,Int15ErrInvalidInput       ;Error Code
  STC                                ;Error Flag
  JMP >I90                           ;Done
I80:                                 ;OK
  CALL ResetTotals                   ;Reset Movement Counters
  CLC                                ;Set OK Flag
I90:                                 ;Done
  POP  BX                            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;DO THE PS2 SET SAMPLE RATE FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AL = Original INT 15h Function Code (Set Sample Rate)
;         AH = 0
;         BH = Sample Rate Code (See SampleRateTable)
;Outputs: CF = Set if error
;              AH = Error Code (Invalid Input)
;            = Clear if OK
;              AH = Unchanged
;              Sample Rate changed as appropriate
;Changes:
;------------------------------------------------------------------------------
PS2SetSampleRate:
  PUSH BX,DX                   ;Save used registers
  CMP  BH,SampleCode200        ;Is it a valid Function Code?
  JA  >S70                     ;If not, error
  CMP  BH,SampleCode080        ;Is it the possible end of a Setup?
  JNE >S05                     ;If not, it's OK
  MOV  BH,SampleCode010        ;If so, send a Code to make sure it doesn't
  CALL DoPS2MouseFunction      ;  Change the PS2 Mouse Setup
  MOV  BH,SampleCode080        ;Restore original Sample Code
S05:                           ;PS2 Mouse handled
  CALL DoPS2MouseFunction      ;If OK, send it to the PS2 Mouse
  MOV  DX,W EnableWheelCounter ;Put Wheel Counter in DX
  CMP  BH,SampleCode200        ;Is it a valid Function Code?
  JE  >S30                     ;If so, see if it's part of a Wheel Enable
  CMP  BH,SampleCode100        ;Possible Wheel enable?
  JE  >S20                     ;If so, handle it
  CMP  BH,SampleCode080        ;Possible Wheel enable?
  JNE >S50                     ;If not, continue
S10:                           ;Setting 80
  CMP  DL,2                    ;End of Wheel Enable?
  JNE >S15                     ;If not, try next possibility
  MOV  DeviceID,DvcIDWheel1Yes ;If so, Enable Wheel
  JMP >S40                     ;Reset Wheel Enable Counter
S15:                           ;Not enabling 1 wheel
  CMP  DH,2                    ;End of Wheels Enable?
  JNE >S40                     ;If not, reset Wheel Enable Counters
  MOV  DeviceID,DvcIDWheel2Yes ;If so, Enable Wheels
  JMP >S40                     ;Reset Wheel Enable Counter
S20:                           ;Setting 100
  CMP  DL,1                    ;Possible Wheel Enable?
  JNE >S40                     ;If not, reset Wheel Enable Counter
  INC  DL                      ;If so, Increment the Wheel Enable Counter
  JMP >S50                     ;Continue
S30:                           ;Setting 200
  OR   DX,DX                   ;Possible Wheel(s) Enable?
  JNZ >S35                     ;If not, try next possibility
  ADD  DX,0101h                ;If so, increment both Wheel Counters
  ;MOV  IntelliTimer,5          ;Initialize Timeout Counter
  JMP >S50                     ;Continue
S35:                           ;Not enabling 1 wheel
  CMP  DH,1                    ;Possible enable Wheels?
  JNE >S40                     ;If not, reset Wheel Enable Counters
  INC  DH                      ;If so, increment Wheels Counter
  XOR  DL,DL                   ;Reset Wheel Counter
  JMP >S50                     ;Continue
S40:                           ;Not part of Wheel enable
  XOR  DX,DX                   ;Reset Wheel Enable Counters
S50:                           ;Wheel enable Accounted for
  MOV  W EnableWheelCounter,DX ;Store Counters for next time
  MOV  SampleRateCode,BH       ;If OK, store it
  PUSH AX                      ;Save AX for a second
  MOV  AL,BH                   ;Convert Sample Rate Code
  MOV  BX,SampleRateTable      ;  Code to a
  CALL SearchByteToWordTbl     ;  Periodicity factor (BH)
  POP  AX                      ;Restore AX
  JC  >S70                     ;Quit if error
  MOV  BL,BH                   ;If OK,
  CALL ChangePeriodicity       ;  Change Periodicity
  JMP >S80                     ;Done
S70:                           ;Error
  MOV  AH,Int15ErrInvalidInput ;Error = Invalid value in BH
  STC                          ;Set Error Flag
  JMP >S90                     ;Done
S80:                           ;No Error
;  XOR  AH,AH                   ;Error Code = None
  CLC                          ;Set OK flag
S90:                           ;Done
  POP  DX,BX                   ;Restore used registers
  RET

;------------------------------------------------------------------------------
;DO THE PS2 SET RESOLUTION FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AL = Original INT 15h Function Code (Set Resolution)
;         AH = 0
;         BH = Resolution Code
;              0 = 1 Counts/mm
;              1 = 2 Counts/mm
;              2 = 4 Counts/mm
;              3 = 8 Counts/mm
;         AL = Original Function Code (Set Resolution)
;Outputs: CF = Set if error
;              AH = Error Code (Invalid Input)
;            = Clear if OK
;              AH = Unchanged
;              Resolution changed as appropriate
;Changes:
;------------------------------------------------------------------------------
PS2SetResolution:
  CMP  BH,Resolution8          ;Is it a valid function code?
  JA  >R70                     ;If not, error
;  CALL DoPS2MouseFunction      ;If OK, pass on to PS2 Handler
  MOV  Resolution,BH           ;Store it
  JMP >R80                     ;Done
R70:                           ;Error
  MOV  AH,Int15ErrInvalidInput ;Error = Invalid value in BH
  STC                          ;Set Error Flag
  JMP >R90                     ;Done
R80:                           ;OK
  CLC                          ;Set OK Flag
R90:                           ;Done
  RET

;------------------------------------------------------------------------------
;DO THE PS2 GET DEVICE ID FUNCTION
;Inputs:  ES = TSR Data Area
;         AL = Original INT 15h Function Code (Get Device ID)
;         AH = 0
;Outputs: CF = Clear
;              BH = Device ID (DvcIDWheelNo, Wheel1Yes, or Wheel2Yes)
;Changes:
;------------------------------------------------------------------------------
PS2GetDeviceIDBH:
  MOV  BH,ES:DeviceID ;Set BH = Device ID
  CLC                 ;Set OK Flag
  RET

;------------------------------------------------------------------------------
;DO THE PS2 GET STATUS/EXTENDED COMMANDS FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         BH = 0 for Get Status
;            = 1 for Set 1:1 Scaling
;            = 2 for Set 2:1 Scaling
;         AL = Original INT 15h Function Code (Get Status)
;         AH = 0
;Outputs: CF = Set if error
;              AH = Error Code
;            = Clear if OK
;              AH = Unchanged
;              Appropriate Function performed
;              If Get Status:
;                BL = Enabled, Scaling, Buttons 1-3
;                CL = Resolution
;                DL = Sampling Rate
;Changes:
;NOTES: If Function = Get Status, does not pass on to PS2 Handler.
;       If Function = Set Scaling, does pass on to PS2 Handler.
;------------------------------------------------------------------------------
PS2GetStatus:
  PUSH SI                            ;Save used registers
  CMP  BH,2                          ;Is it a valid subfunction?
  JA  >E70                           ;If not, error
  JE  >E40                           ;If function 2 (Set 2:1 Scaling), handle it
  OR   BH,BH                         ;Is it function 1 (Set 1:1 Scaling)?
  JNZ >E30                           ;If so, handle it
E10:                                 ;Function 0 (Get Status)
  CALL CalcStatus                    ;Calculate correct status (Returns BL)
  MOV  CL,Resolution                 ;Get Resolution
  CALL CalcSampleRate                ;Calculate the Sample Rate (Returns DL)
  JMP >E80                           ;Done
E30:                                 ;Set Scaling Factor to 1:1
;  CALL DoPS2MouseFunction            ;Pass on to PS2 Handler
  AND  TSRFlags,(NOT ScalingFactor2) ;Set Scaling Factor at 1:1
  JMP >E80                           ;Done
E40:                                 ;Set Scaling Factor at 2:1
;  CALL DoPS2MouseFunction            ;Pass on to PS2 Handler
  OR   TSRFlags,ScalingFactor2       ;Set Scaling Factor at 2:1
  JMP >E80                           ;Done
E70:                                 ;Error
  MOV  AH,Int15ErrInvalidInput       ;Error Code
  STC                                ;Error Flag
  JMP >E90                           ;Done
E80:                                 ;OK
  CLC                                ;Set OK Flag
E90:                                 ;Done
  POP  SI                            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;DO THE PS2 SET HANDLER ADDRESS FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AL = Original INT 15h Function Code (Set Handler Address)
;         AH = 0
;         BP:BX = New Far Call Address (0 if resetting)
;Outputs: CF = Set if error
;              AH = Error Code
;            = Clear if OK
;              New Device Address Stored
;Changes:
;NOTES: If Handler is already Disabled (0), it is an Error to Disable it
;       If Set, it is an Error to Set it Again
;------------------------------------------------------------------------------
PS2SetHandlerAddress:
  OR   BP,BP                      ;Are we resetting the Address?
  JZ  >H30                        ;If so, handle it
  CMP  W MouseUserFarCall[2],0    ;If not, is it currently 0 (Disabled)?
  JNE >H70                        ;If not, error
  JMP >H50                        ;If so, it's OK
H30:                              ;Resetting
  OR   BX,BX                      ;Is the Offset also 0?
  JNZ >H70                        ;If not, error
  CMP  W MouseUserFarCall[2],0    ;Is it already 0?
  JE  >H70                        ;If so, there's an error
H50:                              ;OK to store it
  MOV  W MouseUserFarCall[2],BP   ;Store Far Call Segment
  MOV  W MouseUserFarCall[0],BX   ;Store Far Call Offset
  JMP >H80                        ;Done
H70:                              ;Error
  MOV  AH,Int15ErrNoDeviceHandler ;Error Code
  STC                             ;Error flag
  JMP >H90                        ;Done
H80:                              ;OK
  CLC                             ;Set OK Flag
H90:                              ;Done
  RET

;------------------------------------------------------------------------------
;DO THE PS2 GET HANDLER ADDRESS FUNCTION
;Inputs:  DS = ES = TSR Data Area
;         AL = Original INT 15h Function Code (Get Handler Address)
;         AH = 0
;Outputs: CF = Clear
;              CX:DX = Handler Address
;Changes:
;------------------------------------------------------------------------------
PS2GetHandlerAddress:
  MOV  CX,W MouseUserFarCall[2] ;CX = Far Call Segment
  MOV  DX,W MouseUserFarCall[0] ;DX = Far Call Offset
  CLC                           ;Set OK Flag
  RET

