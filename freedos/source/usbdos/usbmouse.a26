;==============================================================================
;CMOS-Related (for handling IRQ 8 / INT 70h)
;==============================================================================
  ;NMIDisable    EQU  80h ;1 = Disable NMI (add to CMOSPortx when reading Port)
  CMOSPortA     EQU  0Ah ;CMOS RTC Status Byte A Address (Read-Write)
    ;Bit   7 = Time Update Cycle in Progress, Data Outputs Undefined (Read-Only)
    ;    6-4 = 22 Stage Divider
    ;          010 = Default = 32768 Hz Time Base
    ;    3-0 = Rate selection for Periodic Interrupt
    ;          0011 = 122 æs Period (8192 Hz Minimum)
    ;          0110 = 976.562 ms Period (1024 Hz Default)
    ;          1111 = 500 ms Period (2 Hz Maximum)
    Period0002  EQU  2Fh ;Byte to send for    2 Interrupts/Second
    Period0004  EQU  2Eh ;Byte to send for    4 Interrupts/Second
    Period0008  EQU  2Dh ;Byte to send for    8 Interrupts/Second
    Period0016  EQU  2Ch ;Byte to send for   16 Interrupts/Second
    Period0032  EQU  2Bh ;Byte to send for   32 Interrupts/Second
    Period0064  EQU  2Ah ;Byte to send for   64 Interrupts/Second
    Period0128  EQU  29h ;Byte to send for  128 Interrupts/Second
    Period0256  EQU  28h ;Byte to send for  256 Interrupts/Second
    Period0512  EQU  27h ;Byte to send for  512 Interrupts/Second
    Period1024  EQU  26h ;Byte to send for 1024 Interrupts/Second (Default)
    Period2048  EQU  25h ;Byte to send for 2048 Interrupts/Second
    Period4096  EQU  24h ;Byte to send for 4096 Interrupts/Second
    Period8192  EQU  23h ;Byte to send for 8192 Interrupts/Second
  CMOSPortB     EQU  0Bh ;CMOS RTC Status Byte A Address (Read-Write)
    ;Bit 7 = Enable Clock Setting by Freezing Updates
    ;    6 = Enable Periodic Interrupt
    ;    5 = Enable Alarm Interrupt
    ;    4 = Enable Update-Ended Interrupt
    ;    3 = Enable Square-Wave Output
    ;    2 = Data Mode: 0 = BCD, 1 = Binary
    ;    1 = Hour Mode: 0 = 12-Hour Mode, 1 = 24-Hour Mode
    ;    0 = Daylight Savings Enable
    PeriodicInt EQU  40h ;Bit Mask for RTC Periodic Interrupt
    ;IntMasks    EQU 0F1h ;Bit Mask for all Interrupt Enables
  CMOSPortC     EQU  0Ch ;CMOS RTC Status Byte C Address (Read-Only)
    ;Bit   7 = Interrupt Request Flag
    ;          1 when any or all of bits 6-4 are 1 and appropriate bits in
    ;            Port B are Enabled.  Generates IRQ 8 (Int 70h) when triggered.
    ;      6 = Periodic Interrupt Flag
    ;      5 = Alarm Interrupt Flag
    ;      4 = Update-Ended Interrupt Flag
    ;    3-0 = Unused
  CMOSPortD     EQU  0Dh ;CMOS RTC Status Byte D Address (Read-Only)
    ;Bit   7 = Battery Good (0 = Battery Dead or Disconnected)
    ;    6-0 = Unused


;==============================================================================
;PS2 Port BIOS Functions Related (Int 11h and Int 15h)
;==============================================================================

  ;----------------------------------------------------------------------------
  ;Int 11h
  ;----------------------------------------------------------------------------
  Int11PS2Installed EQU 4 ;Bit mask for PS2 Port installed from Int 11

  ;----------------------------------------------------------------------------
  ;Int 15h Call Function (in AH)
  ;----------------------------------------------------------------------------
  Int15PS2PortCall EQU 0C2h ;PS2 Mouse Function

  ;----------------------------------------------------------------------------
  ;Int 15h Call SubFunctions (in AL)
  ;----------------------------------------------------------------------------
  I15ALEnableDisable EQU  0 ;Enable/Disable
  I15ALReset         EQU  1 ;Reset
  I15ALSetSampling   EQU  2 ;Set Sampling Rate
  I15ALSetResolution EQU  3 ;Set Resolution
  I15ALGetDeviceID   EQU  4 ;Get Device ID
  I15ALInitialize    EQU  5 ;Initialize
  I15ALStatusScaling EQU  6 ;Get Status/Set Scaling
  I15ALSetHandler    EQU  7 ;Set Handler Address
  I15ALWriteData     EQU  8 ;Write (1 byte) of Data to Pointing Device Port
  I15ALReadData      EQU  9 ;Read (3 bytes) of Data from Pointing Device Port
  I15ALGetHandler    EQU 10 ;Get Handler Address

  ;----------------------------------------------------------------------------
  ;Error Codes Returned by Int 15h PS2 Port Functions
  ;----------------------------------------------------------------------------
  Int15ErrNone            EQU 0 ;No Error
  Int15ErrInvalidFunction EQU 1 ;Invalid Function Number
  Int15ErrInvalidInput    EQU 2 ;Invalid Input Value
  Int15ErrInterfaceError  EQU 3 ;Interface Error
  Int15ErrNeedToResend    EQU 4 ;Resend Request
  Int15ErrNoDeviceHandler EQU 5 ;No Device Handler in Place

  ;----------------------------------------------------------------------------
  ;Device Types & IDs returned by Int 15h when a Mouse is attached
  ;----------------------------------------------------------------------------
  DvcTypeMouse   EQU 0AAh ;Device Type returned by a standard mouse
  DvcIDWheelNo   EQU   0  ;Device ID if Mouse does NOT have a Wheel
  DvcIDWheel1Yes EQU   3  ;Device ID if Mouse DOES have a Wheel
  DvcIDWheel2Yes EQU   4  ;Device ID if Mouse has 2 Wheels and/or 5 Buttons

  ;----------------------------------------------------------------------------
  ;Bit masks for Data returned by Int 15h Get PS2 Status Function
  ;----------------------------------------------------------------------------
  StatusRBtn       EQU 01h ;Right Button Pressed
  StatusCBtn       EQU 02h ;Center Button Pressed
  StatusLBtn       EQU 04h ;Left Button Pressed
   ;Bit 3 = Reserved (0)
  StatusScaling2   EQU 10h ;Scaling = 2:1 (as opposed to 1:1)
  StatusEnabled    EQU 20h ;Enabled
  StatusRemoteMode EQU 40h ;Remote Mode (as opposed to Stream Mode)
   ;Bit 7 = Reserved (0)

  ;----------------------------------------------------------------------------
  ;Bit masks for Int 15h Set Sample Rate Function
  ;----------------------------------------------------------------------------
  SampleCode010 EQU 0 ; 10 samples/second
  SampleCode020 EQU 1 ; 20 samples/second
  SampleCode040 EQU 2 ; 40 samples/second
  SampleCode060 EQU 3 ; 60 samples/second
  SampleCode080 EQU 4 ; 80 samples/second
  SampleCode100 EQU 5 ;100 samples/second (default)
  SampleCode200 EQU 6 ;200 samples/second

  DefaultPeriodicity EQU  10 ;Default Periodicity = 10
                             ;  (100 samples/sec on the 1000 Hz USB Int)

  ;----------------------------------------------------------------------------
  ;Bit masks for Int 15 Set Resolution Function
  ;----------------------------------------------------------------------------
  Resolution1 EQU 0 ;1 Count/mm
  Resolution2 EQU 1 ;2 Counts/mm
  Resolution4 EQU 2 ;4 Counts/mm (default)
  Resolution8 EQU 3 ;8 Counts/mm

  ;----------------------------------------------------------------------------
  ;Bit masks for buttons in "raw" data (first byte of data returned by Mouse)
  ;----------------------------------------------------------------------------
  RawLBtn     EQU 01h ;Left Button
  RawRBtn     EQU 02h ;Right Button
  RawCBtn     EQU 04h ;Center/Middle Button
  RawAll3Btns EQU RawLBtn+RawRBtn+RawCBtn ;All Buttons combined
  RawAll5Btns EQU 1Fh ;All 5 buttons (as returned by USB Device

  ;----------------------------------------------------------------------------
  ;Number of buttons allowed before we'll consider it legitimate
  ;----------------------------------------------------------------------------
  MinButtons EQU 1 ;Minimum number of buttons allowed
;  MaxButtons EQU 8 ;Maximum number of buttons allowed

  ;----------------------------------------------------------------------------
  ;Special Bit masks for Status Byte returned by User Far Call
  ;----------------------------------------------------------------------------
  HandlerXNeg EQU 10h ;X Data is Negative
  HandlerYNeg EQU 20h ;Y Data is Negative

  ;----------------------------------------------------------------------------
  ;Bit masks  (in third data byte) for mouse buttons 4, 5, and the Wheel(s).
  ;  These only apply if the IntelliMouse2 Protocol is enabled.
  ;----------------------------------------------------------------------------
  Btn4Mask    EQU 10h ;Button 4 is pressed
  Btn5Mask    EQU 20h ;Button 5 is pressed
  Wheel1Up    EQU 0Fh ;Wheel 1 (Vertical) has been moved up (-1)
  Wheel1Down  EQU 01h ;Wheel 1 (Vertical) has been moved down (+1)
  Wheel2Left  EQU 0Eh ;Wheel 2 (Horizontal) has been moved Left (-2)
  Wheel2Right EQU 02h ;Wheel 2 (Horizontal) has been moved Right (+2)
  WheelsMask  EQU 0Fh ;Mask needed if PS2 Mouse has single wheel, but
                      ;  IntelliMouse2 Protocol is enabled

  ;----------------------------------------------------------------------------
  ;Location on Stack, relative to Button data, where X/Y/Z Data is stored.
  ;We intercept the PS2 call coming from the BIOS (with the Mouse Data on
  ;  the stack) and "translate" it so that it matches what the
  ;  DOS Mouse Driver is expecting to see.  Our Driver suports the highest
  ;  level Driver that the DOS Mouse Driver supports, even if there is
  ;  no Mouse Hardware that matches the protocol.  This means we need to
  ;  modify the data on the stack as it comes from the BIOS and create
  ;  our own stack with the "transformed" data.
  ;----------------------------------------------------------------------------
  StackXNoWheel EQU -2 ;X Data Location if there is no Wheel
  StackYNoWheel EQU -4 ;Y Data Location if there is no Wheel
  StackXWheel   EQU  1 ;X Data Location if there is a Wheel
  StackYWheel   EQU -2 ;Y Data Location if there is a Wheel
  StackZWheel   EQU -4 ;Z Data Location (only applies if there is a Wheel)


;==============================================================================
;Mouse Related
;==============================================================================

  ;----------------------------------------------------------------------------
  ;Number of Mouse Data Bytes we can store in our Buffer
  ;Should be a nmultiple of 12, since we store them in groups of
  ;  3 or 4 at a time.  It may need to store the data from several
  ;  mice at a time.
  ;----------------------------------------------------------------------------
  BufferSize EQU 60

  ;----------------------------------------------------------------------------
  ;Port 64h (Keyboard Controller) Bit Masks
  ;----------------------------------------------------------------------------
  P64OutBuffFull   EQU 01h ;Output Buffer Full (Port 60 has data for system)
  P64InBuffFull    EQU 02h ;Input Buffer Full (Port 60/64 has data for Kbd)
  P64SelfTestOK    EQU 04h ;Self-Test OK
  P64DataIsCommand EQU 08h ;Data is Command (Port 64h), not Data (Port 60h)
  P64KbdInhibit    EQU 10h ;Keyboard Locked/Inhibited
  P64TxTimeout     EQU 20h ;Transmit Timeout
  P64RxTimeout     EQU 40h ;Receive Timeout
  P64ParityError   EQU 80h ;Parity Error

  ;----------------------------------------------------------------------------
  ;Values to write to Port 64h, followed by reading/writing the KCCB
  ;  (Keyboard Controller Command Byte) from Port 60h.
  ;----------------------------------------------------------------------------
  KCCBRead  EQU 20h ;Tells Controller to place KCCB in Port 60h to Read
  KCCBWrite EQU 60h ;Tells Controller to read KCCB byte from Port 60h


