;CODE NEEDED TO STORE AND GET THINGS FROM THE CIRCULAR BUFFER
;±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±±

;-----------------------------------------------------------------------------
;PUT A BYTE AT THE END OF THE CIRCULAR BUFFER
;Inputs:  DS = ES = TSR Data Area
;         BufferHead, BufferTail = Head and Tail of the circular buffer
;         AL = Byte to put in the Buffer
;Outputs: Adds a Byte to the end of the Buffer
;         CF = Clear if it worked OK
;            = Set if it didn't work
;Changes: BufferTail, BufferCount
;-----------------------------------------------------------------------------
PutBufferAL:
  PUSH DI            ;Save used registers
  CLI                ;Disable interrupts
  CMP  BufferCount,BufferSize ;Is the buffer already full
  JAE >P70           ;If so, Error
  MOV  DI,BufferTail ;If OK, get the buffer Tail
  INC  DI            ;Point at the next space in the buffer
  CMP  DI,BufferEnd  ;Will this put us past the end of the Buffer?
  JBE >P20           ;If not, our pointer is OK
  MOV  DI,Buffer     ;If so, point at the beginning of buffer
P20:                 ;Buffer Pointer is correct
  MOV  [DI],AL       ;Store the code
  MOV  BufferTail,DI ;Store the new Tail
  INC  BufferCount   ;Increment the counter
  JMP >P80           ;Done
P70:                 ;The buffer is already full
  STC                ;Set the "buffer is full" flag
  JMP >P90           ;We're done
P80:                 ;It worked OK
  CLC                ;Set the "it worked" flag
P90:                 ;We're done
  STI                ;Enable interrupts
  POP  DI            ;Restore used registers
  RET

;-----------------------------------------------------------------------------
;GET A BYTE FROM THE BEGINNING OF THE CIRCULAR BUFFER
;Inputs:  DS = ES = TSR Data Area
;         BufferHead, BufferTail = Head and Tail of the circular buffer
;Outputs: Gets the next Byte from the buffer
;         BL = Byte from the buffer
;         CF = Clear if it worked OK
;            = Set if it didn't work
;Changes: BufferHead (if there is anything in the buffer)
;-----------------------------------------------------------------------------
GetBufferBL:
  PUSH DI            ;Save used registers
  CLI                ;Disable interrupts
  CMP  BufferCount,0 ;Does the buffer have anything in it?
  JE  >G70           ;If not, Error
  MOV  DI,BufferHead ;If so, point at the buffer Head
  MOV  BL,[DI]       ;Get the Code
  INC  DI            ;Point at the next space in our buffer
  CMP  DI,BufferEnd  ;Will this put us past the end of the Buffer?
  JBE >G10           ;If not, our pointer is OK
  MOV  DI,Buffer     ;If so, point at the beginning of the Buffer
G10:                 ;Buffer Pointer is OK
  MOV  BufferHead,DI ;Store the new Head
  DEC  BufferCount   ;Decrement the counter
  JMP >G80           ;Done
G70:                 ;The buffer is empty
  STC                ;Set the "buffer was empty" flag
  JMP >G90           ;We're done
G80:                 ;There's a scan code in AL
  CLC                ;Set the "it worked" flag
G90:                 ;We're done
  STI                ;Enable interrupts
  POP  DI            ;Restore used registers
  RET

;------------------------------------------------------------------------------
;SEND THE BYTES THAT ARE IN THE BUFFER
;Inputs:  DS = ES = TSR Data Area
;         Buffer
;Outputs:
;Changes: Sends the Code(s) using Hardware Emulation
;------------------------------------------------------------------------------
SendCodes:
  PUSH AX,BX               ;Save used registers
  CMP  BufferCount,0       ;Any codes to send?
  JE  >S95                 ;If not, quit
;  MOV  AL,9                ;Point INT 09 at
;  MOV  BX,OFFSET Int09Vect ;  our Code that
;  CALL SwapIntVect         ;  doesn't do anything

  CALL DisableKeybIRQ      ;Disable the Keyboard IRQ
  CMP  Method,1            ;Using Method 1?
  JE  >S10                 ;If so, we need the Mouse IRQ Enabled
  CALL DisableMouseIRQ     ;If not, Disable the Mouse IRQ

S10:                       ;Loop to here for each Scan Code in buffer
  CALL GetBufferBL         ;Get Keystroke from Buffer (BL)
  JC  >S90                 ;If buffer is Empty, we're done
  CALL FakeIt              ;If OK, send the Code
  JMP  S10                 ;Keep looking for more codes
S90:                       ;Done, restore INT 09

  CALL EnableKeybIRQ       ;Enable the Keyboard IRQ
;  CMP  Method,1            ;Using Method 1?
;  JE  >S10                 ;If so, we didn't Disable the Mouse IRQ
  CALL EnableMouseIRQ      ;If not, Enable the Mouse IRQ



;  MOV  BX,OFFSET Int09Vect ;Restore INT 08 back
;  CALL SwapIntVect         ;  to its original setting
S95:                       ;Done
  POP  BX,AX               ;Restore used registers
  RET

