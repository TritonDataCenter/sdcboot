;  MOV  AH,BIOS17ScrLockA ;Mask to Test
;  JMP >L00               ;Do it
TestNumLock:
  PUSH AX                ;Save used registers
  MOV  AH,BIOS17NumLockA ;Mask to Test
;  JMP >L00               ;Do it
;TestCapsLock:
;  PUSH AX                ;Save used registers
;  MOV  AH,BIOS17CapLockA ;Mask to Test
